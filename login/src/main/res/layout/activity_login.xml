<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/login_aiv_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/black_aiv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/icon_back_black"
        android:layout_marginStart="18dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="40dp"
        />


    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/login_in_short"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_143dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/black_aiv"
        app:srcCompat="@mipmap/icon_splash_logo" />

    <com.ruffian.library.widget.RConstraintLayout
        android:id="@+id/sign_login"
        android:layout_width="@dimen/size_300dp"
        android:layout_height="@dimen/size_46dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login_in_short"
        android:layout_marginTop="116dp"
        app:corner_radius="22dp"
        app:background_normal="@color/color_DDDDDD"
        >

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/atv_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_Black"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@+id/google_logo_aiv"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:fontFamily="@font/sofia_pro_medium"
            android:text="@string/sign_login"
            android:layout_marginStart="@dimen/size_10dp"
            />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/google_logo_aiv"
            android:layout_width="@dimen/size_18dp"
            android:layout_height="@dimen/size_18dp"
            android:src="@mipmap/sign_login"
            app:layout_constraintBottom_toBottomOf="@+id/atv_tv"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="@dimen/size_62dp"
            />

    </com.ruffian.library.widget.RConstraintLayout>



        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/agreemen_atv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="40dp"
            android:textSize="12sp"
            android:gravity="center"
            android:textColor="@color/color_000000_60"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="18dp"
            android:fontFamily="@font/sofia_pro_medium"
            />









</androidx.constraintlayout.widget.ConstraintLayout>