<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">




    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rlv"
        android:layout_width="250dp"
        android:layout_height="@dimen/size_45dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tabSelectedTextColor="@color/color_Black"
        app:tabTextColor="@color/color_999999"
        android:layout_marginStart="18dp"
        android:layout_marginTop="10dp"/>

    <com.ruffian.library.widget.RTextView
        android:id="@+id/edit_tv"
        android:layout_width="@dimen/size_60dp"
        android:layout_height="@dimen/size_24dp"
        app:layout_constraintTop_toTopOf="@+id/rlv"
        app:layout_constraintBottom_toBottomOf="@+id/rlv"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="20dp"
        android:text="@string/edit"
        android:gravity="center"
        android:textColor="@color/color_999999"
        android:textSize="14sp"
        android:fontFamily="@font/sofia_pro_medium"
        app:corner_radius="12dp"
        app:background_normal="@color/color_F7F7F7"
        />


    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/rlv"
        app:layout_constraintBottom_toBottomOf="parent"
        />








</androidx.constraintlayout.widget.ConstraintLayout>