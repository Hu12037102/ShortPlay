<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="400dp"
        android:background="@drawable/coming_next_week_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <com.ruffian.library.widget.RImageView
            android:id="@+id/vertical_iv"
            android:layout_width="95dp"
            android:layout_height="126.67dp"
            android:layout_marginStart="18dp"
            android:layout_marginTop="32.67dp"
            app:corner_radius="6dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/announce_close_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="15dp"
            android:padding="5dp"
            android:src="@drawable/main_announce_dialog_closed"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/vertical_tv_content"
            android:layout_width="193.33dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="15.33dp"
            android:fontFamily="@font/sofiapro_bold"
            android:textColor="@color/white_ff"
            android:textSize="19sp"
            tools:text="OMG! Youâ€™re My Baby daddy"
            app:layout_constraintStart_toEndOf="@+id/vertical_iv"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="28dp"/>

        <TextView
            android:id="@+id/vertical_tv_flag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15.33dp"
            android:layout_marginTop="20dp"
            android:textColor="@color/color_999999"
            android:fontFamily="@font/sofiapro_medium"
            android:textSize="13sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constrainedWidth="true"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_marginEnd="10dp"
            app:layout_constraintHorizontal_bias="0"
            tools:text="Fake / Billionaire / CEOFake / Billionaire / CEOFake / Billionaire / CEOFake / Billionaire / CEO"
            app:layout_constraintStart_toEndOf="@+id/vertical_iv"
            app:layout_constraintTop_toBottomOf="@+id/vertical_tv_content" />

        <TextView
            android:id="@+id/time_tv"
            android:layout_width="wrap_content"
            android:minWidth="118dp"
            android:layout_height="20dp"
            android:layout_marginStart="15.33dp"
            android:background="@drawable/main_shape_time_tv_bg"
            android:fontFamily="@font/sofiapro_medium"
            android:textColor="@color/white_ff"
            android:paddingStart="7dp"
            android:textSize="13sp"
            tools:text="Launch on 16 Dec"
            app:layout_constraintBottom_toBottomOf="@+id/vertical_iv"
            app:layout_constraintStart_toEndOf="@+id/vertical_iv" />
        
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_subscribe"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            app:layout_constraintTop_toBottomOf="@id/vertical_iv"
            android:layout_marginTop="20dp"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="18dp">
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/aiv_subscribe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/home_episode_subscribe"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/atv_subscribe"
                app:layout_constraintHorizontal_chainStyle="packed"
                android:layout_marginEnd="6dp"

                />
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/atv_subscribe"
                android:text="@string/remind_me"
                android:textColor="@color/white"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/aiv_subscribe"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="6dp"
                />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/vertical_tv_introduce"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="18dp"
            android:fontFamily="@font/sofiapro_medium"
            android:textColor="@color/color_999999"
            android:textSize="14sp"
            android:maxLines="8"
            android:ellipsize="end"
            android:lineSpacingExtra="5dp"
            tools:text="asdasdsadasdasdsadasdsadasdasdasdasdasdasdasdasdasdasdasdasdasdasdasd"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cl_subscribe"
            android:paddingBottom="10dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>