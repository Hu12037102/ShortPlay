<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:ignore="MissingDefaultResource">



    <com.ruffian.library.widget.RRelativeLayout
        android:layout_width="283dp"
        android:layout_height="349dp"
        app:background_normal="@color/black_22"
        app:corner_radius="6dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">



        <TextView
            android:id="@+id/content_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:textSize="17sp"
            android:layout_marginStart="17dp"
            android:layout_marginEnd="25dp"
            android:textColor="@color/white"
            android:gravity="left"
            android:text="@string/log_account"
            android:fontFamily="@font/sofiapro_medium" />



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/stayinglogo"
            android:layout_marginStart="20dp"
            android:layout_marginTop="101dp"
            android:text="@string/exit_google_login_content_1"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:drawablePadding="5dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="130dp">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/marker_icon"
                android:layout_marginStart="2dp"
                android:layout_marginTop="5dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="@string/exit_google_login_content_2"
                android:textColor="@color/white_ff_99"
                android:textSize="14sp"

                />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="170dp">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/marker_icon"
                android:layout_marginStart="2dp"
                android:layout_marginTop="5dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="@string/exit_google_login_content_3"
                android:textColor="@color/white_ff_99"
                android:textSize="14sp"

                />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="210dp">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/marker_icon"
                android:layout_marginStart="2dp"
                android:layout_marginTop="5dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="@string/exit_google_login_content_4"
                android:textColor="@color/white_ff_99"
                android:textSize="14sp"
                />


        </LinearLayout>





        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/white_10"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="48dp"
            />

        <View
            android:id="@+id/view"
            android:layout_width="1dp"
            android:layout_height="48dp"
            android:background="@color/white_10"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            />



        <TextView
            android:id="@+id/cancel"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:text="@string/confirm"
            android:gravity="center"
            android:layout_alignParentBottom="true"
            android:layout_toStartOf="@+id/view"
            android:textSize="15sp"
            android:textColor="@color/white_ff_99"
            android:fontFamily="@font/sofiapro_medium"
            />


        <RelativeLayout
            android:id="@+id/remove"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:layout_toEndOf="@+id/view"
            android:layout_alignParentBottom="true">

            <com.ruffian.library.widget.RTextView
                android:id="@+id/confirm"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:text="@string/cancel_text"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:layout_marginStart="18dp"
                android:layout_marginEnd="18dp"
                android:layout_centerHorizontal="true"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:fontFamily="@font/sofiapro_medium"
                app:background_normal="@array/array_l_r"
                app:corner_radius="20dp"
                />

        </RelativeLayout>





    </com.ruffian.library.widget.RRelativeLayout>











</androidx.constraintlayout.widget.ConstraintLayout>