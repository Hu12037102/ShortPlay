<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="22dp"
    android:layout_marginEnd="22dp"
    android:minHeight="240dp">

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        app:srcCompat="@drawable/release_reminder_background"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/atv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:drawablePadding="5dp"
        android:text="@string/release_reminder_text"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:drawableEndCompat="@drawable/common_right_logo"
        app:drawableStartCompat="@drawable/common_left_logo"
        app:fontFamily="@font/sofiapro_medium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/atv_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="20dp"
        android:lineSpacingExtra="2dp"
        android:text="@string/release_reminder_desc_text"
        android:textColor="@color/black_22"
        android:textSize="16sp"
        app:fontFamily="@font/sofiapro_medium"
        app:layout_constraintTop_toBottomOf="@id/atv_title" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/atv_cancel"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginTop="26dp"
        android:gravity="center"
        android:minWidth="100dp"
        android:text="@string/cancel_text"
        android:textColor="@color/red_056"
        android:textSize="16sp"
        app:fontFamily="@font/sofiapro_medium"
        app:layout_constraintStart_toStartOf="@id/atv_desc"
        app:layout_constraintTop_toBottomOf="@id/atv_desc" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/atv_turn_on"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:gravity="center"
        android:minWidth="160dp"
        android:text="@string/turn_on_text"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:fontFamily="@font/sofiapro_medium"
        app:layout_constraintEnd_toEndOf="@id/atv_desc"
        app:layout_constraintTop_toTopOf="@id/atv_cancel" />


</androidx.constraintlayout.widget.ConstraintLayout>