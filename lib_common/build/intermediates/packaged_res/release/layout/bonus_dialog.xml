<?xml version="1.0" encoding="utf-8"?>
<com.ruffian.library.widget.RRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="125dp"
    android:layout_height="125dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    app:background_normal="@color/black_22"
    app:corner_radius="13dp"
    tools:ignore="MissingDefaultResource">

        
        <ImageView
            android:layout_width="47dp"
            android:layout_height="42dp"
            android:src="@drawable/app_bonus_logo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="24dp"
            />


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="73dp"
            android:layout_centerHorizontal="true">


                <TextView
                    android:id="@+id/bonus_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="24sp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/sofiapro_bold"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/bonus_tv"
                    android:textSize="16sp"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="7dp"
                    android:textColor="@color/white"
                    android:text="@string/me_bonus"
                    android:fontFamily="@font/sofiapro_bold"
                    />

        </RelativeLayout>




</com.ruffian.library.widget.RRelativeLayout>