<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_gravity="center"
    android:layout_height="470dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="417dp"
        android:background="@drawable/daily_check_logo">


        <ImageView
            android:id="@+id/check_iv"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="11dp"
            android:layout_marginEnd="15dp"
            android:layout_alignParentEnd="true"
            android:src="@drawable/doubt_logo"
            />

        <TextView
            android:id="@+id/signed_in_tv"
            android:layout_width="204dp"
            android:layout_height="14dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="115dp"
            android:textSize="10sp"
            android:textColor="@color/black_80" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/daily_check_rl"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginTop="147dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="10dp"
            />

        <com.ruffian.library.widget.RTextView
            android:id="@+id/check_tv"
            android:layout_width="210dp"
            android:layout_height="40dp"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:corner_radius="20dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="25dp"
            android:gravity="center"

            />
    </RelativeLayout>

    <ImageView
        android:id="@+id/close_iv"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/bonus_close_logo"
        />
    
    
    <View
        android:layout_width="1dp"
        android:layout_height="21dp"
        android:background="@color/white"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        />
    
</RelativeLayout>