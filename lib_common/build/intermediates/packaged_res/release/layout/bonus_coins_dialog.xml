<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="310dp"
    android:layout_height="364dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:background="@drawable/bonus_coins_logo"
    tools:ignore="MissingDefaultResource">

        <ImageView
            android:layout_width="62dp"
            android:layout_height="55dp"
            android:src="@drawable/coins_new_logo"
            android:layout_marginTop="48dp"
            android:layout_marginStart="38dp"
            />

        <TextView
            android:id="@+id/coins_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+100K"
            android:textSize="40sp"
            android:textColor="@color/red_056"
            android:fontFamily="@font/sofiapro_bold"
            android:layout_marginTop="42dp"
            android:layout_marginStart="100dp"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/coins_tv"
            android:text="@string/play_coins"
            android:textSize="20sp"
            android:textColor="@color/color_8b2c00"
            android:fontFamily="@font/sofiapro_bold"
            android:layout_marginTop="65dp"
            android:layout_marginStart="5dp"
            />


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:src="@drawable/link_logo"
            android:layout_marginTop="125dp"
            android:layout_centerHorizontal="true"
            />

        <ImageView
            android:layout_width="62dp"
            android:layout_height="55dp"
            android:src="@drawable/bonus_new_logo"
            android:layout_marginTop="149dp"
            android:layout_marginStart="38dp"
            />

        <TextView
            android:id="@+id/bonus_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+99"
            android:textSize="40sp"
            android:textColor="@color/red_056"
            android:fontFamily="@font/sofiapro_bold"
            android:layout_marginTop="140dp"
            android:layout_marginStart="100dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/bonus_tv"
            android:text="@string/me_bonus"
            android:textSize="20sp"
            android:textColor="@color/color_8b2c00"
            android:fontFamily="@font/sofiapro_bold"
            android:layout_marginTop="163dp"
            android:layout_marginStart="5dp"
            />


        <com.ruffian.library.widget.RTextView
            android:layout_width="230dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="260dp"
            app:corner_radius="20dp"
            app:background_normal="@color/white"
            android:text="@string/play_ok"
            android:fontFamily="@font/sofiapro_medium"
            android:textSize="20sp"
            android:gravity="center"
            android:textColor="@color/black_00"
            android:id="@+id/rtv_ok"
            />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:layout_marginBottom="35dp">

                <TextView
                    android:id="@+id/bonus_expired"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:text="@string/bonus_expired"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:textColor="@color/white"
                    />
                <TextView
                    android:id="@+id/bonus_expired_num"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:text="5"
                    android:textSize="15sp"
                    android:layout_toEndOf="@+id/bonus_expired"
                    android:textColor="@color/color_fdea71"
                    android:paddingStart="2dp"
                    android:paddingEnd="2dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:text="@string/bonus_expired_days"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:layout_toEndOf="@+id/bonus_expired_num"
                    android:textColor="@color/white"
                    />

        </RelativeLayout>



</RelativeLayout>