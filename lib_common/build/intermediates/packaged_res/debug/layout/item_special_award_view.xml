<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="18dp"
    android:layout_marginEnd="18dp"
    android:background="@drawable/special_award_cheer_background"
    android:layout_marginTop="10dp"
    android:minHeight="70dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    >

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/atv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:drawablePadding="5dp"
        android:text="@string/congrats"
        android:textColor="@color/black"
        android:textSize="17sp"
        app:drawableStartCompat="@drawable/special_award_cheer"
        app:fontFamily="@font/sofiapro_bold"
        app:layout_constrainedWidth="true"
        app:layout_constraintBottom_toTopOf="@id/atv_desc"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/atv_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="2dp"
        android:textColor="@color/black_22"
        android:textSize="14sp"
        app:fontFamily="@font/sofiapro_medium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/atv_title"
        tools:text="kjdkaj." />

</androidx.constraintlayout.widget.ConstraintLayout>