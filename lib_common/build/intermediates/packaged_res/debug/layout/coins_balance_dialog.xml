<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="301dp"
    android:layout_height="364dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:background="@drawable/bonus_coins_logo"
    tools:ignore="MissingDefaultResource">

        <ImageView
            android:layout_width="97dp"
            android:layout_height="86dp"
            android:src="@drawable/coins_new_logo"
            android:layout_marginTop="57dp"
            android:layout_centerHorizontal="true"
            />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="151dp"
            android:layout_centerHorizontal="true">

                <TextView
                    android:id="@+id/bonus_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="44sp"
                    android:textColor="@color/red_056"
                    android:fontFamily="@font/sofiapro_bold"
                    android:text="+150"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/bonus_tv"
                    android:textSize="20sp"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="27dp"
                    android:textColor="@color/color_8b2c00"
                    android:text="@string/play_coins"
                    android:fontFamily="@font/sofiapro_bold"
                    />

        </RelativeLayout>

        <com.ruffian.library.widget.RTextView
            android:id="@+id/rtv_ok"
            android:layout_width="230dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="260dp"
            app:corner_radius="20dp"
            app:background_normal="@color/white"
            android:text="@string/play_ok"
            android:fontFamily="@font/sofiapro_medium"
            android:textSize="20sp"
            android:gravity="center"
            android:textColor="@color/black_00"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="35dp"
            android:text="@string/coins_has"
            android:textSize="12sp"
            android:textColor="@color/white"

            />

</RelativeLayout>