<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="229dp"
    android:layout_height="99dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/shape_flash_christmas_money_bg">

    <ImageView
        android:id="@+id/iv_coins"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/flash_coins_play_logo"
        android:layout_marginStart="42.33dp"
        android:layout_marginTop="9.33dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />
    <View
        android:id="@+id/view_line"
        android:layout_width="1dp"
        android:layout_height="20dp"
        android:background="@color/white_ff"
        android:layout_marginTop="16.67dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <ImageView
        android:id="@+id/iv_bonus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/flash_bonus_momey_logo"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="43.67dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <TextView
        android:id="@+id/tv_coins"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="1000"
        android:textColor="@color/color_ff00"
        android:textSize="24sp"
        android:fontFamily="@font/arialblack"
        app:layout_constraintTop_toBottomOf="@+id/iv_coins"
        app:layout_constraintStart_toStartOf="@+id/iv_coins"
        app:layout_constraintEnd_toEndOf="@+id/iv_coins"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+"
        android:textSize="20sp"
        android:textColor="@color/white_ff"
        android:fontFamily="@font/arialblack"
        android:layout_marginTop="3.33dp"
        app:layout_constraintTop_toBottomOf="@+id/view_line"
        app:layout_constraintStart_toStartOf="@+id/view_line"
        app:layout_constraintEnd_toEndOf="@+id/view_line"
        />

    <TextView
        android:id="@+id/tv_bonus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="1000"
        android:textSize="24sp"
        android:textColor="@color/color_ff00"
        android:fontFamily="@font/arialblack"
        android:layout_marginTop="1dp"
        app:layout_constraintTop_toBottomOf="@+id/iv_bonus"
        app:layout_constraintStart_toStartOf="@+id/iv_bonus"
        app:layout_constraintEnd_toEndOf="@+id/iv_bonus"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/play_coins"
        android:textColor="@color/orange_b8"
        android:textSize="14sp"
        android:fontFamily="@font/sofiapro_bold"
        app:layout_constraintTop_toBottomOf="@+id/tv_coins"
        app:layout_constraintStart_toStartOf="@+id/tv_coins"
        app:layout_constraintEnd_toEndOf="@+id/tv_coins"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/me_bonus"
        android:textColor="@color/orange_b8"
        android:textSize="14sp"
        android:fontFamily="@font/sofiapro_bold"
        app:layout_constraintTop_toBottomOf="@+id/tv_bonus"
        app:layout_constraintStart_toStartOf="@+id/tv_bonus"
        app:layout_constraintEnd_toEndOf="@+id/tv_bonus"
        />

</androidx.constraintlayout.widget.ConstraintLayout>