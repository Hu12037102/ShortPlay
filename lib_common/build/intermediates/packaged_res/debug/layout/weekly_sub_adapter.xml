<?xml version="1.0" encoding="utf-8"?>
<com.ruffian.library.widget.RRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:corner_radius="6dp"
    android:layout_marginBottom="7dp"
    android:id="@+id/rll_sub"
    app:background_normal="@color/white">


    <com.ruffian.library.widget.RTextView
        android:id="@+id/claim_index_tv"
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:paddingStart="14dp"
        android:textColor="@color/color_6E2911"
        android:textSize="13sp"
        app:corner_radius_top_left="6dp"
        app:corner_radius_bottom_left="6dp"
        android:gravity="center_vertical"
        android:fontFamily="@font/sofiapro_medium"
        tools:ignore="RtlSymmetry" />

    <TextView
        android:id="@+id/bonus_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="72dp"
        android:textColor="@color/color_6E2911"
        android:textSize="16sp"
        android:drawableStart="@drawable/app_bonus_logo"
        android:gravity="center"
        android:drawablePadding="3dp"
        android:fontFamily="@font/sofiapro_medium"
        />
    <ImageView
        android:id="@+id/checkIn_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="35dp"
        android:visibility="gone"
        android:src="@drawable/watch_ad_done"
        />

    <com.ruffian.library.widget.RTextView
        android:id="@+id/claim_tv"
        android:layout_width="70dp"
        android:layout_height="30dp"
        android:text="@string/claim"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:fontFamily="@font/sofiapro_medium"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="10dp"
        app:corner_radius="16dp"
        app:background_normal="@color/color_6E2911"
        android:gravity="center" />



    <ImageView
        android:id="@+id/hand_iv"
        android:layout_width="51dp"
        android:layout_height="63dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="15dp"
        android:background="@drawable/finger_loading"
        android:visibility="gone"
        />

</com.ruffian.library.widget.RRelativeLayout>