<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <RelativeLayout
        android:id="@+id/rl_was"
        android:layout_width="wrap_content"
        android:layout_height="37dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >
        <ImageView
            android:id="@+id/was_tv"
            android:layout_width="41dp"
            android:layout_height="match_parent"
            android:fontFamily="@font/arialblack"
            android:layout_alignParentBottom="true"
            android:gravity="bottom"
            android:src="@drawable/main_was_christmas"
            />

        <com.example.lib_common.view.ObliqueStrikeTextView
            android:id="@+id/discount_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/arialblack"
            android:textSize="21.6sp"
            android:textColor="@color/color_ff00"
            android:layout_toEndOf="@+id/was_tv"
            android:layout_marginStart="5dp"
            android:shadowColor="@color/color_80000000"
            android:shadowDx="0"
            android:shadowDy="1"
            android:shadowRadius="5"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="11dp"
            />



    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        app:layout_constraintTop_toBottomOf="@+id/rl_was"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        >

        <ImageView
            android:id="@+id/ONLY_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="@font/arialblack"
            app:layout_constraintLeft_toLeftOf="parent"
            android:textColor="@color/white"
            android:gravity="bottom"
            android:src="@drawable/main_now_only_christmas"
            android:layout_alignParentBottom="true"/>

        <TextView
            android:id="@+id/price_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="@font/arialblack"
            android:textSize="26.6sp"
            android:textColor="@color/color_ff00"
            android:layout_toEndOf="@+id/ONLY_tv"
            android:layout_marginStart="5dp"
            android:layout_marginBottom="5dp"
            android:shadowColor="@color/color_99000000"
            android:shadowDx="0"
            android:gravity="bottom"
            android:layout_alignParentBottom="true"
            android:shadowDy="1"
            android:shadowRadius="5"
            />

    </RelativeLayout>



</androidx.constraintlayout.widget.ConstraintLayout>