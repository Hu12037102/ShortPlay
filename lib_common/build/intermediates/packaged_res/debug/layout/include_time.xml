<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.ruffian.library.widget.RTextView
        android:id="@+id/tv_hour"
        android:layout_width="23dp"
        android:layout_height="23dp"
        app:background_normal="@drawable/flash_time_bg"
        app:corner_radius="6dp"
        android:text="00"
        android:gravity="center"
        android:fontFamily="@font/bold"
        android:textSize="16sp"
        android:textColor="@color/white_ff"
        />

    <com.ruffian.library.widget.RTextView
        android:id="@+id/radius_hour"
        android:layout_width="3dp"
        android:layout_height="3dp"
        app:background_normal="@color/color_98"
        android:fontFamily="@font/bold"
        android:layout_marginStart="3dp"
        android:layout_marginEnd="3dp"
        android:layout_marginTop="8dp"
        app:corner_radius="1.5dp"
        android:layout_toRightOf="@+id/tv_hour"
        />
    <com.ruffian.library.widget.RTextView
        android:layout_width="3dp"
        android:layout_height="3dp"
        app:background_normal="@color/color_98"
        android:fontFamily="@font/bold"
        android:layout_marginStart="3dp"
        android:layout_marginEnd="3dp"
        android:layout_marginTop="13dp"
        app:corner_radius="1.5dp"
        android:layout_toRightOf="@+id/tv_hour"
        />

    <com.ruffian.library.widget.RTextView
        android:id="@+id/tv_minute"
        android:layout_width="23dp"
        android:layout_height="23dp"
        app:background_normal="@drawable/flash_time_bg"
        app:corner_radius="6dp"
        android:text="00"
        android:textSize="16sp"
        android:gravity="center"
        android:fontFamily="@font/bold"
        android:textColor="@color/white_ff"
        android:layout_toEndOf="@+id/radius_hour"
        />

    <com.ruffian.library.widget.RTextView
        android:id="@+id/radius_minute"
        android:layout_width="3dp"
        android:layout_height="3dp"
        app:background_normal="@color/color_98"
        android:fontFamily="@font/bold"
        android:layout_marginStart="3dp"
        android:layout_marginEnd="3dp"
        android:layout_marginTop="8dp"
        app:corner_radius="1.5dp"
        android:layout_toRightOf="@+id/tv_minute"
        />
    <com.ruffian.library.widget.RTextView
        android:layout_width="3dp"
        android:layout_height="3dp"
        app:background_normal="@color/color_98"
        android:fontFamily="@font/bold"
        android:layout_marginStart="3dp"
        android:layout_marginEnd="3dp"
        android:layout_marginTop="13dp"
        app:corner_radius="1.5dp"
        android:layout_toRightOf="@+id/tv_minute"
        />


    <com.ruffian.library.widget.RTextView
        android:id="@+id/second_tv"
        android:layout_width="23dp"
        android:layout_height="23dp"
        app:background_normal="@drawable/flash_time_bg"
        app:corner_radius="6dp"
        android:text="00"
        android:gravity="center"
        android:textSize="16sp"
        android:fontFamily="@font/bold"
        android:textColor="@color/white_ff"
        android:layout_toEndOf="@+id/radius_minute"
        />


</RelativeLayout>