<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="500dp"
    android:layout_gravity="center"
    tools:ignore="MissingDefaultResource">


    <RelativeLayout
        android:id="@+id/rl_flash_close"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="260dp"
        android:layout_marginTop="20dp"
        >

        <ImageView
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:src="@drawable/flash_close_logo" />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/flash_rl"
        android:layout_width="300dp"
        android:layout_height="421dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/flash_bg_logo">

        <RelativeLayout
            android:layout_width="78dp"
            android:layout_height="95dp"
            android:layout_marginTop="70dp"
            android:background="@drawable/flash_discount_logo">

            <TextView
                android:id="@+id/discount_ratio_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:text="90%"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <View
                android:layout_width="37dp"
                android:layout_height="0.6dp"
                android:layout_below="@+id/discount_ratio_tv"
                android:layout_centerHorizontal="true"
                android:background="@color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="25dp"
                android:text="@string/play_subtitle_off"
                android:fontFamily="@font/sofiapro_bold"
                android:textColor="@color/white"
                android:textSize="16sp" />

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/rl_doubt"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="80dp"
            android:layout_marginEnd="20dp">

            <ImageView
                android:id="@+id/doubt_iv"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:src="@drawable/flash_sale_doubt_logo" />

        </RelativeLayout>

        <include
            layout="@layout/include_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="92dp" />

        <include
            layout="@layout/include_flash_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="120dp" />

        <include
            layout="@layout/include_reward"
            android:layout_width="229dp"
            android:layout_height="99dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="200dp" />


        <!--        <com.ruffian.library.widget.RTextView-->
        <!--            android:id="@+id/claim_tv"-->
        <!--            android:layout_width="229dp"-->
        <!--            android:layout_height="40dp"-->
        <!--            android:layout_centerHorizontal="true"-->
        <!--            android:layout_alignParentBottom="true"-->
        <!--            android:layout_marginBottom="70dp"-->
        <!--            app:corner_radius="20dp"-->
        <!--            app:background_normal="@array/array_flash_tv"-->
        <!--            android:text="@string/flash_now"-->
        <!--            android:textSize="16sp"-->
        <!--            android:textColor="@color/white"-->
        <!--            android:gravity="center"-->
        <!--            android:textStyle="bold"-->
        <!--            />-->
        <ImageView
            android:id="@+id/claim_tv"
            android:layout_width="229dp"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="70dp"
            android:src="@drawable/flash_sale_claim_now_btn"
            />

        <include
            layout="@layout/flash_limit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="33.67dp"


            />
    </RelativeLayout>

</RelativeLayout>