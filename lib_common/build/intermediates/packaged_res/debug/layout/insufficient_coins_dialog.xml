<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="324dp"
    android:layout_height="286dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:background="@drawable/insufficient_bg_logo">




    <RelativeLayout
        android:id="@+id/rl_close"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true">
        <ImageView
            android:id="@+id/close_iv"
            android:layout_width="13dp"
            android:layout_height="13dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/insufficient_colse_dialog" />

    </RelativeLayout>

    
    <ImageView
        android:layout_width="108dp"
        android:layout_height="85dp"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/insufficient_gifi_logo"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/play_ad_to_unclock"
        android:textColor="@color/black_00"
        android:textSize="20sp"
        android:gravity="center"
        android:fontFamily="@font/sofiapro_medium"
        android:layout_marginEnd="41dp"
        android:layout_marginStart="41dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="110dp"
        />

    <TextView
        android:id="@+id/avaiable_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/me_bonus_center_Watched"
        android:layout_marginTop="180dp"
        android:layout_marginStart="90dp"
        android:textColor="@color/black_00"
        android:textSize="13sp"
        android:fontFamily="@font/sofiapro_medium"
        />
    <TextView
        android:id="@+id/avaiable_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="177dp"
        android:text="@string/me_bonus_center_text"
        android:layout_toRightOf="@+id/avaiable_textView"
        android:layout_marginStart="3dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/black_00"
        android:textSize="18sp"
        android:fontFamily="@font/sofiapro_medium"
        />


    <com.ruffian.library.widget.RRelativeLayout
        android:id="@+id/wach_now"
        android:layout_width="260dp"
        android:layout_height="40dp"
        android:layout_marginTop="216dp"
        android:layout_centerHorizontal="true"
        app:background_normal="@color/red_056"
        app:corner_radius="20dp">
        
        <ImageView
            android:layout_width="24dp"
            android:layout_height="18dp"
            android:src="@drawable/insufficient_video_logo"
            android:layout_centerVertical="true"
            android:layout_marginStart="80dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/insufficient_wact_now"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_marginStart="112dp"
            android:layout_centerVertical="true"
            android:fontFamily="@font/sofiapro_medium"
            />
        
        
    </com.ruffian.library.widget.RRelativeLayout>

  <RelativeLayout
      android:id="@+id/unlock_rl"
      android:layout_width="wrap_content"
      android:layout_centerHorizontal="true"
      android:layout_alignParentBottom="true"
      android:visibility="gone"
      android:layout_height="30dp">


      <TextView
          android:id="@+id/rcharge_auto"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textSize="9sp"
          android:layout_toEndOf="@+id/check_isBox"
          android:text="@string/play_auto_unlock"
          android:layout_marginStart="3dp"
          android:layout_marginBottom="16dp"
          android:layout_alignParentBottom="true"
          android:textColor="@color/black_aa"
          android:gravity="center" />
      <ImageView
          android:id="@+id/check_isBox"
          android:layout_width="10dp"
          android:layout_height="10dp"
          android:layout_alignParentBottom="true"
          android:layout_marginBottom="17dp"
          android:src="@drawable/insufficient_select_logo"

          />

  </RelativeLayout>

</RelativeLayout>