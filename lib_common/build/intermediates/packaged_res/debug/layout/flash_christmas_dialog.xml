<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/flash_rl"
            android:layout_width="319.33dp"
            android:layout_height="479.33dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            >
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/aiv_background"
                />
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/aiv_background"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:textColor="@color/color_98"
                android:textSize="12sp"
                android:layout_marginTop="88dp"
                android:text="@string/ends_in"
                />

            <ImageView
                android:id="@+id/iv_closed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/flash_close_logo"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginEnd="11.67dp"
                />
            <ImageView
                android:id="@+id/iv_about"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/about_christmas_logo"
                android:layout_marginTop="105.33dp"
                android:layout_marginEnd="46dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                />
            <include
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                layout="@layout/include_time"
                android:layout_marginTop="105.33dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />

            <include
                android:id="@+id/include_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                layout="@layout/include_flash_money"
                android:layout_marginTop="150dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />

            <include
                android:id="@+id/include_reward"
                android:layout_width="229dp"
                android:layout_height="99dp"
                layout="@layout/include_reward_christmas"
                android:layout_marginTop="9dp"
                app:layout_constraintTop_toBottomOf="@+id/include_money"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />
            <ImageView
                android:id="@+id/iv_claim_now"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/flash_sale_claim_now_btn"
                android:layout_marginTop="15.67dp"
                app:layout_constraintTop_toBottomOf="@+id/include_reward"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />
            <include
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                layout="@layout/flash_limit"
                android:layout_marginTop="7.67dp"
                app:layout_constraintTop_toBottomOf="@+id/iv_claim_now"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="78dp"
            android:layout_height="97.33dp"
            android:background="@drawable/flash_discount_logo"
            app:layout_constraintTop_toTopOf="@+id/flash_rl"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="79dp"
            android:layout_marginStart="18.67dp"
            >

            <TextView
                android:id="@+id/discount_ratio_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:textColor="@color/white_ff"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="90%" />
            <View
                android:id="@+id/view_line"
                android:layout_width="0dp"
                android:layout_height="0.67dp"
                android:background="@color/white_ff"
                android:layout_marginTop="0.33dp"
                app:layout_constraintTop_toBottomOf="@+id/discount_ratio_tv"
                app:layout_constraintStart_toStartOf="@+id/discount_ratio_tv"
                app:layout_constraintEnd_toEndOf="@+id/discount_ratio_tv"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/play_subtitle_off"
                android:textSize="15sp"
                android:textColor="@color/white_ff"
                android:textStyle="bold"
                android:layout_marginTop="2dp"
                app:layout_constraintTop_toBottomOf="@+id/view_line"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>