<?xml version="1.0" encoding="utf-8"?>

                                                        

    

           

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black_00"
        android:orientation="vertical" android:tag="layout/login_activity_login_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/splash_bg"
            android:scaleType="fitXY"/>

        <RelativeLayout
            android:id="@+id/return_rl"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="13dp"
            android:layout_marginTop="52dp"
            >

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:src="@drawable/return_logo"
                />    
        </RelativeLayout>
        
        <ImageView
            android:layout_width="197.67dp"
            android:layout_height="158dp"
            android:src="@drawable/login_logo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="112.6dp"/>

        <com.ruffian.library.widget.RRelativeLayout
            android:id="@+id/facebook_rr"
            android:layout_width="300dp"
            android:layout_height="46dp"
            app:corner_radius="22dp"
            android:visibility="gone"
            android:layout_marginTop="364.33dp"
            android:layout_centerHorizontal="true"
            app:background_pressed="@color/black_00"
            app:background_selected="@color/black_00"
            app:background_normal="@color/black_3e">

            <TextView
                android:id="@+id/facebook_sign"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/logo_welcome_facebook"
                android:layout_marginStart="73dp"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:layout_centerVertical="true" />

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/facebook_logo"
                android:layout_centerVertical="true"
                android:layout_marginStart="35dp" />
        </com.ruffian.library.widget.RRelativeLayout>


        <TextView
            android:id="@+id/bubble_content"
            android:layout_width="wrap_content"
            android:minWidth="210dp"
            android:layout_height="38dp"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:paddingTop="3dp"
            android:paddingEnd="10dp"
            android:layout_marginTop="331dp"
            android:background="@drawable/common_bg_bubble1"
            android:layout_alignRight="@+id/google_rl"
            android:fontFamily="@font/sofiapro_medium"
            android:visibility="gone"
            />


        <com.ruffian.library.widget.RRelativeLayout
            android:id="@+id/google_rl"
            android:layout_width="300dp"
            android:layout_height="46dp"
            app:corner_radius="22dp"
            android:layout_below="@+id/facebook_rr"
            android:layout_marginTop="364.33dp"
            android:layout_centerHorizontal="true"
            app:background_pressed="@color/black_00"
            app:background_selected="@color/black_00"
            app:background_normal="@color/white_20">

            <TextView
                android:id="@+id/google_sign"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="73dp"
                android:text="@string/logo_welcome_google"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:layout_centerVertical="true" />

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/google"
                android:layout_centerVertical="true"
                android:layout_marginStart="35dp" />
        </com.ruffian.library.widget.RRelativeLayout>

       <RelativeLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignParentBottom="true"
           android:layout_marginBottom="40dp"
           android:layout_centerHorizontal="true"
           android:layout_marginStart="18dp"
           android:layout_marginEnd="18dp"
           >

           <TextView
               android:id="@+id/service_tv"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textColor="@color/white_ff_99"
               android:textSize="12sp"
               android:layout_centerHorizontal="true"
               android:gravity="center"
               />
           <TextView
               android:id="@+id/privacy_tv"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="@string/logo_agreement_privacy"
               android:textColor="@color/white_ff_99"
               android:textSize="12sp"
               android:layout_below="@+id/service_tv"
               android:layout_centerHorizontal="true"
               android:gravity="center"
               android:visibility="gone"
               />
       </RelativeLayout>

    </RelativeLayout>
         