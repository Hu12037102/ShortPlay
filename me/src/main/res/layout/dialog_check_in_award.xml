<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/size_0dp"
        app:layout_constraintWidth_min="@dimen/size_125dp"
        app:layout_constraintHeight_min="@dimen/size_125dp"
        app:layout_constraintDimensionRatio="1:1"
        app:cardCornerRadius="@dimen/size_14dp"
        app:cardBackgroundColor="@color/color_CC000000"
        app:cardElevation="@dimen/size_0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/atv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="@dimen/size_4dp"
            app:drawableTopCompat="@mipmap/icon_big_bonus"
            tools:text="+1500Bonus"
            android:textColor="@color/color_White"
            android:layout_gravity="center"
            app:fontFamily="@font/sofia_pro_bold"

            />


    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>