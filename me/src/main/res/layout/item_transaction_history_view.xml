<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/size_70dp">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/atv_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_FF222222"
        android:textSize="@dimen/size_16sp"
        app:fontFamily="@font/sofia_pro_medium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="SpUsage"
        tools:text="200" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/atv_title"
        android:layout_width="@dimen/size_0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/size_18dp"
        android:layout_marginEnd="@dimen/size_10dp"
        android:textColor="@color/color_FF2E2E2E"
        android:textSize="@dimen/size_14sp"
        app:fontFamily="@font/sofia_pro_medium"
        app:layout_constraintBottom_toTopOf="@id/atv_time"
        app:layout_constraintEnd_toStartOf="@id/atv_amount"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        tools:ignore="SpUsage"
        tools:text="Fist Play" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/atv_time"
        android:layout_width="@dimen/size_0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/size_18dp"
        android:layout_marginTop="@dimen/size_12dp"
        android:layout_marginEnd="@dimen/size_10dp"
        android:textColor="@color/color_FF999999"
        android:textSize="@dimen/size_12sp"
        app:fontFamily="@font/sofia_pro_medium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/atv_amount"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/atv_title"
        tools:ignore="SpUsage"
        tools:text="2023.02.28" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/atv_coins_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/size_18dp"
        android:drawablePadding="@dimen/size_7dp"
        android:textColor="@color/color_FFFFAB25"
        app:drawableEndCompat="@mipmap/icon_transaction_history_coins"
        app:layout_constrainedWidth="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintStart_toEndOf="@id/atv_amount"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="@dimen/size_16sp"
        app:fontFamily="@font/sofia_pro_bold"
        tools:text="+2000"
        tools:ignore="SpUsage" />


</androidx.constraintlayout.widget.ConstraintLayout>