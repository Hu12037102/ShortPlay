<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/size_46dp"
        android:layout_marginEnd="@dimen/size_46dp"
        app:cardCornerRadius="@dimen/size_6dp"
        app:cardElevation="@dimen/size_0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/size_20dp">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/aiv_top"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_118dp"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@mipmap/icon_comm_version_updating" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/atv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/update_content"
                android:textColor="@color/color_FFFE2442"
                android:textSize="@dimen/size_20sp"
                app:fontFamily="@font/sofia_pro_bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/aiv_top"
                tools:ignore="SpUsage" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/atv_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/size_25dp"
                android:layout_marginTop="@dimen/size_15dp"
                android:layout_marginEnd="@dimen/size_25dp"
                android:lineSpacingExtra="@dimen/size_2dp"
                android:textColor="@color/color_FF333333"
                android:textSize="@dimen/size_14sp"
                app:fontFamily="@font/sofia_pro_medium"
                app:layout_constraintTop_toBottomOf="@id/atv_title"
                tools:ignore="SpUsage"
                tools:text="You need to update" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/atv_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/size_25dp"
                android:layout_marginTop="@dimen/size_10dp"
                android:layout_marginEnd="@dimen/size_25dp"
                android:lineSpacingExtra="@dimen/size_2dp"
                android:textColor="@color/color_FF333333"
                android:textSize="@dimen/size_14sp"
                app:fontFamily="@font/sofia_pro_medium"
                app:layout_constraintTop_toBottomOf="@id/atv_desc"
                tools:ignore="SpUsage"
                tools:text="1.Important security fixes." />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/atv_cancel"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/size_40dp"
                android:layout_marginTop="@dimen/size_15dp"
                android:gravity="center"
                android:minWidth="@dimen/size_100dp"
                android:text="@string/cancel_content"
                android:textColor="@color/color_FFFE2442"
                android:textSize="@dimen/size_14sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/atv_content"
                app:layout_constraintEnd_toStartOf="@id/atv_sure"
                app:layout_constraintHorizontal_chainStyle="packed"
                tools:ignore="SpUsage" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/atv_sure"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/size_40dp"
                android:gravity="center"
                android:minWidth="@dimen/size_126dp"
                android:textSize="@dimen/size_14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/atv_cancel"
                app:layout_constraintStart_toEndOf="@id/atv_cancel"
                android:textColor="@color/color_White"
                app:fontFamily="@font/sofia_pro_medium"
                android:text="@string/update_content"
                android:layout_marginStart="@dimen/size_10dp"
                tools:ignore="SpUsage" />
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/atv_must_sure"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_40dp"
                app:layout_constraintTop_toBottomOf="@id/atv_content"
                android:layout_marginTop="@dimen/size_15dp"
                android:gravity="center"
                android:textColor="@color/color_White"
                android:text="@string/update_content"
                android:textSize="@dimen/size_14sp"
                app:fontFamily="@font/sofia_pro_medium"
                android:layout_marginStart="@dimen/size_25dp"
                android:layout_marginEnd="@dimen/size_25dp"
                android:visibility="gone"
                tools:ignore="SpUsage" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>