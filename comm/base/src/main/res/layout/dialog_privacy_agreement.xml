<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:background="@color/color_FFF7F7F7">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/size_46dp"
        android:layout_marginEnd="@dimen/size_46dp"
        app:cardBackgroundColor="@color/color_White"
        app:cardCornerRadius="@dimen/size_6dp"
        app:cardElevation="@dimen/size_0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/size_10dp">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/atv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/size_25dp"
                android:layout_marginTop="@dimen/size_24dp"
                android:layout_marginEnd="@dimen/size_10dp"
                android:text="@string/terms_service_and_privacy_policy"
                android:textColor="@color/color_FF2E2E2E"
                android:textSize="@dimen/size_15sp"
                app:fontFamily="@font/sofia_pro_bold"
                app:layout_constrainedWidth="true"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="SpUsage" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/atv_welcome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/size_25sp"
                android:layout_marginTop="@dimen/size_20dp"
                android:layout_marginEnd="@dimen/size_25dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@color/color_FF999999"
                android:textSize="@dimen/size_11sp"
                app:fontFamily="@font/sofia_pro_medium"
                app:layout_constraintTop_toBottomOf="@id/atv_title"
                tools:ignore="SpUsage"
                tools:text="Welcome to InShort" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/atv_content1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/size_25dp"
                android:layout_marginTop="@dimen/size_18dp"
                android:layout_marginEnd="@dimen/size_25dp"
                android:lineSpacingExtra="@dimen/size_2dp"
                android:textColor="@color/color_FF999999"
                android:textSize="@dimen/size_11sp"
                app:fontFamily="@font/sofia_pro_medium"
                app:layout_constraintTop_toBottomOf="@id/atv_welcome"
                tools:ignore="SpUsage"
                tools:text="Welcome to InShort" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/atv_content2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/size_25dp"
                android:layout_marginTop="@dimen/size_18dp"
                android:layout_marginEnd="@dimen/size_25dp"
                android:lineSpacingExtra="@dimen/size_2dp"
                android:text="@string/user_privacy_agreement_content_5"
                android:textColor="@color/color_FF999999"
                android:textSize="@dimen/size_11sp"
                app:fontFamily="@font/sofia_pro_medium"
                app:layout_constraintTop_toBottomOf="@id/atv_content1"
                tools:ignore="SpUsage" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/atv_agree"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_40dp"
                android:layout_marginStart="@dimen/size_25dp"
                android:layout_marginTop="@dimen/size_18dp"
                android:layout_marginEnd="@dimen/size_25dp"
                android:gravity="center"
                android:text="@string/agree_content"
                android:textColor="@color/color_White"
                android:textSize="@dimen/size_17sp"
                app:fontFamily="@font/sofia_pro_bold"
                app:layout_constraintTop_toBottomOf="@id/atv_content2"
                tools:ignore="SpUsage" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/atv_later"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_40dp"
                android:layout_marginStart="@dimen/size_25dp"
                android:layout_marginEnd="@dimen/size_25dp"
                android:gravity="center"
                android:text="@string/read_it_later_content"
                android:textColor="@color/color_80000000"
                android:textSize="@dimen/size_14sp"
                app:fontFamily="@font/sofia_pro_medium"
                app:layout_constraintTop_toBottomOf="@id/atv_agree"
                tools:ignore="SpUsage" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>