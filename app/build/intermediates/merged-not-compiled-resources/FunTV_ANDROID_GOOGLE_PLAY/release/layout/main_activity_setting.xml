<?xml version="1.0" encoding="utf-8"?>

                                                       
                                                   

    

           

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/black_00"
        android:layout_height="match_parent" android:tag="layout/main_activity_setting_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">

        <include
            android:id="@+id/setting_include"
            layout="@layout/main_include_title"/>

        <RelativeLayout
            android:id="@+id/auto_rl"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:layout_below="@+id/setting_include"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="18dp"
            tools:ignore="MissingDefaultResource">

            <TextView
                android:id="@+id/auto_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="@string/setting_continue"
                android:layout_centerVertical="true"
                android:textColor="@color/white"
                android:fontFamily="@font/sofiapro_medium"/>


            <ImageView
                android:id="@+id/switch_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:src="@drawable/switch_open_logo"
                />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/terms_rl"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:layout_below="@+id/auto_rl"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="18dp"
            tools:ignore="MissingDefaultResource">

            <TextView
                android:id="@+id/terms_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="@string/me_setting_terms"
                android:layout_centerVertical="true"
                android:textColor="@color/white"
                android:fontFamily="@font/sofiapro_medium"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:layout_centerVertical="true"
                android:textSize="14sp"
                android:layout_alignParentEnd="true"
                android:drawablePadding="5dp"
                android:drawableEnd="@drawable/user_right_white"
                tools:ignore="UseCompatTextViewDrawableXml" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/privacy_rl"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:layout_below="@+id/terms_rl"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="18dp"
            tools:ignore="MissingDefaultResource">

            <TextView
                android:id="@+id/privacy_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="@string/me_setting_privacy"
                android:layout_centerVertical="true"
                android:textColor="@color/white"
                android:fontFamily="@font/sofiapro_medium"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:layout_centerVertical="true"
                android:textSize="14sp"
                android:layout_alignParentEnd="true"
                android:drawablePadding="5dp"
                android:drawableEnd="@drawable/user_right_white"
                tools:ignore="UseCompatTextViewDrawableXml" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/delete_account_rl"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:layout_below="@+id/privacy_rl"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="18dp"
            tools:ignore="MissingDefaultResource">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="@string/me_setting_delete_account"
                android:layout_centerVertical="true"
                android:textColor="@color/white"
                android:fontFamily="@font/sofiapro_medium"/>
            <TextView
                android:id="@+id/delete_account_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white_ff_99"
                android:layout_centerVertical="true"
                android:textSize="12sp"
                android:layout_alignParentEnd="true"
                android:drawablePadding="5dp"
                android:drawableEnd="@drawable/user_right_white"
                tools:ignore="UseCompatTextViewDrawableXml" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/cache_rl"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:layout_below="@+id/delete_account_rl"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="18dp"
            tools:ignore="MissingDefaultResource">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="@string/me_setting_cache"
                android:layout_centerVertical="true"
                android:textColor="@color/white"
                android:fontFamily="@font/sofiapro_medium"
                />
            <TextView
                android:id="@+id/cache_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white_ff_99"
                android:layout_centerVertical="true"
                android:textSize="14sp"
                android:layout_alignParentEnd="true"
                android:drawablePadding="8dp"
                android:fontFamily="@font/sofiapro_medium"
                android:drawableEnd="@drawable/user_right_white"
                tools:ignore="UseCompatTextViewDrawableXml" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/version_rl"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:layout_below="@+id/cache_rl"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="18dp"
            tools:ignore="MissingDefaultResource">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="@string/me_setting_version"
                android:layout_centerVertical="true"
                android:textColor="@color/white"
                android:fontFamily="@font/sofiapro_medium"/>


            <TextView
                android:id="@+id/version_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/red_056"
                android:layout_centerVertical="true"
                android:textSize="14sp"
                android:layout_alignParentEnd="true"
                android:drawablePadding="8dp"
                android:drawableEnd="@drawable/user_right_white"
                tools:ignore="UseCompatTextViewDrawableXml"
                android:fontFamily="@font/sofiapro_medium"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/host_rl"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:layout_below="@+id/version_rl"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="18dp"
            android:visibility="gone"
            tools:ignore="MissingDefaultResource">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="Host"
                android:layout_centerVertical="true"
                android:textColor="@color/white" />


            <TextView
                android:id="@+id/host_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/red_056"
                android:layout_centerVertical="true"
                android:textSize="12sp"
                android:layout_alignParentEnd="true"
                android:drawablePadding="5dp"
                android:drawableEnd="@drawable/user_right_white"
                tools:ignore="UseCompatTextViewDrawableXml" />
        </RelativeLayout>


        <com.ruffian.library.widget.RTextView
            android:id="@+id/signOut_tv"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/host_rl"
            android:layout_marginTop="31.33dp"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="18dp"
            app:corner_radius="25dp"
            app:background_normal="@color/black_22"
            android:textSize="16sp"
            android:textColor="@color/red_056"
            android:text="@string/me_setting_sign"
            android:gravity="center"
            android:fontFamily="@font/sofiapro_medium"
            />


    </RelativeLayout>
         