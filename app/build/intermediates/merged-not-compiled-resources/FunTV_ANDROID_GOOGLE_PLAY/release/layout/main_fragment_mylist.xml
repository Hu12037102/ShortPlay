<?xml version="1.0" encoding="utf-8"?>

                                                              
                                                       
                                

    

           

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" android:tag="layout/main_fragment_mylist_0" xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" tools:ignore="ResourceName">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/my_list_rv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:ignore="MissingConstraints"/>

        <ImageView
            android:id="@+id/main_loading_iv"
            android:layout_width="@dimen/loading_width"
            android:layout_height="@dimen/loading_height"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:visibility="gone"
            android:background="@drawable/loading"
            tools:ignore="MissingConstraints" />


        <ViewStub
            android:id="@+id/no_network_view_stub"
            android:layout_width="match_parent"
            android:layout_height="196dp"
            android:layout_marginTop="13dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout="@layout/no_network"
            />


    </RelativeLayout>
         