<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="10dp"
    android:layout_marginBottom="20dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    
    <com.ruffian.library.widget.RRelativeLayout
        android:id="@+id/rr_check"
        android:layout_width="64dp"
        android:layout_height="80dp"
        android:visibility="gone"
        app:corner_radius="6dp">


        <TextView
            android:id="@+id/money_check_tv"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:background="@color/black_5"
            android:layout_alignParentBottom="true"
            android:textSize="12sp"
            android:textColor="@color/red_ff"
            android:gravity="center"
            />


        <TextView
            android:id="@+id/num_check_tv"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:textSize="10sp"
            android:textColor="@color/white"
            android:paddingStart="3.33dp"
            android:paddingTop="1dp"
            tools:ignore="RtlSymmetry,SmallSp" />

        <ImageView
            android:id="@+id/check_logo_iv"
            android:layout_width="29dp"
            android:layout_height="29dp"
            android:src="@drawable/user_money_logo"
            android:layout_marginTop="17dp"
            android:visibility="gone"
            android:layout_centerHorizontal="true"
            />
        <ImageView
            android:id="@+id/check_select_logo_iv"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@drawable/select_money_logo"
            android:layout_marginTop="3dp"
            android:visibility="gone"
            android:layout_centerHorizontal="true"
            />

        <ImageView
            android:id="@+id/right_logo_iv"
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:src="@drawable/right_logo"
            android:layout_marginTop="32dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="13dp"
            android:visibility="gone"
            />


    </com.ruffian.library.widget.RRelativeLayout>

    <com.ruffian.library.widget.RRelativeLayout
        android:id="@+id/rr_final_check"
        android:layout_width="136dp"
        android:layout_height="80dp"
        app:corner_radius="6dp">


        <TextView
            android:id="@+id/money_final_check_tv"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:background="@color/black_5"
            android:layout_alignParentBottom="true"
            android:textSize="12sp"
            android:textColor="@color/red_ff"
            android:gravity="center"
            />


        <TextView
            android:id="@+id/num_final_check_tv"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:textSize="10sp"
            android:textColor="@color/white"
            android:paddingStart="3.33dp"
            android:paddingTop="1dp"
            tools:ignore="RtlSymmetry,SmallSp" />

        <ImageView
            android:id="@+id/check_final_logo_iv"
            android:layout_width="29dp"
            android:layout_height="29dp"
            android:src="@drawable/user_money_logo"
            android:layout_marginTop="17dp"
            android:layout_marginStart="31dp"
            android:visibility="gone"
            />
        <ImageView
            android:id="@+id/check_final_select_logo_iv"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@drawable/select_money_logo"
            android:layout_marginTop="3dp"
            android:layout_marginStart="18dp"
            android:visibility="gone"
            />

        <ImageView
            android:id="@+id/right_final_logo_iv"
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:src="@drawable/right_logo"
            android:layout_marginTop="32dp"
            android:layout_marginStart="45dp"
            android:visibility="gone"
            />
        <TextView
            android:id="@+id/money_final_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="21dp"
            android:layout_marginStart="45dp"
            android:textColor="@color/red_ff"
            android:textStyle="bold"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="31dp"
            android:textSize="16.7sp"
            />


    </com.ruffian.library.widget.RRelativeLayout>




</RelativeLayout>