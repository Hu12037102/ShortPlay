<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    tools:ignore="MissingDefaultResource">




    <RelativeLayout
        android:id="@+id/flash_rl"
        android:layout_width="300dp"
        android:layout_height="472dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/weekly_sub_bg">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/monthly_sub"
            android:layout_marginTop="60dp"
            android:layout_centerHorizontal="true"
            android:textSize="24sp"
            android:textColor="@color/color_6E2911"
            android:fontFamily="@font/sofiapro_bold"
            />

        <TextView
            android:id="@+id/total_awards_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="95dp"
            android:layout_centerHorizontal="true"
            android:textColor="@color/color_6E2911"
            android:textSize="12sp"
            android:fontFamily="@font/sofiapro_medium"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="0.6dp"
            android:background="@color/white"
            android:layout_marginTop="120dp"
            />

        <TextView
            android:id="@+id/total_coins_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/get_total_coins"
            android:fontFamily="@font/sofiapro_medium"
            android:layout_marginStart="10dp"
            android:textColor="@color/color_6E2911"
            android:textSize="13sp"
            android:layout_marginTop="135dp"
            />

        <com.ruffian.library.widget.RRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:corner_radius="6dp"
            app:background_normal="@color/white"
            android:layout_marginTop="155dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp">

            <TextView
                android:id="@+id/claim_date_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="14dp"
                android:textColor="@color/color_6E2911"
                android:textSize="13sp"
                android:fontFamily="@font/sofiapro_medium"
                />
            <TextView
                android:id="@+id/claimed_coins_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="72dp"
                android:textColor="@color/color_6E2911"
                android:textSize="16sp"
                android:drawableStart="@drawable/app_coins_logo"
                android:gravity="center"
                android:drawablePadding="3dp"
                android:fontFamily="@font/sofiapro_medium"
                />
            <ImageView
                android:id="@+id/is_claimed_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="35dp"
                android:src="@drawable/watch_ad_done"
                android:visibility="gone"
                />




        </com.ruffian.library.widget.RRelativeLayout>

        <TextView
            android:id="@+id/total_bonus_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/get_total_bonus"
            android:fontFamily="@font/sofiapro_medium"
            android:layout_marginStart="10dp"
            android:textColor="@color/color_6E2911"
            android:textSize="13sp"
            android:layout_marginTop="216dp"
            />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/weekly_rl"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="240dp"
            android:layout_marginBottom="10dp" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rl_flash_close"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:layout_below="@+id/flash_rl"
        >

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:src="@drawable/flash_close_logo" />

    </RelativeLayout>

</RelativeLayout>