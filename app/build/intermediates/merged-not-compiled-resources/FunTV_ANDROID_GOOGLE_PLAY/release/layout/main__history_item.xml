<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <TextView
        android:id="@+id/history_tv"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:textSize="19sp"
        android:textColor="@color/white"
        android:layout_marginStart="18dp"
        android:layout_marginTop="24dp"
        android:text="@string/main_history"
        android:fontFamily="@font/sofiapro_medium"
        tools:ignore="InvalidId" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/history_rv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/history_tv"
        android:layout_marginTop="13dp"
        android:layout_marginStart="18dp"
        tools:ignore="NotSibling" />


    <TextView
        android:id="@+id/more_history"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="@string/play_more"
        android:textColor="@color/white_ff_99"
        android:textSize="12sp"
        android:layout_marginTop="24dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="18dp"
        android:drawablePadding="11dp"
        android:gravity="center_vertical"
        android:fontFamily="@font/sofiapro_medium"
        app:drawableRightCompat="@drawable/user_right_white" />


    <ViewStub
        android:id="@+id/history_view_stub"
        android:layout_width="match_parent"
        android:layout_height="196dp"
        android:layout_below="@+id/history_tv"
        android:layout_marginTop="13dp"
        android:layout="@layout/main_history_empty"
        />


</RelativeLayout>