<?xml version="1.0" encoding="utf-8"?>

                                                              
                                                        

    

           

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" android:tag="layout/main_activity_bonus_0" xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">


        <include
            android:id="@+id/bonus_his_include"
            layout="@layout/main_include_title"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        android:visibility="gone"
        tools:visibility="visible"
        app:layout_constraintTop_toTopOf="parent">
        
        <RadioGroup
            android:id="@+id/bonus_rg"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginStart="18dp"
            android:layout_marginTop="11dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:orientation="horizontal"
            tools:ignore="MissingConstraints">
            
            <com.ruffian.library.widget.RRadioButton
                android:id="@+id/all_rb"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:button="@null"
                android:layout_gravity="center"
                android:text="@string/me_bonus_his_all"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_marginEnd="13dp"
                android:textColor="@color/white"
                app:corner_radius="6dp"
                android:checked="true"
                app:background_normal="@color/white_10"
                app:border_width_normal="0.33dp"
                app:border_color_normal="@color/white_ff_30"
                app:background_checked="@array/array_l_r"
                app:background_pressed="@array/array_l_r"
                app:background_selected="@array/array_l_r"
                app:gradient_type="linear"
                app:gradient_orientation="LEFT_RIGHT"
                />
            
            <com.ruffian.library.widget.RRadioButton
                android:id="@+id/recharge_rb"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:button="@null"
                android:layout_gravity="center"
                android:text="@string/me_recharge"
                android:textSize="12sp"
                android:textColor="@color/white_ff_99"
                app:corner_radius="6dp"
                android:layout_marginEnd="13dp"
                app:background_normal="@color/white_10"
                app:border_width_normal="0.33dp"
                app:border_color_normal="@color/white_ff_30"
                app:background_checked="@array/array_l_r"
                app:background_pressed="@array/array_l_r"
                app:background_selected="@array/array_l_r"
                app:gradient_type="linear"
                app:gradient_orientation="LEFT_RIGHT"
                />

            <com.ruffian.library.widget.RRadioButton
                android:id="@+id/bonus_rb"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:button="@null"
                android:layout_gravity="center"
                android:text="@string/me_bonus"
                android:textSize="12sp"
                android:layout_marginEnd="13dp"
                android:textColor="@color/white_ff_99"
                app:corner_radius="6dp"
                app:background_normal="@color/white_10"
                app:border_width_normal="0.33dp"
                app:border_color_normal="@color/white_ff_30"
                app:background_checked="@array/array_l_r"
                app:background_pressed="@array/array_l_r"
                app:background_selected="@array/array_l_r"
                app:gradient_type="linear"
                app:gradient_orientation="LEFT_RIGHT"
                />

            <com.ruffian.library.widget.RRadioButton
                android:id="@+id/unlock_rb"
                android:layout_width="110dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:button="@null"
                android:layout_marginEnd="7dp"
                android:layout_gravity="center"
                android:text="@string/play_recharge_unlock"
                android:textSize="12sp"
                android:textColor="@color/white_ff_99"
                app:corner_radius="6dp"
                app:background_normal="@color/white_10"
                app:border_width_normal="0.33dp"
                app:border_color_normal="@color/white_ff_30"
                app:background_checked="@array/array_l_r"
                app:background_pressed="@array/array_l_r"
                app:background_selected="@array/array_l_r"
                app:gradient_type="linear"
                app:gradient_orientation="LEFT_RIGHT"
                />
        </RadioGroup>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/bonus_rv"
            android:layout_width="match_parent"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="18dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/bonus_rg"
            android:orientation="horizontal"/>

        <ViewStub
            android:id="@+id/history_view_stub"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintTop_toBottomOf="@+id/bonus_rg"
            android:layout_marginTop="12dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout="@layout/main_history_empty"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
        <ViewStub
            android:id="@+id/try_again_view"
            android:layout_width="match_parent"
            android:layout_height="196dp"
            android:layout_marginTop="13dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout="@layout/no_network"
            />

        <ImageView
            android:id="@+id/main_loading_iv"
            android:layout_width="@dimen/loading_width"
            android:layout_height="@dimen/loading_height"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:visibility="gone"
            android:background="@drawable/loading" />

    </androidx.constraintlayout.widget.ConstraintLayout>
         