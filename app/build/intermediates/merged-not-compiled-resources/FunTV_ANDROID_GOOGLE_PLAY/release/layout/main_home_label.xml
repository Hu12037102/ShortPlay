<?xml version="1.0" encoding="utf-8"?>

                                                       
                                                   

    

           
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black_15"
         android:tag="layout/main_home_label_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">


    <eightbitlab.com.blurview.BlurView
        android:id="@+id/bv_parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/rl_label"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:background="@color/black_0000"
        android:visibility="gone"
        >


        <ImageView
            android:id="@+id/gift_iv"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="18dp"
            android:background="@drawable/home_free"
            android:scaleType="centerCrop" />

        <com.ruffian.library.widget.RTextView
            android:id="@+id/gift_num"
            android:layout_width="21dp"
            android:layout_height="12dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="9dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="8sp"
            android:visibility="gone"
            app:background_normal="@color/red_056"
            app:corner_radius="6dp"
            tools:ignore="SmallSp" />

        <ImageView
            android:id="@+id/funtv_iv"
            android:layout_width="48dp"
            android:layout_height="21dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="18dp"
            android:src="@drawable/home_funtv_logo" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_search_parent"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="13dp"
            android:layout_marginEnd="18dp"
            android:layout_marginBottom="8dp"
            android:layout_toStartOf="@id/gift_iv"
            android:layout_toEndOf="@id/funtv_iv">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/atv_search_content"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="4dp"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="@color/black_50"
                android:textSize="15sp"
                app:layout_constrainedWidth="true"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintLeft_toLeftOf="parent"
                app:fontFamily="@font/sofiapro_medium"
                app:layout_constraintRight_toLeftOf="@id/aiv_search" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/aiv_search"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="4dp"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/home_search"/>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </RelativeLayout>
    </eightbitlab.com.blurview.BlurView>
    </FrameLayout>
         