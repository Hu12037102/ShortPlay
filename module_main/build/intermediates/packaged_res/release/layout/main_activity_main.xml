<?xml version="1.0" encoding="utf-8"?>

                                                              
                                                        

    

           

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" android:tag="layout/main_activity_main_0" xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/main_viewpager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/main_bottom_view"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            />

        <LinearLayout
            android:id="@+id/main_bottom_view"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:orientation="horizontal"
            android:background="@color/black_00"
            >

            <LinearLayout
                android:id="@+id/main_ll_home"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                >
                <ImageView
                    android:id="@+id/main_iv_home"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/selector_navigation_home_background"
                    tools:visibility="gone"
                    />

                <TextView
                    android:id="@+id/main_tv_home"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/home"
                    android:textColor="@drawable/selector_bottom_tab_text_color"
                    android:textSize="10sp"
                    tools:visibility="gone"
                    tools:ignore="SmallSp" />

                <ImageView
                    android:id="@+id/main_iv_top"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:scaleX="0.9"
                    android:scaleY="0.9"
                    tools:visibility="visible"
                    android:src="@drawable/icon_rocket_top"
                    />
            </LinearLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/main_ll_myList"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                >
                <ImageView
                    android:id="@+id/main_iv_myList"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/selector_navigation_mylist_background"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/main_tv_myList"
                    app:layout_constraintVertical_chainStyle="packed"
                    />

                <TextView
                    android:id="@+id/main_tv_myList"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/my_list"
                    tools:text="角度"
                    android:gravity="center"
                    android:textColor="@drawable/selector_bottom_tab_text_color"
                    android:textSize="10sp"
                    android:layout_below="@+id/main_iv_myList"
                    app:layout_constraintTop_toBottomOf="@id/main_iv_myList"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    tools:ignore="SmallSp" />

                <com.ruffian.library.widget.RView
                    android:id="@+id/tv_updated"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:textColor="@color/white"
                    app:corner_radius="8dp"
                    android:textSize="9sp"
                    android:fontFamily="@font/sofiapro_medium"
                    android:paddingBottom="2dp"
                    android:paddingStart="4dp"
                    android:paddingEnd="4dp"
                    app:background_normal="@color/red_056"
                    android:visibility="gone"
                    tools:visibility="visible"
                    tools:ignore="SmallSp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="@id/main_iv_myList"
                    android:layout_marginStart="18dp"
                    android:layout_marginTop="2dp"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>
            <LinearLayout
                android:id="@+id/main_ll_me"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                >
                <ImageView
                    android:id="@+id/main_iv_me"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/selector_navigation_me_background"
                    />

                <TextView
                    android:id="@+id/main_tv_me"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/me"
                    android:textColor="@drawable/selector_bottom_tab_text_color"
                    android:textSize="10sp"
                    tools:ignore="SmallSp" />
            </LinearLayout>
        </LinearLayout>


        <!--<com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/main_bottom_view"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:labelVisibilityMode="labeled"
            android:elevation="0dp"
            app:menu="@menu/main_menu"
            app:itemTextColor="@drawable/home_color"
            app:itemIconTint="@drawable/home_color"
            app:itemIconSize="30dp"
            app:itemTextAppearanceActive="@style/bottom_tab_title_active"
            app:itemTextAppearanceInactive="@style/bottom_tab_title_inactive"
            />-->

    </androidx.constraintlayout.widget.ConstraintLayout>
         