<?xml version="1.0" encoding="utf-8"?>

                                                       
                                                   

    

           

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" android:tag="layout/main_activity_invite_friend_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">

        <androidx.core.widget.NestedScrollView
            android:id="@+id/nested_scroll_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/c_fff2dd"
            android:overScrollMode="never"
            >
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/invite_bg"
                    android:scaleType="centerCrop"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_invite"
                    android:layout_width="352dp"
                    android:layout_height="234dp"
                    tools:visibility="visible"
                    android:visibility="gone"
                    android:background="@drawable/invite_friend_to_get_money"
                    android:layout_marginTop="296dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    >

                    <ImageView
                        android:id="@+id/iv_money_one"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/invite_friend_to_get_money_icon"
                        android:layout_marginTop="58dp"
                        android:layout_marginEnd="7dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/iv_money_second"
                        />

                    <TextView
                        android:id="@+id/tv_money_one"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="1"
                        android:textSize="53dp"
                        android:textColor="@color/c_fa4a1f"
                        android:fontFamily="@font/sofiapro_bold"
                        android:layout_marginBottom="35dp"
                        app:layout_constraintBottom_toBottomOf="@+id/iv_money_one"
                        app:layout_constraintTop_toTopOf="@+id/iv_money_one"
                        app:layout_constraintStart_toStartOf="@+id/iv_money_one"
                        app:layout_constraintEnd_toEndOf="@+id/iv_money_one"
                        />

                    <ImageView
                        android:id="@+id/iv_money_second"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/invite_friend_to_get_money_icon"
                        android:layout_marginTop="58dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        />

                    <TextView
                        android:id="@+id/tv_money_second"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="0"
                        android:textSize="53dp"
                        android:layout_marginBottom="35dp"
                        android:textColor="@color/c_fa4a1f"
                        android:fontFamily="@font/sofiapro_bold"
                        app:layout_constraintTop_toTopOf="@+id/iv_money_second"
                        app:layout_constraintStart_toStartOf="@+id/iv_money_second"
                        app:layout_constraintEnd_toEndOf="@+id/iv_money_second"
                        app:layout_constraintBottom_toBottomOf="@+id/iv_money_second"
                        />

                    <ImageView
                        android:id="@+id/iv_money_three"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/invite_friend_to_get_money_icon"
                        android:layout_marginTop="58dp"
                        android:layout_marginStart="7dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/iv_money_second"
                        />

                    <TextView
                        android:id="@+id/tv_money_three"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="0"
                        android:textSize="53dp"
                        android:textColor="@color/c_fa4a1f"
                        android:fontFamily="@font/sofiapro_bold"
                        android:layout_marginBottom="35dp"
                        app:layout_constraintTop_toTopOf="@+id/iv_money_three"
                        app:layout_constraintStart_toStartOf="@+id/iv_money_three"
                        app:layout_constraintEnd_toEndOf="@+id/iv_money_three"
                        app:layout_constraintBottom_toBottomOf="@+id/iv_money_three"
                        />
                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:minWidth="45dp"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginTop="80dp"
                        app:layout_constraintStart_toEndOf="@id/iv_money_three"
                        android:layout_marginStart="6dp"
                        android:background="@drawable/shape_invite_friend_bonus_background"
                        android:gravity="center"
                        android:textColor="@color/white"
                        app:fontFamily="@font/sofiapro_medium"
                        android:textSize="14sp"
                        android:text="@string/me_bonus"
                        android:paddingStart="2dp"
                        android:paddingEnd="2dp"
                        />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/invite_friend_to_get_money_bottom"
                        android:layout_marginBottom="7dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/me_bonus_center_get_small_write"
                        android:textSize="16dp"
                        android:textColor="@color/black_00"
                        android:fontFamily="@font/sofiapro_bold"
                        android:layout_marginTop="31dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/invite_friend_bonus_icon"
                        android:layout_marginTop="72dp"
                        android:layout_marginStart="71dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/iv_invite_now"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                       android:background="@drawable/btn_invite_now"
                        android:layout_marginBottom="15dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:textColor="@color/white"
                        android:text="@string/invite_friend_btn_text"
                        android:gravity="center_horizontal"
                        android:textSize="24sp"
                        app:fontFamily="@font/sofiapro_medium"
                        android:paddingTop="6dp"
                        />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_invite_data"
                    android:layout_width="0dp"
                    android:layout_height="140dp"
                    android:layout_marginTop="13dp"
                    tools:visibility="visible"
                    android:visibility="gone"
                    android:background="@color/white_ff"
                    app:layout_constraintTop_toBottomOf="@+id/cl_invite"
                    app:layout_constraintStart_toStartOf="@+id/cl_invite"
                    app:layout_constraintEnd_toEndOf="@+id/cl_invite"
                    >

                    <TextView
                        android:id="@+id/tv_invite_data"
                        android:layout_width="130dp"
                        android:layout_height="30dp"
                        android:text="@string/invite_data"
                        android:gravity="center"
                        android:textSize="17dp"
                        android:fontFamily="@font/sofiapro_bold"
                        android:textColor="@color/c_fff2dd"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/cl_total_reward"
                        android:layout_width="149dp"
                        android:layout_height="77dp"
                        android:layout_marginTop="16.33dp"
                        app:layout_constraintEnd_toStartOf="@+id/cl_total_friend_num"
                        app:layout_constraintTop_toBottomOf="@+id/tv_invite_data"
                        app:layout_constraintStart_toStartOf="parent"
                        >

                        <TextView
                            android:id="@+id/tv_total_reward_title"
                            android:layout_width="73.67dp"
                            android:layout_height="wrap_content"
                            android:text="@string/me_bonus_center_earned"
                            android:textColor="@color/black_00"
                            android:textSize="10dp"
                            android:gravity="center"
                            android:layout_marginTop="10.67dp"
                            android:fontFamily="@font/sofiapro_medium"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            />

                        <ImageView
                            android:id="@+id/iv_bonus_icon"
                            android:layout_width="21.33dp"
                            android:layout_height="22dp"
                            android:src="@drawable/home_free"
                            android:layout_marginTop="8.67dp"
                            app:layout_constraintTop_toBottomOf="@+id/tv_total_reward_title"
                            app:layout_constraintStart_toStartOf="@+id/tv_total_reward_title"
                            />

                        <TextView
                            android:id="@+id/tv_bonus_content"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1000"
                            android:textColor="@color/c_fa4a1f"
                            android:textSize="22dp"
                            android:fontFamily="@font/sofiapro_bold"
                            android:layout_marginStart="3.67dp"
                            app:layout_constraintStart_toEndOf="@+id/iv_bonus_icon"
                            app:layout_constraintBottom_toBottomOf="@+id/iv_bonus_icon"
                            />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/cl_total_friend_num"
                        android:layout_width="149dp"
                        android:layout_height="77dp"
                        android:layout_marginTop="16.33dp"
                        app:layout_constraintStart_toEndOf="@+id/cl_total_reward"
                        app:layout_constraintTop_toBottomOf="@+id/tv_invite_data"
                        app:layout_constraintEnd_toEndOf="parent"
                        >

                        <TextView
                            android:id="@+id/tv_total_friend_num_title"
                            android:layout_width="75.33dp"
                            android:layout_height="wrap_content"
                            android:text="@string/me_bonus_center_invited"
                            android:textColor="@color/black_00"
                            android:textSize="10dp"
                            android:gravity="center"
                            android:layout_marginTop="10.67dp"
                            android:fontFamily="@font/sofiapro_medium"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            />

                        <TextView
                            android:id="@+id/tv_people_num"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="20"
                            android:textSize="22dp"
                            android:textColor="@color/c_fa4a1f"
                            android:fontFamily="@font/sofiapro_bold"
                            app:layout_constraintTop_toBottomOf="@+id/tv_total_friend_num_title"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            />


                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_invite_people_num"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="1dp"
                    tools:visibility="visible"
                    android:visibility="gone"
                    android:background="@color/white_ff"
                    android:elevation="10dp"
                    android:outlineAmbientShadowColor="@color/c_f41558_10"
                    app:layout_constraintTop_toBottomOf="@+id/cl_invite_data"
                    app:layout_constraintStart_toStartOf="@+id/cl_invite_data"
                    app:layout_constraintEnd_toEndOf="@+id/cl_invite_data"
                    >

                    <TextView
                        android:id="@+id/tv_time_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/me_bonus_center_time"
                        android:textSize="13dp"
                        android:textColor="@color/black_00"
                        android:fontFamily="@font/sofiapro_medium"
                        android:layout_marginStart="30dp"
                        android:layout_marginTop="21dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        />

                    <TextView
                        android:id="@+id/tv_user_id_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/me_bonus_center_user"
                        android:textSize="13dp"
                        android:textColor="@color/black_00"
                        android:fontFamily="@font/sofiapro_medium"
                        app:layout_constraintTop_toTopOf="@+id/tv_time_title"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        />

                    <TextView
                        android:id="@+id/tv_bonus_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/me_bonus"
                        android:textSize="13dp"
                        android:layout_marginEnd="37dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:textColor="@color/black_00"
                        android:fontFamily="@font/sofiapro_medium"
                        app:layout_constraintTop_toTopOf="@+id/tv_user_id_title"
                        />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:background="@color/c_e4e2e3"
                        android:layout_marginTop="10dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tv_time_title"
                        app:layout_constraintEnd_toEndOf="parent"
                        />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_invite_people"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="11dp"
                        android:paddingStart="15dp"
                        android:paddingEnd="15dp"
                        android:overScrollMode="never"
                        app:layout_constraintTop_toBottomOf="@+id/tv_time_title"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_top_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/invite_top_view"
                android:scaleType="centerCrop"
                />

            <ImageView
                android:id="@+id/iv_closed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/bonus_back_icon"
                android:padding="5dp"
                android:layout_marginTop="50dp"
                android:layout_marginStart="15dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/me_bonus_center_check_friend"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:fontFamily="@font/sofiapro_medium"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/iv_closed"
                app:layout_constraintBottom_toBottomOf="@+id/iv_closed"
                android:shadowRadius="1"
                android:shadowDy="1.33"
                android:shadowDx="0"
                android:shadowColor="@color/black_00_30"
                />

          <!--  <ImageView
                android:id="@+id/iv_rule"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/bonus_rule_icon"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/iv_closed"
                app:layout_constraintBottom_toBottomOf="@+id/iv_closed"
                android:visibility="gone"
                />-->
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/atv_rule"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="50dp"
                android:minHeight="24dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/iv_closed"
                app:layout_constraintBottom_toBottomOf="@+id/iv_closed"
                android:background="@drawable/shape_invite_friend_rule"
                android:text="@string/invite_rule_dialog_title"
                android:gravity="center"
                android:textColor="@color/white"
                app:fontFamily="@font/sofiapro_medium"
                android:textSize="13sp"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <ViewStub
            android:id="@+id/try_again_view"
            android:layout_width="match_parent"
            android:layout_height="196dp"
            android:layout_marginTop="13dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout="@layout/no_network"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />

        <ImageView
            android:id="@+id/main_loading_iv"
            android:layout_width="@dimen/loading_width"
            android:layout_height="@dimen/loading_height"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@drawable/loading"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
         