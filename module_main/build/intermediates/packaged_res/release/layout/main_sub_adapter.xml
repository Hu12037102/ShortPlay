<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_adapter"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/sub_week_bg"
        >



    <com.ruffian.library.widget.RTextView
        android:id="@+id/num_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="5dp"
        android:textColor="@color/color_282A24"
        app:fontFamily="@font/sofiapro_bold"
        />

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/sofiapro_bold"
        android:textSize="16sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/num_tv"
        android:layout_marginStart="5dp"
        android:layout_marginTop="21dp"
        android:textColor="@color/color_282A24"
        android:visibility="gone"
        />

    <TextView
        android:id="@+id/tv_time_tips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/sofiapro_medium"
        android:textSize="10sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="46dp"
        android:lineSpacingExtra="3dp"
        android:textColor="@color/color_7B3107"
        tools:ignore="SmallSp" />

    <com.ruffian.library.widget.RTextView
        android:id="@+id/tv_expire"
        android:layout_width="wrap_content"
        android:minWidth="118dp"
        android:layout_height="20dp"
        android:fontFamily="@font/sofiapro_medium"
        android:textSize="10sp"
        android:layout_marginStart="16dp"
        android:textColor="@color/white"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:background_normal="@color/black_20"
        app:layout_constraintRight_toRightOf="parent"
        app:corner_radius_bottom_left="8dp"
        app:corner_radius_top_right="8dp"
        android:visibility="gone"
        android:paddingStart="4dp"
        android:paddingEnd="4dp"
        tools:ignore="SmallSp" />


    <com.ruffian.library.widget.RTextView
        android:id="@+id/rv_price"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        app:corner_radius="20dp"
        app:background_normal="@color/color_6E2911"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="13dp"
        android:fontFamily="@font/sofiapro_medium"
        android:textSize="11sp"
        android:textColor="@color/white"
        android:gravity="center"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        />
    <com.ruffian.library.widget.RTextView
        android:id="@+id/claim_price"
        android:layout_width="100dp"
        android:layout_height="35dp"
        app:corner_radius="20dp"
        app:background_normal="@color/color_6E2911"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="13dp"
        android:fontFamily="@font/sofiapro_medium"
        android:textSize="16sp"
        android:text="@string/claim"
        android:textColor="@color/white"
        android:gravity="center"
        />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/discount_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="VIP Subscribe +120%"
        android:textColor="@color/white"
        android:textSize="13sp"
        android:fontFamily="@font/sofiapro_medium"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="30dp"
        android:background="@drawable/sub_vip_logo"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        android:visibility="gone"

        />

</androidx.constraintlayout.widget.ConstraintLayout>