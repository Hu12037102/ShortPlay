<?xml version="1.0" encoding="utf-8"?>

                                                       
                                                   


    

           


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_bonus"
        android:layout_width="match_parent"
        android:layout_height="match_parent" android:tag="layout/main_activity_new_bonus_center_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/new_bonus_bg"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/bonus_curve_bg"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/cl_title_parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/new_bonus_title_background"
            android:paddingBottom="10dp">
            <ImageView
                android:id="@+id/iv_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/bonus_back_icon"
                android:layout_marginTop="40dp"
                android:layout_marginStart="17dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                />

            <TextView
                android:id="@+id/tv_bonus_center_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/main_user_bonus"
                android:textSize="20dp"
                android:textColor="@color/white"
                android:fontFamily="@font/sofiapro_medium"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/iv_close"
                app:layout_constraintBottom_toBottomOf="@+id/iv_close"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/cl_title_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:fillViewport="true">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:tag="binding_1">
                <ImageView
                    android:id="@+id/iv_bonus_alpha"
                    android:layout_width="118dp"
                    android:layout_height="118dp"
                    android:src="@drawable/bonus_alpa_icon"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="4dp"
                    />
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="20dp"
                    android:id="@+id/cl_wallet">
                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        android:textSize="15sp"
                        android:padding="6dp"
                        android:layout_marginStart="12dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:fontFamily="@font/sofiapro_medium"
                        android:text="@string/main_user_my_wallet"
                        android:textColor="@color/white"
                        app:drawableEndCompat="@drawable/play_right_white_new"
                        android:drawablePadding="6dp"
                        app:drawableTint="@color/white"
                        android:id="@+id/atv_wallet_title"
                        />
                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/atv_wallet_title"
                        android:id="@+id/atv_coins_count"
                        app:fontFamily="@font/sofiapro_medium"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="18dp"
                        android:textColor="@color/white"
                        android:textSize="22sp"
                        tools:text="200Coins"
                        />
                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="@id/atv_coins_count"
                        android:id="@+id/atv_bonus_count"
                        app:fontFamily="@font/sofiapro_medium"
                        app:layout_constraintStart_toEndOf="@id/atv_coins_count"
                        android:layout_marginStart="20dp"
                        android:textColor="@color/white"
                        android:textSize="22sp"
                        tools:text="200Coins"
                        />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_sign"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="17dp"
                    android:layout_marginEnd="17dp"
                    android:layout_marginTop="10dp"
                    android:visibility="gone"
                    tools:visibility="visible"
                    app:layout_constraintTop_toBottomOf="@+id/cl_wallet"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:background="@color/white_ff"
                    android:elevation="10dp"
                    android:outlineAmbientShadowColor="@color/c_f41558"
                    >

                    <TextView
                        android:id="@+id/tv_sign_content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="Check-In Streak:3Day(s)"
                        android:textSize="16dp"
                        android:textColor="@color/black_00"
                        android:fontFamily="@font/sofiapro_medium"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginTop="15dp"
                        android:layout_marginStart="15dp"
                        />

                    <ImageView
                        android:id="@+id/iv_check"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/new_bonus_center_doubt_logo"
                        android:layout_marginStart="4dp"
                        android:layout_marginBottom="1.5dp"
                        app:layout_constraintStart_toEndOf="@+id/tv_sign_content"
                        app:layout_constraintBottom_toBottomOf="@+id/tv_sign_content"
                        />
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_sign"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="13dp"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="10dp"
                        android:overScrollMode="never"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tv_sign_content"
                        />
                    <!--            <include-->
                    <!--                android:id="@+id/rv_sign"-->
                    <!--                android:layout_width="wrap_content"-->
                    <!--                android:layout_height="100dp"-->
                    <!--                layout="@layout/main_bonus_center_sign"-->
                    <!--                android:layout_marginTop="13dp"-->
                    <!--                android:layout_marginStart="15dp"-->
                    <!--                android:layout_marginEnd="10dp"-->
                    <!--                app:layout_constraintStart_toStartOf="parent"-->
                    <!--                app:layout_constraintEnd_toEndOf="parent"-->
                    <!--                app:layout_constraintTop_toBottomOf="@+id/tv_sign_content"-->
                    <!--                />-->

                    <TextView
                        android:id="@+id/tv_check_in"
                        android:layout_width="200dp"
                        android:layout_height="40dp"
                        android:gravity="center"
                        android:layout_marginBottom="17dp"
                        android:textSize="16sp"
                        android:textColor="@color/white_ff"
                        android:text="@string/me_bonus_center_check_in_button"
                        android:fontFamily="@font/sofiapro_medium"
                        android:layout_marginTop="16dp"
                        app:layout_constraintTop_toBottomOf="@+id/rv_sign"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        />


                </androidx.constraintlayout.widget.ConstraintLayout>

                <ImageView
                    android:id="@+id/iv_invite"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/invite_friend_btn_bg"
                    android:layout_marginStart="17dp"
                    android:layout_marginEnd="17dp"
                    android:scaleType="fitXY"
                    android:visibility="gone"
                    tools:visibility="visible"
                    android:layout_marginTop="10dp"
                    app:layout_constraintTop_toBottomOf="@+id/cl_sign"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    />

                <TextView
                    android:id="@+id/tv_invite_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/me_bonus_center_get_small_write"
                    android:textSize="17.33dp"
                    android:visibility="gone"
                    android:textColor="@color/white_f0"
                    android:fontFamily="@font/sofiapro_bold"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="14dp"
                    android:shadowColor="@color/c_d03900"
                    android:shadowRadius="3"
                    android:shadowDy="2"
                    app:layout_constraintTop_toTopOf="@+id/iv_invite"
                    app:layout_constraintStart_toStartOf="@+id/iv_invite"
                    app:layout_constraintEnd_toEndOf="@+id/iv_invite"
                    />

                <ImageView
                    android:id="@+id/iv_invite_bonus"
                    android:layout_width="21dp"
                    android:layout_height="22dp"
                    android:visibility="gone"
                    android:src="@drawable/home_free"
                    android:layout_marginTop="6dp"
                    app:layout_constraintStart_toStartOf="@+id/tv_invite_title"
                    app:layout_constraintTop_toBottomOf="@+id/tv_invite_title"
                    />

                <TextView
                    android:id="@+id/tv_invite_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="+1000"
                    android:textSize="19sp"
                    android:visibility="gone"
                    android:textColor="@color/orange_55"
                    android:fontFamily="@font/sofiapro_bold"
                    android:layout_marginStart="3dp"
                    android:shadowColor="@color/c_d03900"
                    android:shadowRadius="3"
                    android:shadowDy="3"
                    app:layout_constraintStart_toEndOf="@+id/iv_invite_bonus"
                    app:layout_constraintBottom_toBottomOf="@+id/iv_invite_bonus"
                    />


                <include
                    android:id="@+id/include_login"
                    layout="@layout/main_include_login"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/iv_invite"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginStart="17dp"
                    android:layout_marginEnd="17dp"
                    android:layout_marginTop="10dp"
                    tools:visibility="visible"
                    android:visibility="gone"
                    />


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_watch_ad"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxHeight="290dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="17dp"
                    android:layout_marginEnd="17dp"
                    android:layout_marginBottom="19dp"
                    android:visibility="gone"
                    app:layout_constraintTop_toBottomOf="@+id/include_login"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:background="@color/white_ff"
                    android:elevation="10dp"
                    android:outlineAmbientShadowColor="@color/c_f41558"
                    >
                    <TextView
                        android:id="@+id/tv_watch_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/daily_task"
                        android:textColor="@color/black_00"
                        android:fontFamily="@font/sofiapro_medium"
                        android:textSize="16sp"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="15dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        />

                    <ImageView
                        android:id="@+id/iv_watch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/new_bonus_center_doubt_logo"
                        android:layout_marginStart="4dp"
                        app:layout_constraintStart_toEndOf="@+id/tv_watch_title"
                        app:layout_constraintTop_toTopOf="@+id/tv_watch_title"
                        app:layout_constraintBottom_toBottomOf="@+id/tv_watch_title"
                        />
                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="18dp"
                        android:layout_marginEnd="18dp"
                        android:paddingTop="20dp"
                        android:paddingBottom="20dp"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginTop="50dp"
                        android:textColor="@color/c_888888"
                        android:textSize="15sp"
                        tools:text="啊昆德拉设计大赛"
                        android:gravity="center_horizontal"
                        android:lineSpacingExtra="2dp"
                        android:id="@+id/atv_not_ad_empty"

                        />
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_watch_ad"
                        android:layout_width="match_parent"
                        android:layout_height="210dp"
                        android:paddingStart="15dp"
                        android:paddingEnd="15dp"
                        android:layout_marginTop="14dp"
                        app:layout_constraintTop_toBottomOf="@+id/tv_watch_title"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/white_f5"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginTop="48dp"
                        />


                </androidx.constraintlayout.widget.ConstraintLayout>


                <ViewStub
                    android:id="@+id/try_again_view"
                    android:layout_width="match_parent"
                    android:layout_height="196dp"
                    android:layout_marginTop="13dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout="@layout/no_network"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    />
                <ImageView
                    android:id="@+id/main_loading_iv"
                    android:layout_width="@dimen/loading_width"
                    android:layout_height="@dimen/loading_height"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:visibility="gone"
                    android:background="@drawable/loading"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    />


            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.core.widget.NestedScrollView>



    </androidx.constraintlayout.widget.ConstraintLayout>
         