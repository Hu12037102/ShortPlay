<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:ignore="MissingDefaultResource">



    <com.ruffian.library.widget.RRelativeLayout
        android:layout_width="238dp"
        android:layout_height="200dp"
        app:background_normal="@color/black_22"
        app:corner_radius="6dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">



        <TextView
            android:id="@+id/content_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:textSize="15sp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:textColor="@color/white"
            android:gravity="center"
            android:text="自定义设备ID"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/content_ed"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@+id/content_tv"
            android:layout_marginTop="5dp"
            android:layout_marginStart="15dp"
            android:layout_marginRight="15dp"
            android:hint="请输入自定义设备ID"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textColorHint="@color/white"
            />


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/white_10"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="48dp"
            />

        <View
            android:id="@+id/view"
            android:layout_width="1dp"
            android:layout_height="48dp"
            android:background="@color/white_10"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            />



        <TextView
            android:id="@+id/cancel"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="取消"
            android:gravity="center"
            android:layout_alignParentBottom="true"
            android:layout_toStartOf="@+id/view"
            android:textSize="12sp"
            android:textColor="@color/white_ff_99"
            />
        <TextView
            android:id="@+id/remove"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="确认"
            android:gravity="center"
            android:layout_alignParentBottom="true"
            android:textColor="@color/red_ff"
            android:layout_toEndOf="@+id/view"
            android:textSize="12sp"
            />





    </com.ruffian.library.widget.RRelativeLayout>











</androidx.constraintlayout.widget.ConstraintLayout>