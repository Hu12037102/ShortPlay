<?xml version="1.0" encoding="utf-8"?>

                                                       
                                                   
    
           

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_christmas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         android:tag="layout/main_flash_christmas_logo_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">


        <ImageView
            android:id="@+id/rl_flash_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/main_flash_close"
            app:layout_constraintEnd_toEndOf="@+id/flash_logo"
            app:layout_constraintStart_toEndOf="@+id/flash_logo"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/flash_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/home_flash_christmas_sale_logo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rl_flash_close" />

        <TextView
            android:id="@+id/proportion_discount_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/sofiapro_bold"
            android:textColor="@color/orange_b8"
            android:textSize="23sp"
            android:visibility="gone"
            tools:visibility="visible"
            app:layout_constraintEnd_toEndOf="@+id/flash_logo"
            app:layout_constraintStart_toStartOf="@+id/flash_logo"
            app:layout_constraintTop_toTopOf="@+id/flash_logo"
            tools:text="99%" />

        <TextView
            android:id="@+id/tv_off"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:fontFamily="@font/sofiapro_bold"
            android:textColor="@color/orange_b8"
            android:textSize="13sp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/flash_logo"
            app:layout_constraintEnd_toEndOf="@+id/flash_logo"
            app:layout_constraintStart_toStartOf="@+id/flash_logo"
            android:text="@string/play_subtitle_off" />
    </androidx.constraintlayout.widget.ConstraintLayout>
         