<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_marginStart="18dp"
    android:layout_marginEnd="18dp"
    tools:background="@color/black">

    <TextView
        android:id="@+id/episodes_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="30dp"
        android:ellipsize="end"
        android:fontFamily="@font/sofiapro_medium"
        android:maxLines="1"
        android:textColor="@color/white"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/episodes_num"
        app:layout_constraintVertical_chainStyle="packed"/>

    <TextView
        android:id="@+id/episodes_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/sofiapro_medium"
        android:text="@string/play_1080p"
        android:textColor="@color/white_ff_99"
        android:textSize="11sp"
        app:layout_constraintBottom_toTopOf="@id/episodes_time"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/episodes_name"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp"/>


    <TextView
        android:id="@+id/episodes_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/sofiapro_medium"
        android:textColor="@color/white_ff_99"
        android:textSize="11sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/episodes_num"
        tools:text="Nov 10,2023"

        />

    <TextView
        android:id="@+id/episodes_bonus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:drawableEnd="@drawable/app_bonus_logo"
        android:drawablePadding="7dp"
        android:fontFamily="@font/sofiapro_bold"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="UseCompatTextViewDrawableXml" />

    <TextView
        android:id="@+id/episodes_coins"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="30dp"
        android:layout_toStartOf="@+id/episodes_bonus"
        android:drawableEnd="@drawable/app_coins_logo"
        android:drawablePadding="7dp"
        android:fontFamily="@font/sofiapro_bold"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:visibility="gone"
        tools:ignore="UseCompatTextViewDrawableXml"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/episodes_bonus"
        android:layout_marginBottom="12dp"
        app:layout_goneMarginEnd="0dp"
        tools:visibility="visible" />

</androidx.constraintlayout.widget.ConstraintLayout>