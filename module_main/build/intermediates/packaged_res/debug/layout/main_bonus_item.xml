<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    xmlns:tools="http://schemas.android.com/tools"
    tools:background="@color/black">

    <TextView
        android:id="@+id/bonus_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="@color/white"
        android:layout_marginTop="14dp"
        tools:text="sdsdds"
        android:fontFamily="@font/sofiapro_medium"
        />





    <TextView
        android:id="@+id/bonus_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bonus_name"
        android:layout_marginTop="10dp"
        android:textColor="@color/white_ff_99"
        tools:text="sdsdds"
        android:fontFamily="@font/sofiapro_medium"
        android:textSize="11sp"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/bonus_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:textSize="16sp"
        android:drawablePadding="7dp"
        app:drawableRightCompat="@drawable/user_money_logo"
        android:layout_marginTop="14dp"
        tools:text="sdsdds"
        android:textColor="@color/white"
        app:fontFamily="@font/sofiapro_bold"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/bonus_money"
        app:fontFamily="@font/sofiapro_medium"
        android:textSize="11sp"
        android:layout_marginTop="10dp"
        android:layout_alignParentEnd="true"
        tools:text="sdjskladjl"
        android:textColor="@color/white_ff_99"
        />

</RelativeLayout>