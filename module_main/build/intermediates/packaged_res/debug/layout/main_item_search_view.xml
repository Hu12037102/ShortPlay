<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">


        <com.ruffian.library.widget.RImageView
            android:id="@+id/riv_content"
            android:layout_width="match_parent"
            android:layout_height="214dp"
            app:corner_radius="6dp"
            app:layout_constraintTop_toTopOf="parent" />

        <com.ruffian.library.widget.RTextView
            android:id="@+id/updated_to_tv"
            android:layout_width="84dp"
            android:layout_height="18dp"
            android:fontFamily="@font/sofiapro_medium"
            android:gravity="center"
            android:text="@string/updated_to"
            android:textColor="@color/white"
            android:textSize="11sp"
            app:background_normal="@color/color_80000000"
            app:corner_radius_bottom_right="6dp"
            app:corner_radius_top_left="6dp"
            app:layout_constraintBottom_toBottomOf="@+id/riv_content"
            app:layout_constraintEnd_toEndOf="@+id/riv_content"

            />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/atv_content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/sofiapro_medium"
            android:textColor="@color/white"
            android:textSize="13sp"
            app:layout_constraintLeft_toLeftOf="@id/riv_content"
            app:layout_constraintRight_toRightOf="@id/riv_content"
            app:layout_constraintTop_toBottomOf="@id/riv_content" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_special_parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="18dp"
        android:minHeight="410dp"
        android:visibility="visible"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="gone">

        <com.ruffian.library.widget.RImageView
            android:id="@+id/riv_special_background"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scaleType="centerCrop"
            app:corner_radius="30dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/home_special_search_background" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/atv_special_title"
            android:layout_width="match_parent"
            android:layout_height="88dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:ellipsize="end"
            android:gravity="center"
            android:lineSpacingExtra="2dp"
            android:maxLines="2"
            android:textColor="@color/color_ff6B1804"
            android:textSize="20sp"
            app:fontFamily="@font/sofiapro_bold"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="asjdklasldasj" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_special_content_parent"
            android:layout_width="162dp"
            android:layout_height="216dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/atv_special_title"
            tools:background="@color/black">

            <com.ruffian.library.widget.RImageView
                android:id="@+id/riv_special_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                app:corner_radius="6dp"
                tools:background="@color/white" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/aiv_special_play"
            android:layout_width="240dp"
            android:layout_height="50dp"
            android:layout_marginTop="24dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cl_special_content_parent"
            app:srcCompat="@drawable/home_special_search_play" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="6dp"
            android:text="@string/play_content"
            android:textColor="@color/color_FF5A1001"
            android:textSize="20sp"
            android:textStyle="bold"
            app:drawableStartCompat="@drawable/search_bonus_play_icon"
            app:fontFamily="@font/sofiapro_medium"
            app:layout_constraintBottom_toBottomOf="@id/aiv_special_play"
            app:layout_constraintEnd_toEndOf="@id/aiv_special_play"
            app:layout_constraintStart_toStartOf="@id/aiv_special_play"
            app:layout_constraintTop_toTopOf="@id/aiv_special_play" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/atv_special_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:gravity="center_horizontal"
            android:paddingTop="18dp"
            android:paddingBottom="25dp"
            android:textColor="@color/color_ffe4caa5"
            android:textSize="15sp"
            app:fontFamily="@font/sofiapro_medium"
            app:layout_constraintTop_toBottomOf="@id/aiv_special_play"
            tools:visibility="visible" />

        <View
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:visibility="visible"
            app:layout_constraintTop_toBottomOf="@id/aiv_special_play" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_other_channel_parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible"
        android:visibility="gone"
        >

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/aiv_other_channel_background"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/view_other_channel_border"
            android:layout_width="220dp"
            android:layout_height="292dp"
            android:layout_marginTop="70dp"
            android:background="@drawable/search_other_channel_border"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.ruffian.library.widget.RImageView
            android:id="@+id/aiv_other_channel_content"
            android:layout_width="214dp"
            android:layout_height="286dp"
            app:corner_radius="6dp"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="@id/view_other_channel_border"
            app:layout_constraintEnd_toEndOf="@id/view_other_channel_border"
            app:layout_constraintStart_toStartOf="@id/view_other_channel_border"
            app:layout_constraintTop_toTopOf="@id/view_other_channel_border" />

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@id/aiv_other_channel_content"
            app:layout_constraintEnd_toEndOf="@id/aiv_other_channel_content"
            app:layout_constraintStart_toStartOf="@id/aiv_other_channel_content"
            app:layout_constraintTop_toTopOf="@id/aiv_other_channel_content"
            app:srcCompat="@drawable/search_other_channel_play"
            android:id="@+id/aiv_other_channel_play"
            android:padding="10dp"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/atv_other_channel_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="40dp"
            android:gravity="center_horizontal"
            android:lineSpacingExtra="2dp"
            android:text="@string/search_other_channel_content"
            android:textColor="@color/color_FFE1B7F4"
            android:textSize="13sp"
            app:fontFamily="@font/sofiapro_medium"
            app:layout_constraintTop_toBottomOf="@id/view_other_channel_border" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:minWidth="160dp"
            android:minHeight="40dp"
            android:textColor="@color/black"
            android:textSize="15sp"
            app:layout_constraintTop_toBottomOf="@id/atv_other_channel_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="26dp"
            tools:text="Urge for Updates"
            app:fontFamily="@font/sofiapro_medium"
            android:id="@+id/atv_other_channel_update"
            />
<androidx.appcompat.widget.AppCompatTextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintTop_toBottomOf="@id/atv_other_channel_update"
    android:layout_marginTop="10dp"
    app:fontFamily="@font/sofiapro_medium"
    android:textSize="13sp"
    android:textColor="@color/color_FFE1B7F4"
    android:id="@+id/atv_other_channel_count"
    tools:text="Number of urges:9999"
    android:gravity="center_horizontal"
    android:layout_marginStart="40dp"
    android:layout_marginEnd="40dp"
    />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>