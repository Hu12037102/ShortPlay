<?xml version="1.0" encoding="utf-8"?>

                                                              
                                                       
                                          

    

           

    <com.ruffian.library.widget.RConstraintLayout
        android:id="@+id/rl_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:corner_radius="12dp"
        tools:visibility="visible"
        app:background_normal="@color/white" android:tag="layout/main_include_login_0" xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" tools:ignore="MissingDefaultResource">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/new_user_task"
            android:textColor="@color/black_00"
            android:fontFamily="@font/sofiapro_medium"
            android:textSize="16sp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_watch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/new_bonus_center_doubt_logo"
            android:layout_marginStart="4dp"
            app:layout_constraintStart_toEndOf="@+id/tv_title"
            app:layout_constraintTop_toTopOf="@+id/tv_title"
            app:layout_constraintBottom_toBottomOf="@+id/tv_title"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:background="@color/color_f0f0f0"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="48dp"
            android:id="@+id/line_1"
            />
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="18dp"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="50dp"
            android:textColor="@color/c_888888"
            android:textSize="15sp"
            tools:text="啊昆德拉设计大赛"
            android:gravity="center_horizontal"
            android:lineSpacingExtra="2dp"
            android:id="@+id/atv_not_use_task_empty"

            />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:id="@+id/cl_login_reward"
            app:layout_constraintTop_toBottomOf="@id/line_1"
            >
        
        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/user_sculpture"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginStart="13dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="15sp"
            android:fontFamily="@font/sofiapro_medium"
            android:textColor="@color/black_00"
            android:text="@string/login_reward"
            android:layout_marginStart="63dp"
            android:layout_marginTop="19dp"
            />

        <TextView
            android:id="@+id/tv_user_bonus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/watch_ad_conis_icon"
            android:drawablePadding="2dp"
            android:textColor="@color/c_888888"
            android:fontFamily="@font/sofiapro_medium"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="63dp"
            android:layout_marginTop="44dp"
            tools:text="+1000" />

        <com.ruffian.library.widget.RTextView
            android:id="@+id/user_login_go"
            android:layout_width="90dp"
            android:layout_height="32dp"
            android:textColor="@color/red_ff"
            android:textSize="14sp"
            android:text="@string/new_user_go"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="13dp"
            app:background_normal="@color/c_ffeff4"
            app:corner_radius="16dp"
            android:gravity="center"
            android:fontFamily="@font/sofiapro_medium"
            />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:background="@color/color_f0f0f0"
            app:layout_constraintTop_toBottomOf="@id/cl_login_reward"
            android:id="@+id/line_2"
            />
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_notification"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            app:layout_constraintTop_toBottomOf="@id/line_2">
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/bound_reward_notification"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="13dp"
                android:id="@+id/aiv_notification_icon"
                />
            <com.ruffian.library.widget.RTextView
                android:id="@+id/rtv_notification_go"
                android:layout_width="90dp"
                android:layout_height="32dp"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:text="@string/new_user_go"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginEnd="13dp"
                app:background_normal="@color/red_860"
                app:corner_radius="16dp"
                android:gravity="center"
                android:fontFamily="@font/sofiapro_medium"
                />
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/atv_notification_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/aiv_notification_icon"
                app:layout_constraintEnd_toStartOf="@id/rtv_notification_go"
                android:layout_marginStart="10dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="18dp"
                app:fontFamily="@font/sofiapro_medium"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:text="@string/turn_on_notifications"
                android:singleLine="true"
                />
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/atv_notification_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:drawableStartCompat="@drawable/watch_ad_conis_icon"
                app:layout_constraintStart_toStartOf="@id/atv_notification_title"
                app:layout_constraintEnd_toStartOf="@id/rtv_notification_go"
                app:layout_constraintTop_toBottomOf="@id/atv_notification_title"
                app:layout_constraintHorizontal_bias="0"
                android:layout_marginTop="7dp"
                app:fontFamily="@font/sofiapro_medium"
                android:textColor="@color/c_888888"
                tools:text="+1000"
                android:drawablePadding="2dp"
                app:layout_constrainedWidth="true"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>



    </com.ruffian.library.widget.RConstraintLayout>
         