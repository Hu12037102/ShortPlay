<?xml version="1.0" encoding="utf-8"?>

                                                  
                                                        

    

           

    <com.ruffian.library.widget.RRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="18dp"
        app:corner_radius="10dp"
        app:background_normal="@color/white_15"
        tools:ignore="MissingDefaultResource" android:tag="layout/main_include_wallet_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white_90"
            android:text="@string/my_wallet"
            android:textSize="17sp"
            android:layout_marginStart="18dp"
            android:layout_marginTop="13dp"
            android:fontFamily="@font/sofiapro_medium"

            />

        <TextView
            android:id="@+id/tv_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white_ff_99"
            android:text="@string/my_detail"
            android:textSize="13sp"
            android:layout_marginEnd="14dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="14dp"
            android:padding="4dp"
            android:drawablePadding="7dp"
            android:gravity="center_vertical"
            android:drawableRight="@drawable/user_right_white"
            android:fontFamily="@font/sofiapro_medium" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/user_right_white"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="18dp"
            android:layout_marginTop="20dp"
            android:visibility="gone"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/white_15"
            android:layout_marginTop="50dp"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="18dp" />

        <include
            android:id="@+id/include_wallet_coins"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="69dp"
            android:layout_marginStart="18dp"
            layout="@layout/main_include_coins"
            />

        <View
            android:id="@+id/line1"
            android:layout_width="1dp"
            android:layout_height="20dp"
            android:background="@color/white_15"
            android:layout_toEndOf="@id/include_wallet_coins"
            android:layout_marginStart="15dp"
            android:layout_marginTop="77dp" />


        <include
            android:id="@+id/include_wallet_bonus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="69dp"
            android:layout_toEndOf="@id/line1"
            android:layout_marginStart="15dp"
            layout="@layout/main_include_bonus"
            />


        <com.ruffian.library.widget.RTextView
            android:id="@+id/top_up"
            android:layout_width="90dp"
            android:layout_height="35dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="17dp"
            android:layout_marginEnd="18dp"
            app:background_normal="@color/red_ff"
            app:corner_radius="20dp"
            android:fontFamily="@font/sofiapro_bold"
            android:textColor="@color/white"
            android:text="@string/my_top_up"
            android:gravity="center" />


    </com.ruffian.library.widget.RRelativeLayout>
         