<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="15dp"
    android:layout_marginBottom="12dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:ignore="MissingDefaultResource">


    <RelativeLayout
        android:id="@+id/favorite_ll"
        android:layout_width="103dp"
        android:layout_height="138dp">

        <com.ruffian.library.widget.RImageView
            android:id="@+id/favorite_iv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:corner_radius="6dp"
            android:scaleType="centerCrop"
            />

        <com.ruffian.library.widget.RRelativeLayout
            android:id="@+id/rr_has_updated"
            android:layout_width="20dp"
            android:layout_height="18dp"
            app:corner_radius_top_right="6dp"
            app:corner_radius_bottom_left="6dp"
            app:background_normal="@array/array_list"
            android:layout_alignEnd="@+id/favorite_iv"
            android:visibility="gone"
            >

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/common_small_bell_bg"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                />


        </com.ruffian.library.widget.RRelativeLayout>
        <com.ruffian.library.widget.RTextView
            android:id="@+id/updated_to_tv"
            android:layout_width="84dp"
            android:layout_height="18dp"
            app:corner_radius_top_left="6dp"
            app:corner_radius_bottom_right="6dp"
            app:background_normal="@color/color_80000000"
            android:layout_alignEnd="@+id/favorite_iv"
            android:layout_alignBottom="@+id/favorite_iv"
            android:textSize="11sp"
            android:gravity="center"
            android:fontFamily="@font/sofiapro_medium"
            android:textColor="@color/white"
            android:visibility="gone"
            />


        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/main_pause_logo"
            android:visibility="gone"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"/>
        
        <ImageView
            android:id="@+id/favorite_select"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/main_select_all_logo"
            android:layout_alignParentEnd="true"
            android:visibility="gone"
            />
        
        
    </RelativeLayout>

    <TextView
        android:id="@+id/favorite_name"
        android:layout_width="103dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/favorite_ll"
        android:layout_marginTop="6dp"
        android:textSize="12sp"
        android:textColor="@color/white"
        android:ellipsize="end"
        android:maxLines="2"
        android:fontFamily="@font/sofiapro_medium"
        tools:ignore="SmallSp" />

    <TextView
        android:id="@+id/favorite_current_set"
        android:layout_width="103dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/favorite_name"
        android:layout_marginTop="6dp"
        android:textSize="11sp"
        android:textColor="@color/black_8080"
        android:ellipsize="end"
        android:lines="1"
        android:fontFamily="@font/sofiapro_medium"
        tools:ignore="SmallSp" />


</RelativeLayout>