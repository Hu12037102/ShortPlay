<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cl_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_adapter"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@drawable/sub_week_bg"
        android:layout_marginTop="12dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">




    <com.ruffian.library.widget.RTextView
        android:id="@+id/num_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/sofiapro_bold"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="5dp"
        android:textColor="@color/color_282A24"
        />

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/total_month"
        android:fontFamily="@font/sofiapro_bold"
        android:textSize="16sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/num_tv"
        android:layout_marginStart="5dp"
        android:layout_marginTop="21dp"
        android:textColor="@color/white"
        android:visibility="gone"
        />

        <TextView
            android:id="@+id/tv_time_tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="46dp"
            android:fontFamily="@font/sofiapro_medium"
            android:lineSpacingExtra="3dp"
            android:textColor="@color/color_7B3107"
            android:textSize="10sp"
            android:layout_marginStart="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <com.ruffian.library.widget.RTextView
        android:id="@+id/rv_price"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        app:corner_radius="20dp"
        app:background_normal="@color/color_6E2911"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="13dp"
        android:textSize="11sp"
        android:textColor="@color/white"
        android:fontFamily="@font/sofiapro_medium"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:gravity="center"
        />
    </androidx.constraintlayout.widget.ConstraintLayout>


    <TextView
        android:id="@+id/discount_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="13sp"
        android:fontFamily="@font/sofiapro_medium"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="20dp"
        android:background="@drawable/sub_vip_logo"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        android:visibility="gone"

        />


</androidx.constraintlayout.widget.ConstraintLayout>