<?xml version="1.0" encoding="utf-8"?>

                                                  
                                                        

    

           

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="MissingDefaultResource" android:tag="layout/main_transation_all_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto">


        <include
            android:id="@+id/transation_include"
            layout="@layout/main_include_title"/>


        <com.ruffian.library.widget.RRelativeLayout
            android:id="@+id/transaction_rr"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="12dp"
            app:background_normal="@color/white_15"
            app:corner_radius="6dp"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="18dp"
            app:layout_constraintTop_toBottomOf="@+id/transation_include">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/me_balance"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:layout_marginStart="18dp"
                android:layout_marginTop="15dp"
                />
            
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="48dp"
                android:layout_marginStart="18dp"
                android:layout_marginEnd="18dp"
                android:background="@color/white_15"
                />


            <TextView
                android:id="@+id/transaction_me_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/main_wallet_money"
                android:layout_marginEnd="6dp"
                android:layout_marginStart="18dp"
                android:textSize="20sp"
                android:textColor="@color/white_ff"
                android:drawablePadding="6dp"
                android:layout_marginTop="16.6dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="20dp"
                android:text="0"
                tools:ignore="UseCompatTextViewDrawableXml" />


            <com.ruffian.library.widget.RTextView
                android:id="@+id/transaction_recharge"
                android:layout_width="106dp"
                android:layout_height="32dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="17dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="18dp"
                app:background_normal="@array/array_l_r"
                app:corner_radius="20dp"
                android:textColor="@color/white"
                android:gravity="center"
                android:text="@string/me_recharge"
                />
        </com.ruffian.library.widget.RRelativeLayout>




        <RelativeLayout
            android:id="@+id/transaction_his_rl"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/transaction_rr"
            android:layout_marginTop="12dp"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="18dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/main_user_transaction_history"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:layout_centerVertical="true"
                />


            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:src="@drawable/user_right_white"
                android:layout_marginEnd="7dp"
                />



        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/episodes_unlocked_rl"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/transaction_his_rl"
            android:layout_marginTop="12dp"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="18dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/me_unlocked"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:layout_centerVertical="true"
                />


            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:src="@drawable/user_right_white"
                android:layout_marginEnd="7dp"
                />



        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/bonus_his_rl"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/episodes_unlocked_rl"
            android:layout_marginTop="12dp"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="18dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/me_bonus_his"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:layout_centerVertical="true"
                />


            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:src="@drawable/user_right_white"
                android:layout_marginEnd="7dp"
                />



        </RelativeLayout>










    </androidx.constraintlayout.widget.ConstraintLayout>
         