<?xml version="1.0" encoding="utf-8"?>

                                                  
                                                       
                                          

    

           

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@drawable/me_bonus_center_logo"
        android:layout_height="310dp" android:tag="layout/main_view_stub_invite_list_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto" tools:ignore="MissingDefaultResource">



        <ImageView
            android:id="@+id/close_iv"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/main_friend_list_logo"
            android:layout_alignParentEnd="true"/>
        
        <LinearLayout
            android:id="@+id/list_title_ll"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="@string/me_bonus_center_time"
                android:textSize="12sp"
                android:textColor="@color/red_ff"
                android:gravity="center"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="@string/me_bonus_center_user"
                android:textSize="12sp"
                android:textColor="@color/red_ff"
                android:gravity="center"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="@string/me_bonus"
                android:textSize="12sp"
                android:textColor="@color/red_ff"
                android:gravity="center"
                />
        </LinearLayout>

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/red_66"
            android:layout_below="@+id/list_title_ll"
            />
        
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/friend_list_rl"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:layout_below="@+id/view"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/friend_list_rl"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:textColor="@color/red_70"
            android:textSize="12sp"
            android:text="@string/me_bonus_center_show_records"
            />



    </RelativeLayout>
         