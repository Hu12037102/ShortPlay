        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white" android:tag="layout/main_activity_store_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" tools:ignore="MissingDefaultResource">

            <include
                android:id="@+id/top_include_wallet"
                layout="@layout/main_include_title"
                />
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/top_include_wallet">

            <LinearLayout
                android:id="@+id/walletView_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                >


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="23dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/store_balance_bg"
                     android:tag="binding_1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="28dp"
                        android:fontFamily="@font/bold"
                        android:text="@string/play_balance"
                        android:textColor="@color/black_22"
                        android:textSize="18sp" />



                    <include
                        android:id="@+id/include_store_coins"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="155dp"
                        layout="@layout/main_include_coins"
                        />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="20dp"
                        android:background="@color/white_15"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="238dp"/>


                    <include
                        android:id="@+id/include_store_bonus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="260dp"
                        layout="@layout/main_include_bonus"
                        />


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_sub"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    >

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/coins_sub"
                                android:textColor="@color/black_22"
                                android:fontFamily="@font/sofiapro_bold"
                                android:textSize="22sp"
                                android:layout_marginStart="18dp"
                                android:layout_marginTop="10dp"
                                />

                            <TextView
                                android:id="@+id/tv_restore"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/restore"
                                android:textColor="@color/red_ff"
                                android:layout_alignParentEnd="true"
                                android:layout_marginTop="15dp"
                                android:layout_marginEnd="18dp"
                                />

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/home_banner"
                                android:layout_marginTop="56dp"
                                android:layout_marginStart="18dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>


                        </RelativeLayout>



<!--V1.4.3版本样式-->
                    <com.ruffian.library.widget.RRelativeLayout
                        android:id="@+id/episode_rr"
                        android:layout_width="match_parent"
                        android:layout_height="88dp"
                        android:layout_marginStart="18dp"
                        android:layout_marginEnd="18dp"
                        app:corner_radius="6dp"
                        app:background_normal="@color/white_ff_1a"
                        android:visibility="gone"
                        android:layout_marginTop="40dp">


                        <com.ruffian.library.widget.RTextView
                            android:id="@+id/recharge_discount_flag"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            app:gradient_orientation="LEFT_RIGHT"
                            app:gradient_type="linear"
                            android:layout_alignParentEnd="true"
                            app:corner_radius_top_right="6dp"
                            app:corner_radius_bottom_left="6dp"
                            android:layout_marginStart="18dp"
                            app:background_normal="@array/array_l_r"
                            android:textSize="13sp"
                            android:textColor="@color/white"
                            android:paddingStart="5dp"
                            android:paddingEnd="5dp"
                            android:paddingBottom="2.33dp"
                            android:gravity="center"
                            app:fontFamily="@font/sofiapro_medium"
                            tools:ignore="RtlSymmetry" />


                        <ImageView
                            android:id="@+id/episode_iv"
                            android:layout_width="47.3dp"
                            android:layout_height="33.3dp"
                            android:layout_marginTop="31dp"
                            android:layout_marginStart="18dp"
                            android:src="@drawable/play_episode"/>

                        <TextView
                            android:id="@+id/recharge_episode_num"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@id/episode_iv"
                            android:layout_marginStart="12dp"
                            android:textSize="26sp"
                            android:fontFamily="@font/bold"
                            android:textColor="@color/white_ff"
                            android:layout_marginTop="14dp"/>
                        <TextView
                            android:id="@+id/recharge_episode_original"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@id/episode_iv"
                            android:layout_below="@+id/recharge_episode_coins"
                            android:layout_marginStart="12dp"
                            android:textSize="15sp"
                            android:fontFamily="@font/sofiapro_medium"
                            android:textColor="@color/orange_f3"
                            />

                        <TextView
                            android:id="@+id/recharge_episode_coins"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@id/recharge_episode_num"
                            android:layout_marginStart="4dp"
                            android:textSize="15sp"
                            android:fontFamily="@font/sofiapro_medium"
                            android:textColor="@color/white_ff"
                            android:text="@string/play_coins"
                            android:layout_marginTop="25dp"
                            tools:ignore="SmallSp" />


                        <com.ruffian.library.widget.RTextView
                            android:id="@+id/discounted_price_show"
                            android:layout_width="100dp"
                            android:layout_height="35dp"
                            app:corner_radius="20dp"
                            app:background_normal="@color/orange_25"
                            android:layout_alignParentEnd="true"
                            android:layout_marginTop="27dp"
                            android:textSize="18sp"
                            android:fontFamily="@font/sofiapro_medium"
                            android:textColor="@color/black_00"
                            android:gravity="center"
                            android:layout_marginEnd="18dp"/>


                    </com.ruffian.library.widget.RRelativeLayout>
                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/top_up"
                    android:layout_marginTop="23dp"
                    android:layout_marginStart="18dp"
                    android:textColor="@color/black_22"
                    android:textSize="22sp"
                    android:fontFamily="@font/sofiapro_bold"
                    />



                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/episode_type_rv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="18dp"
                    android:layout_marginEnd="3dp"
                    android:layout_marginTop="10dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textColor="@color/black_00"
                    android:text="@string/tips"
                    android:layout_marginStart="18dp"
                    android:layout_marginEnd="18dp"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/sofiapro_bold"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="11sp"
                    android:textColor="@color/color_999999"
                    android:text="@string/me_wallet_tips_1"
                    android:layout_marginStart="18dp"
                    android:layout_marginEnd="18dp"
                    android:layout_marginTop="12dp"
                    android:lineSpacingExtra="8dp"
                    android:fontFamily="@font/sofiapro_medium"
                    android:layout_marginBottom="40dp"
                    />

                <TextView
                    android:id="@+id/tv_rules"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/rules"
                    app:layout_constraintTop_toBottomOf="@+id/rl_sub"
                    android:layout_marginTop="12dp"
                    android:textSize="18sp"
                    android:visibility="gone"
                    android:textColor="@color/black_00"
                    android:layout_marginStart="18dp"
                    android:fontFamily="@font/sofiapro_bold"
                    app:layout_constraintLeft_toLeftOf="parent"
                    />
                <TextView
                    android:id="@+id/tv_sub"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/rules_text"
                    app:layout_constraintTop_toBottomOf="@+id/tv_rules"
                    android:layout_marginTop="12dp"
                    android:lineSpacingExtra="8dp"
                    android:textSize="11sp"
                    android:visibility="gone"
                    android:fontFamily="@font/sofiapro_medium"
                    android:textColor="@color/color_999999"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginStart="18dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="40dp"
                    />
            </LinearLayout>

            </ScrollView>
            <ViewStub
                android:id="@+id/try_again_view"
                android:layout_width="match_parent"
                android:layout_height="196dp"
                android:layout_marginTop="13dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout="@layout/no_network"
                />

            <ImageView
                android:id="@+id/main_loading_iv"
                android:layout_width="@dimen/loading_width"
                android:layout_height="@dimen/loading_height"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:visibility="gone"
                android:background="@drawable/loading" />


        </RelativeLayout>
         