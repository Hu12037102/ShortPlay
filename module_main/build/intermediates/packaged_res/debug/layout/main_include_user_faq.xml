<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:orientation="horizontal"
    android:layout_marginStart="18dp"
    android:layout_marginEnd="18dp"
    tools:ignore="MissingDefaultResource">
    
    
    
    <ImageView
        android:id="@+id/setting_logo_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/user_faq_logo"
        android:layout_centerVertical="true"
        />

    <TextView
        android:id="@+id/setting_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:text="@string/main_user_faq"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/setting_logo_iv"
        android:layout_marginStart="12dp"
        android:ellipsize="end"
        android:lines="1"
        android:textColor="@color/white"
        android:fontFamily="@font/sofiapro_medium"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:text="@string/main_user_faq_help"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/setting_tv"
        android:layout_marginStart="5dp"
        android:ellipsize="end"
        android:lines="1"
        android:textColor="@color/color_999999"
        android:fontFamily="@font/sofiapro_medium"
        android:visibility="gone"
        />


    <ImageView
        android:id="@+id/user_setting_right_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/user_right_white_bold"
        tools:ignore="RtlHardcoded"
        />

</RelativeLayout>