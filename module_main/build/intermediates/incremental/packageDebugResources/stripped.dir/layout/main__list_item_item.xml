<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="10dp"
    android:layout_marginBottom="20dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:ignore="MissingDefaultResource">


    <RelativeLayout
        android:id="@+id/item_list_ll"
        android:layout_width="106dp"
        android:layout_height="141dp">

        <com.ruffian.library.widget.RImageView
            android:id="@+id/item_list_iv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:corner_radius="6dp"
            android:scaleType="centerCrop"
            />

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/main_pause_logo"
            android:layout_centerHorizontal="true"
            android:visibility="gone"
            android:layout_centerVertical="true"/>

        <com.ruffian.library.widget.RRelativeLayout
            android:id="@+id/rr_has_updated"
            android:layout_width="20dp"
            android:layout_height="18dp"
            app:corner_radius_top_right="6dp"
            app:corner_radius_bottom_left="6dp"
            app:background_normal="@array/array_list"
            android:layout_alignParentEnd="true"
            android:visibility="gone"
            >

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/common_small_bell_bg"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                />


        </com.ruffian.library.widget.RRelativeLayout>
        <com.ruffian.library.widget.RTextView
            android:id="@+id/updated_to_tv"
            android:layout_width="84dp"
            android:layout_height="18dp"
            app:corner_radius_top_left="6dp"
            app:corner_radius_bottom_right="6dp"
            app:background_normal="@color/color_80000000"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:textSize="11sp"
            android:gravity="center"
            android:fontFamily="@font/sofiapro_medium"
            android:textColor="@color/white"
            android:visibility="gone"
            >




        </com.ruffian.library.widget.RTextView>



    </RelativeLayout>





    

    <TextView
        android:id="@+id/item_list_name"
        android:layout_width="106dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_list_ll"
        android:layout_marginTop="7dp"
        android:textSize="12sp"
        android:textColor="@color/white"
        android:fontFamily="@font/sofiapro_medium"
        android:ellipsize="end"
        android:maxLines="2"
         />

    <TextView
        android:id="@+id/item_list_current_set"
        android:layout_width="106dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_list_name"
        android:textSize="10sp"
        android:textColor="@color/white"
        android:fontFamily="@font/sofiapro_medium"
        android:ellipsize="end"
        android:lines="1"
        tools:ignore="SmallSp" />


</RelativeLayout>