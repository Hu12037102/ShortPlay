<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="12dp"
    android:layout_marginStart="18dp"
    tools:ignore="MissingDefaultResource">


    <com.ruffian.library.widget.RImageView
        android:id="@+id/vertical_iv"
        android:layout_width="103dp"
        android:layout_height="137.33dp"
        android:scaleType="centerCrop"
        app:corner_radius="6dp" />

    <com.ruffian.library.widget.RTextView
        android:id="@+id/vertical_state"
        android:layout_width="40dp"
        android:layout_height="18dp"
        app:corner_radius_top_left="6dp"
        app:corner_radius_bottom_right="6dp"
        app:background_normal="@color/red_056"
        android:fontFamily="@font/sofiapro_medium"
        android:textSize="11sp"
        android:textColor="@color/white"
        android:paddingTop="1dp"
        android:gravity="center_horizontal"
        tools:ignore="MissingConstraints,SmallSp" />


    <TextView
        android:id="@+id/vertical_tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/vertical_iv"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="17dp"
        android:fontFamily="@font/sofiapro_medium"
        android:textSize="14sp"
        android:textColor="@color/white"
        android:ellipsize="end"
        android:lines="1"
        />

    <TextView
        android:id="@+id/vertical_tv_flag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/vertical_iv"
        android:layout_below="@id/vertical_tv_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="17dp"
        android:textSize="12sp"
        android:textColor="@color/black_8080"
        android:fontFamily="@font/sofiapro_medium"
        android:ellipsize="end"
        android:lines="1"

        />

    <TextView
        android:id="@+id/vertical_tv_introduce"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/vertical_iv"
        android:layout_below="@id/vertical_tv_flag"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="17dp"
        android:textSize="12sp"
        android:textColor="@color/black_8080"
        android:fontFamily="@font/sofiapro_medium"
        android:ellipsize="end"
        android:lineSpacingExtra="5dp"
        android:lines="3"
        tools:ignore="SmallSp" />

    <com.ruffian.library.widget.RTextView
        android:id="@+id/updated_to_tv"
        android:layout_width="84dp"
        android:layout_height="18dp"
        app:corner_radius_top_left="6dp"
        app:corner_radius_bottom_right="6dp"
        app:background_normal="@color/color_80000000"
        android:layout_alignEnd="@+id/vertical_iv"
        android:layout_alignBottom="@+id/vertical_iv"
        android:text="@string/updated_to"
        android:textSize="11sp"
        android:gravity="center"
        android:fontFamily="@font/sofiapro_medium"
        android:textColor="@color/white"
        android:visibility="gone"
        />


</RelativeLayout>