<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools">


    <ImageView
        android:layout_width="62dp"
        android:layout_height="53dp"
        android:src="@drawable/empty_logo"
        />

    <TextView
        android:id="@+id/content_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="@color/white_66"
        android:layout_marginTop="10dp"
        />

    <com.ruffian.library.widget.RTextView
        android:id="@+id/more_my_list_rt"
        android:layout_width="wrap_content"
        android:minWidth="110dp"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:layout_height="30dp"
        android:layout_marginTop="9dp"
        android:text="@string/no_more"
        android:gravity="center"
        android:textSize="12sp"
        android:textColor="@color/main_color_ff"
        app:background_normal="@color/red_ff"
        app:background_selected="@color/red_ff"
        app:corner_radius="25dp"
        android:visibility="gone"
        tools:visibility="visible"
        android:fontFamily="@font/sofiapro_medium"
        />


</LinearLayout>