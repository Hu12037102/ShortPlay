<?xml version="1.0" encoding="utf-8"?>
<com.ruffian.library.widget.RRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="35dp"
    android:layout_height="35dp"
    app:background_normal="@color/black_f9"
    app:corner_radius_top_left="6dp"
    app:corner_radius_bottom_right="6dp">

    <TextView
        android:id="@+id/moon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white_90"
        android:textSize="10sp"
        android:fontFamily="@font/sofiapro_medium"
        tools:ignore="SmallSp" />

    <TextView
        android:id="@+id/time_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textColor="@color/white_90"
        android:textSize="18sp"
        android:fontFamily="@font/sofiapro_medium"
        />


</com.ruffian.library.widget.RRelativeLayout>