<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="18dp"
        android:background="@color/white_ff_1a"
        android:layout_marginTop="25dp"
        android:layout_height="1dp"/>


    <TextView
        android:id="@+id/my_list_tv"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:textSize="19sp"
        android:fontFamily="@font/sofiapro_medium"
        android:layout_below="@+id/view"
        android:textColor="@color/white"
        android:layout_marginStart="18dp"
        android:layout_marginTop="18dp"
        android:text="@string/my_list"
        android:textStyle="bold"
        tools:ignore="InvalidId" />


    <LinearLayout
        android:id="@+id/rg_button"
        android:layout_width="match_parent"
        android:layout_height="27dp"
        android:orientation="horizontal"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="18dp"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/my_list_tv"
        android:baselineAligned="false">

        <com.ruffian.library.widget.RConstraintLayout
            android:id="@+id/complete_rl"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:corner_radius_top_left="6dp"
            app:corner_radius_bottom_left="6dp"
            app:background_normal="@color/red_056"
            android:layout_marginEnd="1dp"
            android:layout_weight="1">
            <TextView
                android:id="@+id/complete_bt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:text="@string/mylist_complete"
                android:gravity="center"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:textColor="@color/white"
                android:textSize="14sp"/>
            <com.ruffian.library.widget.RView
                android:id="@+id/complete_view"
                android:layout_width="8dp"
                android:layout_height="8dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="@id/complete_bt"
                app:layout_constraintStart_toEndOf="@id/complete_bt"
                app:corner_radius="8dp"
                app:background_normal="@color/red_056"
                android:visibility="gone"
                />

        </com.ruffian.library.widget.RConstraintLayout>
        <com.ruffian.library.widget.RConstraintLayout
            android:id="@+id/update_rl"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:background_normal="@color/white_30"
            android:layout_weight="1">
            <TextView
                android:id="@+id/update_bt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:text="@string/mylist_Update"
                android:gravity="center"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:textColor="@color/white_ff_70"
                android:textSize="14sp" />
            <com.ruffian.library.widget.RView
                android:id="@+id/update_view"
                android:layout_width="8dp"
                android:layout_height="8dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="@id/update_bt"
                app:layout_constraintStart_toEndOf="@id/update_bt"
                app:corner_radius="8dp"
                app:background_normal="@color/red_056"
                android:visibility="gone"
                />

        </com.ruffian.library.widget.RConstraintLayout>
        <com.ruffian.library.widget.RConstraintLayout
            android:id="@+id/follow_rl"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:corner_radius_top_right="6dp"
            app:corner_radius_bottom_right="6dp"
            app:background_normal="@color/white_30"
            android:layout_marginStart="1dp"
            android:layout_weight="1">
            <TextView
                android:id="@+id/follow_bt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:text="@string/mylist_follow"
                android:gravity="center"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:textColor="@color/white_ff_70"
                android:textSize="14sp" />
            <com.ruffian.library.widget.RView
                android:id="@+id/follow_view"
                android:layout_width="8dp"
                android:layout_height="8dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="@id/follow_bt"
                app:layout_constraintStart_toEndOf="@id/follow_bt"
                app:corner_radius="8dp"
                app:background_normal="@color/red_056"
                android:visibility="gone"
                />

        </com.ruffian.library.widget.RConstraintLayout>




    </LinearLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/my_list_item_rv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rg_button"
        android:layout_marginTop="15dp"
        android:layout_marginStart="18dp"
        tools:ignore="NotSibling" />


    <TextView
        android:id="@+id/more_my_list"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="@string/play_more"
        android:textColor="@color/white_ff_99"
        android:textSize="12sp"
        android:layout_marginTop="18dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="18dp"
        android:drawablePadding="11dp"
        android:gravity="center_vertical"
        android:fontFamily="@font/sofiapro_medium"
        android:layout_below="@+id/view"
        app:drawableRightCompat="@drawable/user_right_white" />


    <ViewStub
        android:id="@+id/my_list_view_stub"
        android:layout_width="match_parent"
        android:layout_height="196dp"
        android:layout_below="@+id/my_list_tv"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:layout="@layout/main_my_list_empty"
        />



</RelativeLayout>