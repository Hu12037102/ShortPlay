<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:background="@color/black">

    <com.ruffian.library.widget.RImageView
        android:id="@+id/riv_content"
        android:layout_width="95dp"
        android:layout_height="127dp"
        android:layout_marginStart="18dp"
        android:scaleType="centerCrop"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:corner_radius="6dp"/>
    <com.ruffian.library.widget.RTextView
        android:id="@+id/rtv_status"
        android:layout_width="40dp"
        android:layout_height="18dp"
        app:corner_radius_top_left="6dp"
        app:corner_radius_bottom_right="6dp"
        app:background_normal="@color/red_056"
        android:fontFamily="@font/sofiapro_medium"
        android:textSize="11sp"
        android:textColor="@color/white"
        android:paddingTop="1dp"
        android:gravity="center_horizontal"
        tools:ignore="MissingConstraints,SmallSp"
        app:layout_constraintTop_toTopOf="@id/riv_content"
        app:layout_constraintLeft_toLeftOf="@id/riv_content"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/atv_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="18dp"
        android:ellipsize="end"
        android:lineSpacingExtra="2dp"
        android:maxLines="2"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:fontFamily="@font/sofiapro_medium"
        app:layout_constraintLeft_toRightOf="@id/riv_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/riv_content"
        tools:text="就卡速度加快撒娇达拉斯萨克贷记卡数量收垃圾的卡拉赛季开打烧录卡就打开拉萨几率大傻得可怜撒" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/atv_desc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:ellipsize="end"
        android:lineSpacingExtra="2dp"
        android:maxLines="3"
        android:textColor="@color/black_8080"
        android:textSize="12sp"
        app:fontFamily="@font/sofiapro_medium"
        app:layout_constraintLeft_toLeftOf="@id/atv_title"
        app:layout_constraintRight_toRightOf="@id/atv_title"
        app:layout_constraintTop_toBottomOf="@id/atv_title"
        tools:text="kldsalkjdklsajdsalkjdksakldjlsakjdlskajdklsajdklsaKjlksjadklsajkldsjakldjslaskaljdlkasjsdaksjdlajdklsajkldasjlkdjsalkjdklasjdlksjksaldsajkdlsadlsajdsalksdadsa" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/atv_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:minWidth="64dp"
        android:minHeight="18dp"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:textColor="@color/white_ff_70"
        android:textSize="11sp"
        app:fontFamily="@font/sofiapro_medium"
        app:layout_constraintBottom_toBottomOf="@id/riv_content"
        app:layout_constraintLeft_toLeftOf="@id/atv_title" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/atv_hot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawablePadding="4dp"
        app:drawableStartCompat="@drawable/home_trending_heat"
        app:layout_constraintTop_toTopOf="@id/atv_tag"
        app:layout_constraintBottom_toBottomOf="@id/atv_tag"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="18dp"
        android:gravity="center_vertical"
        tools:text="722k"
        android:textColor="@color/white"
        android:textSize="11sp"
        app:fontFamily="@font/sofiapro_medium"
        />
    <com.ruffian.library.widget.RTextView
        android:id="@+id/updated_to_tv"
        android:layout_width="84dp"
        android:layout_height="18dp"
        app:corner_radius_top_left="6dp"
        app:corner_radius_bottom_right="6dp"
        app:background_normal="@color/color_80000000"
        app:layout_constraintEnd_toEndOf="@+id/riv_content"
        app:layout_constraintBottom_toBottomOf="@+id/riv_content"
        android:text="@string/updated_to"
        android:textSize="11sp"
        android:gravity="center"
        android:fontFamily="@font/sofiapro_medium"
        android:textColor="@color/white"

        />

</androidx.constraintlayout.widget.ConstraintLayout>