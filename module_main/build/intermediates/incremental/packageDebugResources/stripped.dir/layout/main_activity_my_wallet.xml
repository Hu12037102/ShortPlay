<?xml version="1.0" encoding="utf-8"?>

                                                       
                                                   

    

           

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:background="@color/black" android:tag="layout/main_activity_my_wallet_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">

        <include
            android:id="@+id/top_include_wallet"
            layout="@layout/main_include_title"/>


        <com.ruffian.library.widget.RConstraintLayout
            android:layout_width="166dp"
            android:layout_height="100dp"
            android:layout_below="@+id/top_include_wallet"
            android:layout_marginTop="12dp"
            android:layout_marginStart="18dp"
            app:corner_radius="10dp"
            app:background_normal="@color/white_15"
            >

            <ImageView
                android:id="@+id/iv_coins"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:src="@drawable/app_coins_logo"
                android:layout_marginTop="27dp"
                android:visibility="visible"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/coins_num"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintHorizontal_chainStyle="packed"
                />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/coins_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="26sp"
                android:fontFamily="@font/sofiapro_bold"
                android:layout_marginTop="17dp"
                tools:text="200"
                app:layout_constraintLeft_toRightOf="@id/iv_coins"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginStart="4dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/play_coins"
                android:textSize="13sp"
                android:textColor="@color/color_999999"
                android:fontFamily="@font/sofiapro_medium"
                app:layout_constraintTop_toBottomOf="@id/coins_num"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="6dp"
                />


        </com.ruffian.library.widget.RConstraintLayout>
        <com.ruffian.library.widget.RConstraintLayout
            android:layout_width="166dp"
            android:layout_height="100dp"
            android:layout_below="@+id/top_include_wallet"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="18dp"
            android:layout_alignParentEnd="true"
            app:corner_radius="10dp"
            app:background_normal="@color/white_15"
            >

            <ImageView
                android:id="@+id/iv_bonus"
                android:layout_width="21dp"
                android:layout_height="22dp"
                android:src="@drawable/app_bonus_logo"
                android:layout_marginTop="27dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/bonus_num"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintHorizontal_chainStyle="packed"
                />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/bonus_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="26sp"
                android:fontFamily="@font/sofiapro_bold"
                android:layout_marginTop="17dp"
                tools:text="200"
                app:layout_constraintLeft_toRightOf="@id/iv_bonus"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginStart="4dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/me_bonus"
                android:textSize="13sp"
                android:textColor="@color/color_999999"
                android:fontFamily="@font/sofiapro_medium"
                app:layout_constraintTop_toBottomOf="@id/bonus_num"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="6dp"
                />
        </com.ruffian.library.widget.RConstraintLayout>


        <com.ruffian.library.widget.RTextView
            android:id="@+id/top_up_tv"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:corner_radius="50dp"
            app:background_normal="@color/red_056"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/top_include_wallet"
            android:layout_marginTop="132dp"
            android:text="@string/my_top_up"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="16sp"
            android:fontFamily="@font/sofiapro_bold"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="18dp"
            />

        <RelativeLayout
            android:id="@+id/transaction_his_rl"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_below="@+id/top_up_tv"
            android:layout_marginTop="20dp"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="18dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/main_user_transaction_history"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:layout_centerVertical="true"
                android:fontFamily="@font/sofiapro_medium"
                />


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:src="@drawable/user_right_white_bold"
                android:layout_marginEnd="7dp"
                />



        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/episodes_unlocked_rl"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_below="@+id/transaction_his_rl"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="18dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/me_unlocked"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:layout_centerVertical="true"
                android:fontFamily="@font/sofiapro_medium"
                />


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:src="@drawable/user_right_white_bold"
                android:layout_marginEnd="7dp"
                />



        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/bonus_his_rl"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_below="@+id/episodes_unlocked_rl"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="18dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/me_bonus_recpt_history"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:layout_centerVertical="true"
                android:fontFamily="@font/sofiapro_medium"
                />


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:src="@drawable/user_right_white_bold"
                android:layout_marginEnd="7dp"
                />



        </RelativeLayout>

        
    </RelativeLayout>
         