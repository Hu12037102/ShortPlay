<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:orientation="horizontal"
    android:layout_marginStart="18dp"
    android:layout_marginEnd="18dp"
    tools:ignore="MissingDefaultResource"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    
    
    
    <ImageView
        android:id="@+id/bonus_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/user_bonus_1"
        android:layout_centerVertical="true"
        />

    <TextView
        android:id="@+id/bonus_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:layout_toRightOf="@+id/bonus_logo"
        android:text="@string/main_user_bonus"
        android:layout_centerVertical="true"
        android:layout_marginStart="12dp"
        android:textColor="@color/white"
        android:layout_marginEnd="20dp"
        android:layout_toLeftOf="@+id/atv_bonus_count"
        android:ellipsize="end"
        android:lines="1"
        android:fontFamily="@font/sofiapro_medium"
        />


    <ImageView
        android:id="@+id/bonus_right_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/user_right_white_bold"
        tools:ignore="RtlHardcoded"
        />
    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/atv_bonus_count"
        android:textColor="@color/orange_25"
        android:textSize="16sp"
        android:layout_toStartOf="@id/bonus_right_iv"
        android:layout_marginEnd="5dp"
        tools:text="+100"
        app:fontFamily="@font/sofiapro_bold"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        />

</RelativeLayout>