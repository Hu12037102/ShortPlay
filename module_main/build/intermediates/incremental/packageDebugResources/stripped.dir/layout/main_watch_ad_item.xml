<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >

        <ImageView
            android:id="@+id/iv_watch"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/watch_ad_icon"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/me_bonus_center_watch_ads"
            android:textSize="15sp"
            android:textColor="@color/black_22"
            android:fontFamily="@font/sofiapro_medium"
            android:layout_marginStart="10dp"
            app:layout_constraintStart_toEndOf="@+id/iv_watch"
            app:layout_constraintTop_toTopOf="@+id/iv_watch"
            />

        <TextView
            android:id="@+id/tv_coins_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/watch_ad_conis_icon"
            android:drawablePadding="2dp"
            android:textColor="@color/c_888888"
            android:fontFamily="@font/sofiapro_medium"
            android:layout_marginStart="10dp"
            app:layout_constraintBottom_toBottomOf="@+id/iv_watch"
            app:layout_constraintStart_toEndOf="@+id/iv_watch"
            android:textSize="15sp"
            tools:text="+1000" />

        <ImageView
            android:id="@+id/iv_done"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/watch_ad_done"
            android:layout_marginEnd="30dp"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />

        <TextView
            android:id="@+id/tv_watch_ad"
            android:layout_width="80dp"
            android:layout_height="32dp"
            tools:text="Watch Ad"
            android:textSize="14dp"
            android:gravity="center"
            android:fontFamily="@font/sofiapro_medium"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/white_f5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>