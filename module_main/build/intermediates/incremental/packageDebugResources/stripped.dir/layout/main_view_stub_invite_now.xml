<?xml version="1.0" encoding="utf-8"?>

                                                  
                                                       
                                          

    

           

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@drawable/me_bonus_center_logo"
        android:layout_height="226dp"

         android:tag="layout/main_view_stub_invite_now_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto" tools:ignore="MissingDefaultResource">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/red_ff"
            android:text="@string/me_bonus_center_get"
            android:layout_marginStart="19dp"
            android:layout_marginTop="21dp" />

        <TextView
            android:id="@+id/reward_coins_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:drawableStart="@drawable/app_bonus_logo"
            android:layout_marginStart="19dp"
            android:layout_marginTop="48dp"
            android:textColor="@color/orange_25"
            android:drawablePadding="5dp"
            tools:ignore="UseCompatTextViewDrawableXml" />
        
        <com.ruffian.library.widget.RRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            app:corner_radius="6dp"
            android:layout_centerHorizontal="true"
            app:background_normal="@color/red_33_20"
            android:layout_marginTop="105dp"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="18dp">

            <TextView
                android:layout_width="95dp"
                android:layout_height="33dp"
                android:text="@string/me_bonus_center_earned"
                android:layout_marginTop="15dp"
                android:layout_marginStart="30dp"
                android:textSize="12sp"
                android:textColor="@color/red_70"
                />

            <TextView
                android:id="@+id/reward_coins_earned_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:drawableStart="@drawable/app_bonus_logo"
                android:layout_marginTop="50dp"
                android:textColor="@color/orange_25"
                android:drawablePadding="5dp"
                android:layout_marginStart="30dp"
                tools:ignore="UseCompatTextViewDrawableXml" />



            <View
                android:id="@+id/view"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="13dp"
                android:layout_marginBottom="13dp"
                android:background="@color/white_15"/>


            <TextView
                android:layout_width="95dp"
                android:layout_height="33dp"
                android:text="@string/me_bonus_center_invited"
                android:layout_marginTop="15dp"
                android:layout_toEndOf="@+id/view"
                android:layout_marginStart="26dp"
                android:textSize="12sp"
                android:textColor="@color/red_70"
                />

            <TextView
                android:id="@+id/friend_invited_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:layout_marginTop="50dp"
                android:textColor="@color/white"
                android:drawablePadding="5dp"
                android:layout_toEndOf="@+id/view"
                android:layout_marginStart="26dp"
                tools:ignore="UseCompatTextViewDrawableXml" />

        </com.ruffian.library.widget.RRelativeLayout>


        <com.ruffian.library.widget.RTextView
            android:id="@+id/invite_tv"
            android:layout_width="110dp"
            android:layout_height="32dp"
            app:text_color_normal="@color/white"
            android:textSize="12.67sp"
            app:corner_radius="20dp"
            app:background_normal="@color/red_ff"
            android:layout_marginEnd="18dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="52dp"
            android:gravity="center"
            android:text="@string/me_bonus_center_invite"
            />


    </RelativeLayout>
         