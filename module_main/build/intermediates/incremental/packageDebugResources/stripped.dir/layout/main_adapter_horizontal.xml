<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="40dp"

    xmlns:app="http://schemas.android.com/apk/res-auto">


    <TextView
        android:id="@+id/adapter_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:textColor="@color/color_ebebeb"
        android:layout_marginStart="18dp"
        android:fontFamily="@font/sofiapro_bold"
        android:layout_toStartOf="@id/cl_more"
        tools:ignore="InvalidId" />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:padding="6dp"
        android:layout_marginTop="2dp"
       android:layout_alignParentEnd="true">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/atv_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/view_more"
        android:textColor="@color/color_999999"
        android:textSize="13sp"
        app:fontFamily="@font/sofiapro_medium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        app:layout_constraintBottom_toBottomOf="@id/atv_more"
        app:layout_constraintLeft_toRightOf="@id/atv_more"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/item_right_more_gray"
        app:layout_constrainedHeight="true"
        app:layout_constraintVertical_bias="0.8"
        />
    </androidx.constraintlayout.widget.ConstraintLayout>
    
    
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/adapter_rv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/adapter_tv"
        android:layout_marginTop="15dp"
        android:layout_marginStart="18dp"
        tools:ignore="NotSibling" />



</RelativeLayout>