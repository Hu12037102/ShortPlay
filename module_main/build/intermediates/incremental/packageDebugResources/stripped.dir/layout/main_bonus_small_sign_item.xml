<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/itemView"
    android:layout_width="41dp"
    android:layout_height="76dp"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/rootView"
        android:layout_width="38dp"
        android:layout_height="72dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/main_bonus_small_item_bg"
        android:elevation="2dp"
        android:outlineSpotShadowColor="@color/c_830033"
        >
        <TextView
            android:id="@+id/tv_time"
            android:layout_width="match_parent"
            android:layout_height="17dp"
            tools:text="1 Days"
            android:textSize="9dp"
            android:textColor="@color/white_b0"
            android:gravity="center"
            android:fontFamily="@font/sofiapro_medium"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />
        <ImageView
            android:id="@+id/iv_bonus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/bonus_center_bonus_icon"
            app:layout_constraintTop_toBottomOf="@+id/tv_time"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="7dp"
            />

        <ImageView
            android:id="@+id/iv_sign_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/bonus_sign_right"
            android:visibility="gone"
            android:layout_marginTop="12dp"
            android:layout_marginStart="13dp"
            app:layout_constraintTop_toTopOf="@+id/iv_bonus"
            app:layout_constraintStart_toStartOf="@+id/iv_bonus"
            app:layout_constraintEnd_toEndOf="@+id/iv_bonus"
            />

        <TextView
            android:id="@+id/tv_award"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="+100"
            android:gravity="center"
            android:textSize="12dp"
            android:fontFamily="@font/sofiapro_medium"
            android:textColor="@color/red_860"
            app:layout_constraintTop_toBottomOf="@+id/iv_bonus"
            app:layout_constraintBottom_toBottomOf="parent"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>