<?xml version="1.0" encoding="utf-8"?>

                                                               

    

           

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" android:tag="layout/main_include_coins_0" xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/app_coins_logo"
            android:layout_marginTop="5dp" />

        <TextView
            android:id="@+id/coins_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/black_22"
            android:fontFamily="@font/sofiapro_bold"
            android:layout_marginStart="28dp"
            tools:text="111"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="28dp"
            android:textColor="@color/color_999999"
            android:layout_marginTop="18dp"
            android:textSize="11sp"
            android:text="@string/play_coins"
            android:fontFamily="@font/sofiapro_medium"
            tools:ignore="SmallSp" />

    </RelativeLayout>
         