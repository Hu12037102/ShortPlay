<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/aiv_background"
        android:layout_width="270dp"
        android:layout_height="344dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/home_link_video_background" />

    <com.ruffian.library.widget.RImageView
        android:id="@+id/aiv_content"
        android:layout_width="120dp"
        android:layout_height="160dp"
        android:layout_marginTop="30dp"
        android:scaleType="centerCrop"
        app:border_color="@color/white_40"
        app:corner_radius="10dp"
        app:layout_constraintLeft_toLeftOf="@id/aiv_background"
        app:layout_constraintRight_toRightOf="@id/aiv_background"
        app:layout_constraintTop_toTopOf="@id/aiv_background" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/atv_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="2dp"
        android:gravity="center_horizontal"
        android:lineSpacingExtra="2dp"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@id/cl_play_parent"
        app:layout_constraintLeft_toLeftOf="@id/aiv_background"
        app:layout_constraintRight_toRightOf="@id/aiv_background"
        app:layout_constraintTop_toBottomOf="@id/aiv_content" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_play_parent"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="28dp"
        app:layout_constraintBottom_toBottomOf="@id/aiv_background"
        app:layout_constraintLeft_toLeftOf="@id/aiv_background"
        app:layout_constraintRight_toRightOf="@id/aiv_background">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/aiv_video_play_icon"
            android:layout_width="13dp"
            android:layout_height="14dp"
            android:layout_marginStart="70dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/play_link_play_video" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/atv_click_play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:layout_marginEnd="10dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textSize="18sp"
            app:layout_constrainedWidth="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintLeft_toRightOf="@id/aiv_video_play_icon"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/aiv_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:padding="10dp"
        app:layout_constraintBottom_toTopOf="@id/aiv_background"
        app:layout_constraintLeft_toRightOf="@id/aiv_background"
        app:layout_constraintRight_toRightOf="@id/aiv_background"
        app:srcCompat="@drawable/bonus_close_logo" />


</androidx.constraintlayout.widget.ConstraintLayout>