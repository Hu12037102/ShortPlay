<?xml version="1.0" encoding="utf-8"?>

                                                       
                                                   

    

           
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" android:tag="layout/main_fragment_me_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="20dp">


        <com.ruffian.library.widget.RRelativeLayout
            android:id="@+id/user_information"
            android:layout_width="match_parent"
            android:layout_height="156dp"
            app:background_normal="@array/array_me"
            app:gradient_orientation="TOP_BOTTOM"
            app:gradient_type="linear">

            <com.ruffian.library.widget.RImageView
                android:id="@+id/head_iv"
                android:layout_width="57dp"
                android:layout_height="57dp"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="18dp"
                android:layout_marginBottom="21.33dp"
                android:src="@drawable/user_logo"
                app:border_color="@color/white"
                app:border_width="1.5dp"
                app:corner_radius="27dp" />

            <TextView
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="120dp"
                android:layout_toEndOf="@+id/head_iv"
                android:layout_alignTop="@id/head_iv"
                android:ellipsize="end"
                android:fontFamily="@font/sofiapro_medium"
                android:lines="1"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:layout_marginTop="4dp"
                tools:text="Guest" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="120dp"
                android:layout_toEndOf="@+id/head_iv"
                android:layout_alignBottom="@id/head_iv"
                android:layout_marginBottom="6dp"
                >

                <ImageView
                    android:id="@+id/main_logo_iv"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_marginTop="7dp"
                    android:layout_marginEnd="6dp"
                    android:src="@drawable/google"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/user_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_toEndOf="@+id/main_logo_iv"
                    android:fontFamily="@font/sofiapro_medium"
                    android:textColor="@color/white_ff_99"
                    android:textSize="12sp" />
                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/me_copy_text"
                    android:padding="8dp"
                    android:layout_toEndOf="@id/user_id"
                    android:layout_centerVertical="true"
                    android:id="@+id/aiv_copy_text"
                    android:visibility="gone"
                    />


            </RelativeLayout>

            <TextView
                android:id="@+id/bubble_content"
                android:layout_width="wrap_content"
                android:minWidth="210dp"
                android:layout_height="38dp"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:paddingTop="3dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="66dp"
                android:background="@drawable/common_bg_bubble1"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="18dp"
                android:fontFamily="@font/sofiapro_medium"
                android:paddingStart="30dp"
                android:paddingEnd="10dp"
                android:visibility="gone"
                android:text="@string/login_bonuses" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/sign_in_tv"
                android:layout_width="80dp"
                android:layout_height="32dp"
                android:layout_alignTop="@id/head_iv"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="18dp"
                android:fontFamily="@font/sofiapro_medium"
                android:gravity="center"
                android:text="@string/me_sign_in"
                android:textColor="@color/red_056"
                android:textSize="13sp" />
        </com.ruffian.library.widget.RRelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/user_information"
            android:orientation="vertical" android:tag="binding_1">

            <include
                android:id="@+id/include_new_wallet"
                layout="@layout/main_include_wallet" />

            <RelativeLayout
                android:id="@+id/rl_sub"
                android:layout_width="match_parent"
                android:background="@drawable/main_me_sub"
                android:layout_height="70dp"
                android:layout_marginStart="18dp"
                android:visibility="gone"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="18dp">

                <TextView
                    android:id="@+id/proportion_discount_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:fontFamily="@font/sofiapro_medium"
                    android:textColor="@color/white"
                    android:layout_alignParentEnd="true"
                    android:background="@drawable/main_me_sub_tag"
                    android:gravity="center_horizontal"
                    android:visibility="gone"
                    />

            </RelativeLayout>


            <include
                android:id="@+id/include_bonus_center"
                layout="@layout/main_include_user_bonus"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_marginStart="18dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="18dp" />

            <include
                android:id="@+id/include_wallet"
                layout="@layout/main_include_user_wallet"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_marginStart="18dp"
                android:layout_marginEnd="18dp"
                android:visibility="gone"
                />

            <include
                android:id="@+id/include_transaction"
                layout="@layout/main_include_user_transaction"
                android:visibility="gone" />

            <include
                android:id="@+id/include_playback"
                layout="@layout/main_include_user_playback" />

            <include
                android:id="@+id/include_feedback"
                layout="@layout/main_include_user_feedback" />
            <include
                android:id="@+id/include_faq"
                layout="@layout/main_include_user_faq"
                android:visibility="gone"/>
            <include
                android:id="@+id/include_language"
                layout="@layout/main_include_user_language"/>
            <include
                android:id="@+id/include_setting"
                layout="@layout/main_include_user_setting" />
            <!--<androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textColor="@color/white"
                android:text="联系客服"
                android:id="@+id/call_service"
                android:paddingStart="18dp"
                android:paddingEnd="18dp"
                android:gravity="center_vertical"
                />-->


        </LinearLayout>


    </RelativeLayout>
    </androidx.core.widget.NestedScrollView>

         