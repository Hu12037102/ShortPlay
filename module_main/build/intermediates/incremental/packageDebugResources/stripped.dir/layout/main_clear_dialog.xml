<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:ignore="MissingDefaultResource">



    <com.ruffian.library.widget.RRelativeLayout
        android:layout_width="238dp"
        android:layout_height="163dp"
        app:background_normal="@color/black_22"
        app:corner_radius="6dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">



        <TextView
            android:id="@+id/content_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:textSize="16sp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:textColor="@color/white"
            android:gravity="center"
           android:fontFamily="@font/sofiapro_medium" />


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/white_10"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="48dp"
            />

        <View
            android:id="@+id/view"
            android:layout_width="1dp"
            android:layout_height="48dp"
            android:background="@color/white_10"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            />



        <TextView
            android:id="@+id/cancel"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="@string/play_cancel"
            android:gravity="center"
            android:layout_alignParentBottom="true"
            android:layout_toStartOf="@+id/view"
            android:textSize="16sp"
            android:textColor="@color/white_ff_99"
            android:fontFamily="@font/sofiapro_medium"
            />
        <TextView
            android:id="@+id/remove"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="@string/me_setting_clear"
            android:gravity="center"
            android:layout_alignParentBottom="true"
            android:textColor="@color/red_ff"
            android:layout_toEndOf="@+id/view"
            android:textSize="16sp"
            android:fontFamily="@font/sofiapro_medium"
            />





    </com.ruffian.library.widget.RRelativeLayout>











</androidx.constraintlayout.widget.ConstraintLayout>