<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="64dp"
    android:layout_height="75dp"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/main_bonus_big_item_bg"
    android:elevation="2dp"
    android:outlineSpotShadowColor="@color/c_830033"
    >

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="7 Days"
        android:textSize="9dp"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/sofiapro_medium"
        android:textColor="@color/white_ff"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <ImageView
        android:id="@+id/iv_bonus"
        android:layout_width="29dp"
        android:layout_height="28dp"
        android:src="@drawable/icon_bonus_big_icon"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_time"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <ImageView
        android:id="@+id/iv_sign_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/bonus_sign_right"
        android:visibility="gone"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toTopOf="@+id/iv_bonus"
        app:layout_constraintEnd_toEndOf="@+id/iv_bonus"
        />

    <TextView
        android:id="@+id/tv_award"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="+190"
        android:textSize="12dp"
        android:textColor="@color/white_ff"
        android:layout_marginTop="2dp"
        android:fontFamily="@font/sofiapro_medium"
        app:layout_constraintTop_toBottomOf="@+id/iv_bonus"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>