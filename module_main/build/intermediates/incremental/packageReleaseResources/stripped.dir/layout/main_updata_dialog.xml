<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">



    <RelativeLayout
        android:layout_width="283dp"
        android:layout_height="373dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/common_updata">



        <TextView
            android:id="@+id/update_update_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="113dp"
            android:textSize="20sp"
            android:textColor="@color/red_056"
            android:text="@string/main_update"
            android:fontFamily="@font/sofiapro_bold" />




    <TextView
        android:id="@+id/main_update_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginStart="23dp"
        android:layout_marginEnd="23dp"
        android:textSize="14sp"
        android:layout_below="@+id/update_update_tv"
        android:textColor="@color/white_33"
        android:fontFamily="@font/sofiapro_medium"
        />

     <androidx.recyclerview.widget.RecyclerView
         android:id="@+id/updata_rv"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_below="@+id/main_update_title"
         android:layout_marginBottom="70dp"
         android:layout_marginStart="23dp"
         android:layout_marginEnd="23dp"
         android:layout_marginTop="10dp"
         />


    <include
        layout="@layout/main_updata_button_dialog"/>


    <include
        layout="@layout/main_include_updata_seek"/>




    </RelativeLayout>











</androidx.constraintlayout.widget.ConstraintLayout>