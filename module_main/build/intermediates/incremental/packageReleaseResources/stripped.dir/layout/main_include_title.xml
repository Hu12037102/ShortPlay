<?xml version="1.0" encoding="utf-8"?>
                                                                   

    

           

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp" android:tag="layout/main_include_title_0" xmlns:android="http://schemas.android.com/apk/res/android">


        <ImageView
            android:id="@+id/return_iv"
            android:layout_width="28dp"
            android:layout_height="match_parent"
            android:src="@drawable/return_logo"
            android:layout_marginStart="18dp"
            android:layout_centerVertical="true"/>

        <RelativeLayout
            android:id="@+id/top_rl"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="18dp"
            android:visibility="gone">

            <ImageView
                android:id="@+id/select_iv"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/main_select_all_logo"
                android:layout_centerVertical="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/main_select_all"
                android:layout_toEndOf="@+id/select_iv"
                android:gravity="center"
                android:textSize="18sp"
                android:fontFamily="@font/sofiapro_medium"
                android:textColor="@color/white" />


        </RelativeLayout>


        <TextView
            android:id="@+id/title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/sofiapro_medium"
            android:textSize="18sp"

            />


        <ImageView
            android:id="@+id/waste_iv"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/main_waste_logo"
            android:layout_marginStart="18dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:visibility="gone"
            android:layout_marginEnd="17.3dp" />

        <TextView
            android:id="@+id/cancel_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/play_cancel"
            android:layout_marginStart="18dp"
            android:layout_centerVertical="true"
            android:textSize="15sp"
            android:visibility="gone"
            android:textColor="@color/white_ff_99"
            android:layout_alignParentEnd="true"
            android:fontFamily="@font/sofiapro_medium"
            android:layout_marginEnd="17.3dp" />


    </RelativeLayout>
         