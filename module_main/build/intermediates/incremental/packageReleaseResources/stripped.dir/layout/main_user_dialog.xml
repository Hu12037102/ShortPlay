<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rl_parent"
        android:layout_width="283dp"
        android:layout_height="wrap_content"
        android:background="@color/black_22"
        app:corner_radius="6dp"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:id="@+id/ll_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/user_dialog_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="23dp"
                android:layout_marginRight="25dp"
                android:text="@string/main_user_dialog_title"
                android:textStyle="bold"
                android:textColor="@color/white_ff"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/user_dialog_content_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="18dp"
                android:layout_marginRight="25dp"
                android:fontFamily="@font/sofiapro_medium"
                android:text="@string/main_user_dialog_content_start"
                android:textColor="@color/white_ff_99"
                android:textSize="11dp" />

            <TextView
                android:id="@+id/user_dialog_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="18dp"
                android:layout_marginRight="25dp"
                android:fontFamily="@font/sofiapro_medium"
                android:lineSpacingExtra="2dp"
                android:text="@string/main_user_dialog_content"
                android:textColor="@color/white_ff_99"
                android:textSize="11dp" />

            <TextView
                android:id="@+id/user_dialog_content_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:fontFamily="@font/sofiapro_medium"
                android:lineSpacingExtra="2dp"
                android:text="@string/main_user_dialog_content_two"
                android:textColor="@color/white_ff_99"
                android:textSize="11dp"
                android:visibility="gone"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="18dp"
                android:layout_marginRight="25dp"
                android:fontFamily="@font/sofiapro_medium"
                android:lineSpacingExtra="2dp"
                android:text="@string/main_user_dialog_content_one"
                android:textColor="@color/white_ff_99"
                android:textSize="11dp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="50dp"
            android:background="@color/white_ff_1a"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="18dp">

                <com.ruffian.library.widget.RTextView
                    android:id="@+id/user_dialog_agree"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:fontFamily="@font/sofiapro_bold"
                    android:gravity="center"
                    android:text="@string/main_user_dialog_agree"
                    android:textColor="@color/white_ff"
                    android:textSize="17dp"
                    app:background_normal="@array/array_l_r"
                    app:corner_radius="20dp"
                    app:gradient_orientation="LEFT_RIGHT"
                    app:gradient_type="linear" />
            </RelativeLayout>

            <TextView
                android:id="@+id/user_dialog_disagree"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:fontFamily="@font/sofiapro_medium"
                android:gravity="center"
                android:text="@string/main_user_dialog_read_it_later"
                android:textColor="@color/black_50"
                android:textSize="14dp" />


        </LinearLayout>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>