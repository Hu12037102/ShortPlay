<?xml version="1.0" encoding="utf-8"?>

                                                              
                                                        

    

           

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bouns_bg" android:tag="layout/main_activity_bonus_center_0" xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">

        <include
            android:id="@+id/bonus_center_include"
            layout="@layout/main_include_title"/>

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@+id/bonus_center_include">
    <RelativeLayout
        android:id="@+id/bonus_center_ll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
         android:tag="binding_1">

        <TextView
            android:id="@+id/bonus_check_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/me_bonus_center_check_in"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_marginStart="18dp"
            android:layout_marginTop="25.5dp"
            />
        
       
        <ImageView
            android:id="@+id/check_iv"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginTop="30dp"
            android:layout_toEndOf="@+id/bonus_check_tv"
            android:layout_marginStart="8dp"
            android:src="@drawable/doubt_logo"
            />

        <TextView
            android:id="@+id/signed_in_tv"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/bonus_check_tv"
            android:textSize="12sp"
            android:textColor="@color/white_ff_80"
            />


        <RelativeLayout
            android:id="@+id/timeLineView_rl"
            android:layout_width="match_parent"
            android:layout_height="186dp"
            android:layout_below="@+id/signed_in_tv"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="18dp"
            android:layout_marginTop="10dp"
            android:paddingStart="18dp"
            android:paddingEnd="18dp"
            android:background="@drawable/me_bonus_center_logo"
            tools:ignore="RtlSymmetry">

            <com.example.lib_common.view.TimeLineView
                android:id="@+id/timeLineView"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="15dp"
                app:lineWidth="4dp"
                app:preCircleColor="@color/white"
                app:preLineColor="@color/white"
                app:preStringColor="@color/white_ff_99"
                app:startedCircleColor="@color/red_ff"
                app:startedLineColor="@color/red_ff"
                app:startedStringColor="@color/red_ff"
                app:textSize="11sp"
                app:tlradius="6dp"
                app:underwayCircleColor="@color/red_ff"
                app:underwayStringColor="@color/red_ff"
                tools:ignore="SmallSp" />

            <com.ruffian.library.widget.RTextView
                android:id="@+id/check_tv"
                android:layout_width="140dp"
                android:layout_height="32dp"
                android:textColor="@color/black_00"
                android:textSize="12.67dp"
                app:corner_radius="20dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="23dp"
                android:gravity="center"
                />
        </RelativeLayout>



        <TextView
            android:id="@+id/watch__tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/me_bonus_center_watch_ads"
            android:layout_below="@+id/timeLineView_rl"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:visibility="visible"
            android:layout_marginStart="18dp"
            android:layout_marginTop="23dp"/>


        <ImageView
            android:id="@+id/watch_iv"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_below="@+id/timeLineView_rl"
            android:layout_marginTop="26dp"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@+id/watch__tv"
            android:visibility="visible"
            android:src="@drawable/doubt_logo"/>


        <TextView
            android:id="@+id/avaiable_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/timeLineView_rl"
            android:layout_alignParentEnd="true"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:visibility="visible"
            android:layout_marginEnd="18dp"
            android:text="@string/me_bonus_center_available"
            android:layout_marginStart="18dp"
            android:layout_marginTop="30dp"/>


        <RelativeLayout
            android:id="@+id/watch_rl"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@drawable/bonus_watch_logo"
            android:layout_below="@+id/watch__tv"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="18dp"
            android:visibility="visible"
            android:layout_marginTop="9dp">


            <ImageView
                android:layout_width="33.33dp"
                android:layout_height="33.33dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="18dp"
                android:src="@drawable/bonus_ad_logo"
                />
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/app_bonus_logo"
                android:layout_centerVertical="true"
                android:layout_marginStart="67dp"
                />

            <TextView
                android:id="@+id/watch_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="96dp"
                android:textColor="@color/orange_25"
                android:textSize="17sp"
                android:textStyle="bold"
                />


            <com.ruffian.library.widget.RTextView
                android:id="@+id/watch_check_tv"
                android:layout_width="107dp"
                android:layout_height="32dp"
                android:textColor="@color/black_00"
                android:textSize="12.67sp"
                app:corner_radius="20dp"
                android:text="@string/me_bonus_center_watch_ad"
                app:background_normal="@color/red_ff"
                app:text_color_normal="@color/white"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="18dp"
                android:layout_centerVertical="true"
                android:layout_marginBottom="23dp"
                android:gravity="center"
                />

        </RelativeLayout>



        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/me_gift_logo"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="11dp"/>


        <TextView
            android:id="@+id/invite_friend_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/me_bonus_center_check_friend"
            android:layout_below="@+id/watch_rl"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_marginStart="18dp"
            android:layout_marginTop="25.5dp"/>


        <ImageView
            android:id="@+id/friend_iv"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_below="@+id/watch_rl"
            android:layout_marginTop="30dp"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@+id/invite_friend_tv"
            android:src="@drawable/doubt_logo"/>


        <TextView
            android:id="@+id/records_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_below="@+id/watch_rl"
            android:text="@string/me_bonus_center_records"
            android:textSize="12sp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="18dp"
            android:textColor="@color/white_ff_99" />


            <include
                android:id="@+id/friend_view"
                android:layout_width="match_parent"
                android:layout_height="227dp"
                android:layout_below="@+id/invite_friend_tv"
                android:layout_marginTop="9dp"
                android:layout_marginStart="18dp"
                android:layout_marginEnd="18dp"
                android:layout_marginBottom="30dp"
                layout="@layout/main_view_stub_invite_now" />


            <ViewStub
                android:id="@+id/friend_list_view"
                android:layout_width="match_parent"
                android:layout_height="310dp"
                android:layout_below="@+id/invite_friend_tv"
                android:layout_marginTop="9dp"
                android:layout_marginStart="18dp"
                android:layout_marginEnd="18dp"
                android:layout_marginBottom="30dp"
                android:layout="@layout/main_view_stub_invite_list"
                />


    </RelativeLayout>
    </ScrollView>
        <ViewStub
            android:id="@+id/try_again_view"
            android:layout_width="match_parent"
            android:layout_height="196dp"
            android:layout_marginTop="13dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout="@layout/no_network"
            />

        <ImageView
            android:id="@+id/main_loading_iv"
            android:layout_width="@dimen/loading_width"
            android:layout_height="@dimen/loading_height"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:visibility="gone"
            android:background="@drawable/loading" />

    </RelativeLayout>
         