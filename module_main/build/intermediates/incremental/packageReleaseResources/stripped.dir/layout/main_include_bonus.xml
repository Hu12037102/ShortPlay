<?xml version="1.0" encoding="utf-8"?>

                                                              
                                          

    

           

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:tag="layout/main_include_bonus_0" xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android" tools:ignore="MissingDefaultResource">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/app_bonus_logo"
            android:layout_marginTop="5dp" />

        <TextView
            android:id="@+id/bonus_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/black_22"
            android:fontFamily="@font/sofiapro_bold"
            android:layout_marginStart="27dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="28dp"
            android:layout_marginTop="18dp"
            android:fontFamily="@font/sofiapro_medium"
            android:text="@string/me_bonus"
            android:textColor="@color/color_999999"
            android:textSize="11sp"
            tools:ignore="SmallSp" />

    </RelativeLayout>
         