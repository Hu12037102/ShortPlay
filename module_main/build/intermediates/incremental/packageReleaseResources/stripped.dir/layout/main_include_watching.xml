<?xml version="1.0" encoding="utf-8"?>

                                                              
                                                       
                                          

    

           

    <RelativeLayout
        android:id="@+id/rl_watching"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:visibility="gone"
        tools:visibility="visible"
        android:background="@color/color_1111"
         android:tag="layout/main_include_watching_0" xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" tools:ignore="MissingDefaultResource">

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="@color/white_ff_30"
            />
        <com.ruffian.library.widget.RImageView
            android:id="@+id/watching_iv"
            android:layout_width="40dp"
            android:layout_height="53dp"
            app:corner_radius="3dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="18dp"
            />

        <TextView
            android:id="@+id/watching_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="13sp"
            android:maxLines="1"
            android:ellipsize="end"
            android:fontFamily="@font/sofiapro_medium"
            android:layout_marginEnd="130dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="69dp"
            />
        <TextView
            android:id="@+id/watching_episode_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_999999"
            android:textSize="12sp"
            android:layout_marginTop="33dp"
            android:fontFamily="@font/sofiapro_medium"
            android:layout_marginStart="69dp"
            />

        <com.ruffian.library.widget.RRelativeLayout
            android:layout_width="70dp"
            android:layout_height="27dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            app:corner_radius="16dp"
            app:background_normal="@color/red_056"
            android:layout_marginEnd="55dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/play_content"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/sofiapro_bold"
                android:gravity="center"
                android:layout_marginStart="30dp"
                />

            <ImageView
                android:layout_width="8dp"
                android:layout_height="10dp"
                android:src="@drawable/home_play_logo"
                android:layout_marginStart="17dp"
                android:layout_centerVertical="true"
                />

        </com.ruffian.library.widget.RRelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_close_watch"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            >
            <ImageView
                android:layout_width="9dp"
                android:layout_height="9dp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:src="@drawable/episode_close_logo"
                />
            
            
        </RelativeLayout>


    </RelativeLayout>
         