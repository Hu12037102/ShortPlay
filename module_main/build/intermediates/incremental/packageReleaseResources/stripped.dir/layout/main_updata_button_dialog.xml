<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/updata_button_ll"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_alignParentBottom="true"
    android:layout_marginBottom="23dp"
    android:orientation="horizontal">


    <com.ruffian.library.widget.RTextView
        android:id="@+id/updata_cancel_dialog"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginStart="23dp"
        app:background_normal="@color/black_10"
        android:layout_weight="1"
        android:gravity="center"
        android:text="@string/play_cancel"
        android:textColor="@color/red_185"
        android:textSize="14sp"
        android:fontFamily="@font/sofiapro_medium"
        app:corner_radius="20dp" />

    <com.ruffian.library.widget.RTextView
        android:id="@+id/updata_button_dialog"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_weight="1"
        app:background_normal="@array/array_l_r"
        android:textSize="17sp"
        android:textColor="@color/white"
        android:text="@string/main_update"
        app:corner_radius="20dp"
        app:gradient_orientation="LEFT_RIGHT"
        app:gradient_type="linear"
        android:fontFamily="@font/sofiapro_medium"
        android:layout_marginStart="23dp"
        android:layout_marginEnd="23dp"
        android:gravity="center"
        />




</LinearLayout>