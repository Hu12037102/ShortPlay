<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/overall_situation_rl"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <com.ruffian.library.widget.RRelativeLayout
        android:id="@+id/rr_lock"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        app:background_normal="@drawable/play_unclock_bg"
        app:corner_radius_top_left="15dp"
        app:corner_radius_top_right="15dp"
        app:gradient_orientation="TOP_BOTTOM"
        app:gradient_type="linear">


        <com.ruffian.library.widget.RView
            android:layout_width="40dp"
            android:layout_height="4dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="17dp"
            app:background_normal="@color/black_10"
            app:corner_radius="2dp" />


        <TextView
            android:id="@+id/recharge_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="18dp"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/sofiapro_medium"
            android:text="@string/play_unlock_episode"
            android:textColor="@color/black_a1"
            android:textSize="18sp" />


        <RelativeLayout
            android:id="@+id/rl_unlock"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true">

            <ImageView
                android:id="@+id/close_iv"
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:src="@drawable/insufficient_colse_dialog" />

        </RelativeLayout>


        <TextView
            android:id="@+id/tv_bonus_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/recharge_title"
            android:layout_marginTop="26dp"
            android:layout_toStartOf="@+id/tv_bonus_content"
            android:fontFamily="@font/sofiapro_medium"
            android:text="@string/play_bonus_title"
            android:textColor="@color/black_30"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_bonus_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/recharge_title"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="2dp"
            android:layout_marginTop="26dp"
            android:layout_marginEnd="15dp"
            android:fontFamily="@font/sofiapro_medium"
            android:textColor="@color/black"
            android:textSize="16sp"
            tools:text="100" />


        <View
            android:id="@+id/line1"
            android:layout_width="1dp"
            android:layout_height="12dp"
            android:layout_below="@+id/recharge_title"
            android:layout_marginStart="6dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="6dp"
            android:layout_toStartOf="@id/tv_bonus_title"
            android:background="@color/black_fb2" />


        <TextView
            android:id="@+id/recharge_balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/recharge_title"
            android:layout_marginStart="18dp"
            android:layout_marginTop="26dp"
            android:layout_toStartOf="@+id/recharge_balance_coins"
            android:fontFamily="@font/sofiapro_medium"
            android:text="@string/play_coins_title"
            android:textColor="@color/color_999999"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/recharge_balance_coins"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/recharge_title"
            android:layout_marginStart="2dp"
            android:layout_marginTop="26dp"
            android:layout_toStartOf="@id/line1"
            android:fontFamily="@font/sofiapro_medium"
            android:textColor="@color/black"
            android:textSize="16sp"
            tools:text="100" />


        <TextView
            android:id="@+id/recharge_costs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/recharge_title"
            android:layout_marginStart="18dp"
            android:layout_marginTop="26dp"
            android:fontFamily="@font/sofiapro_medium"
            android:text="@string/play_costs"
            android:textColor="@color/color_999999"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/recharge_costs_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/recharge_title"
            android:layout_marginStart="2dp"
            android:layout_marginTop="26dp"
            android:layout_toEndOf="@+id/recharge_costs"
            android:fontFamily="@font/sofiapro_medium"
            android:textColor="@color/black"
            android:textSize="16sp" />


        <LinearLayout
            android:id="@+id/episode_type_rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/recharge_costs"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="18dp"
            android:orientation="vertical">

            <com.ruffian.library.widget.RRelativeLayout
                android:id="@+id/red_rl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                app:background_normal="@color/red_056"
                app:corner_radius="20dp">

                <TextView
                    android:id="@+id/red_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:drawablePadding="9dp"
                    android:gravity="center"
                    android:text="@string/play_now_unclock"
                    android:textColor="@color/white"
                    android:fontFamily="@font/sofiapro_medium"
                    android:textSize="16sp" />

            </com.ruffian.library.widget.RRelativeLayout>


            <com.ruffian.library.widget.RRelativeLayout
                android:id="@+id/black_rl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                app:border_color_normal="@color/orange_a6"
                app:border_width_normal="1.33dp"
                app:corner_radius="20dp">

                <TextView
                    android:id="@+id/black_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:drawablePadding="9dp"
                    android:gravity="center"
                    android:text="@string/play_ad_unclock"
                    android:textColor="@color/black_00"
                    android:fontFamily="@font/sofiapro_medium"
                    android:textSize="16sp" />

            </com.ruffian.library.widget.RRelativeLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/hand_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="82dp"
            android:layout_marginEnd="25dp"
            android:background="@drawable/finger_loading"
            android:visibility="gone" />


        <RelativeLayout
            android:id="@+id/rl_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/episode_type_rl"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp">

            <TextView
                android:id="@+id/rcharge_auto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="3dp"
                android:layout_marginBottom="20dp"
                android:layout_toEndOf="@+id/check_isBox"
                android:text="@string/play_auto_unlock"
                android:textColor="@color/black_12"
                android:fontFamily="@font/sofiapro_medium"
                android:textSize="13sp"
                tools:ignore="SmallSp" />

            <ImageView
                android:id="@+id/check_isBox"
                android:layout_width="11dp"
                android:layout_height="11dp"
                android:layout_marginTop="14dp"
                android:src="@drawable/play_icon_select" />
        </RelativeLayout>

    </com.ruffian.library.widget.RRelativeLayout>
</RelativeLayout>