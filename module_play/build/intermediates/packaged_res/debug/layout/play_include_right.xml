<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="66.33dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="right|bottom"
    android:id="@+id/include_right"
    android:layout_height="wrap_content"
    android:layout_marginBottom="125dp"
    tools:ignore="RtlHardcoded">



    <include
        android:id="@+id/flash_include"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        layout="@layout/play_include_flash"
        android:visibility="invisible"
        android:layout_centerHorizontal="true"
        />

<!--    <include-->
<!--        android:id="@+id/flash_include"-->
<!--        android:layout_width="52dp"-->
<!--        android:layout_height="wrap_content"-->
<!--        layout="@layout/play_include_flash_christmas"-->
<!--        android:visibility="invisible"-->
<!--        android:layout_centerHorizontal="true"-->
<!--        />-->


    <RelativeLayout
        android:id="@+id/play_free_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/flash_include"
        >

        <ImageView
            android:id="@+id/play_gift"
            android:layout_width="30dp"
            android:layout_height="32dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/home_free" />

        <com.ruffian.library.widget.RTextView
            android:id="@+id/play_gift_close"
            android:layout_width="30dp"
            android:layout_height="16dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:textColor="@color/white"
            android:textSize="11sp"
            app:corner_radius="6dp"
            android:gravity="center"
            android:text="99"
            android:visibility="gone"
            android:layout_marginBottom="31dp"
            app:background_normal="@color/red_056"
            android:layout_alignParentEnd="true" />

        <TextView
            android:id="@+id/play_free_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/play_gift"
            android:layout_centerInParent="true"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:text="@string/me_bonus"
            android:textColor="@color/color_fdc72f"
            android:textSize="11sp" />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/play_love_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/play_free_rl">
        <ImageView
            android:id="@+id/play_love_iv"
            android:layout_width="32dp"
            android:layout_height="30dp"
            android:src="@drawable/play_love_default"
            android:layout_marginStart="9dp"
            android:layout_centerHorizontal="true"
            />

        <TextView
            android:id="@+id/play_love_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/play_love_iv"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:textSize="12sp"
            android:textColor="@color/white"
            />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/play_help_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/play_love_rl"
        android:layout_marginTop="20dp"
        >

    <ImageView
        android:id="@+id/play_help_iv"
        android:layout_width="32dp"
        android:layout_height="30dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/play_collect"
        android:layout_marginStart="9dp"/>

    <TextView
        android:id="@+id/play_help_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/play_help_iv"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:textSize="12sp"
        android:textColor="@color/white"
        />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/play_shar_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/play_help_rl"
        android:layout_marginTop="20dp">

    <ImageView
        android:id="@+id/play_share_iv"
        android:layout_width="32dp"
        android:layout_height="30dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/play_share"
        android:layout_marginStart="9dp"/>

    <TextView
        android:id="@+id/play_share_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/play_share_iv"
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true"
        android:text="@string/play_share"
        android:gravity="center"
        android:textSize="12sp"
        android:textColor="@color/white"
        />

    </RelativeLayout>


</RelativeLayout>