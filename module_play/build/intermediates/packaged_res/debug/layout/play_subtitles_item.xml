<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">



    <com.ruffian.library.widget.RTextView
        android:id="@+id/play_subtitles_tv"
        android:layout_width="70dp"
        android:layout_height="30dp"
        android:text="@string/play_360p"
        app:corner_radius="6dp"
        app:text_color_normal="@color/white_ff_99"
        android:gravity="center"
        app:border_color_normal="@color/white_ff_30"
        app:border_width_normal="0.33dp"
        app:gradient_type="linear"
        app:gradient_orientation="LEFT_RIGHT"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>