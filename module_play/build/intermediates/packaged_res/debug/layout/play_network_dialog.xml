<?xml version="1.0" encoding="utf-8"?>
<com.ruffian.library.widget.RRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="283dp"
    android:layout_height="172dp"
    android:layout_gravity="center"
    app:background_normal="@color/black_22"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:ignore="MissingDefaultResource">
    <TextView
        android:id="@+id/content_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:textSize="15sp"
        android:text="@string/play_wifi_switch"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:textColor="@color/white"
        android:gravity="center" />


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/white_10"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="48dp"

        />

    <View
        android:id="@+id/view"
        android:layout_width="1dp"
        android:layout_height="48dp"
        android:background="@color/white_10"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />
    <TextView
        android:id="@+id/cancel"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="@string/play_cancel"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/view"
        android:textSize="12sp"
        android:textColor="@color/white_ff_99"
        />
    <TextView
        android:id="@+id/remove"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="@string/play_continue"
        android:gravity="center"
        android:textColor="@color/red_ff"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/view"
        android:textSize="12sp" />
</com.ruffian.library.widget.RRelativeLayout>