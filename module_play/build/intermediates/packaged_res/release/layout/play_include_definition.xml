<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <TextView
        android:id="@+id/play_quality"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/play_quality_cc"
        android:text="@string/play_quality"
        android:textColor="@color/white_ff_80"
        android:drawablePadding="8dp"
        android:textSize="12sp"
        tools:ignore="UseCompatTextViewDrawableXml" />

    <LinearLayout
        android:id="@+id/play_subtitles_rg"
        android:layout_width="match_parent"
        android:layout_below="@id/play_quality"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <com.ruffian.library.widget.RTextView
            android:id="@+id/play_360_cc"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:text="@string/play_360p"
            app:corner_radius="6dp"
            android:gravity="center"
            app:text_color_normal="@color/white_ff_99"
            android:layout_marginTop="12dp"
            app:background_normal="@color/white_ff_1a"
            app:border_color_normal="@color/white_ff_30"
            app:border_width_normal="0.33dp"
            app:gradient_type="linear"
            app:gradient_orientation="LEFT_RIGHT"
            />

        <com.ruffian.library.widget.RTextView
            android:id="@+id/play_720_cc"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:text="@string/play_720p"
            app:corner_radius="6dp"
            android:gravity="center"
            app:text_color_normal="@color/white_ff_99"
            android:layout_marginTop="12dp"
            app:background_normal="@color/white_ff_1a"
            app:border_color_normal="@color/white_ff_30"
            app:border_width_normal="0.33dp"
            app:gradient_type="linear"
            android:layout_marginStart="10dp"
            app:gradient_orientation="LEFT_RIGHT"/>

        <com.ruffian.library.widget.RTextView
            android:id="@+id/play_1080_cc"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:text="@string/play_1080p"
            app:corner_radius="6dp"
            android:layout_marginTop="12dp"
            android:gravity="center"
            app:text_color_normal="@color/white_ff_99"
            android:layout_marginStart="10dp"
            app:background_normal="@color/white_ff_1a"
            app:border_color_normal="@color/white_ff_30"
            app:border_width_normal="0.33dp"
            app:gradient_type="linear"
            app:gradient_orientation="LEFT_RIGHT"
            tools:ignore="DuplicateIds" />


    </LinearLayout>




</RelativeLayout>