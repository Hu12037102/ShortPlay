<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/introduce_name"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:textSize="18sp"
        android:ellipsize="end"
        android:lines="1"
        android:textColor="@color/white" />

    <cn.carbs.android.expandabletextview.library.ExpandableTextView
        android:id="@+id/introduce_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/introduce_name"
        android:textSize="12sp"
        android:layout_marginTop="6dp"
        app:etv_ToExpandHint="@string/play_more"
        app:etv_ToShrinkHint="@string/play_hide"
        app:etv_ToExpandHintColor="@color/white_ff_70"
        app:etv_ToShrinkHintColor="@color/white_ff_70"
        android:textColor="@color/white" />



</RelativeLayout>