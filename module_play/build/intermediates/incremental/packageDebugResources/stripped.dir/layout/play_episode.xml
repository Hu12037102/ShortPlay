<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/episode_rl"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    xmlns:app="http://schemas.android.com/apk/res-auto">

   <com.ruffian.library.widget.RLinearLayout
       android:id="@+id/rl_episode"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       app:corner_radius_top_left="15dp"
       app:corner_radius_top_right="15dp"
       app:background_normal="@color/black_00"
       android:layout_alignParentBottom="true"
       android:orientation="vertical"
       >

    <com.ruffian.library.widget.RView
        android:layout_width="40dp"
        android:layout_height="5dp"
        app:background_normal="@color/white_ff_30"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        app:corner_radius="2dp"/>

   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="40dp"
       android:layout_marginStart="18dp">

       <TextView
           android:id="@+id/episode_list_tv"
           android:layout_width="wrap_content"
           android:layout_height="match_parent"
           android:text="@string/play_episode_list"
           android:textSize="15sp"
           android:gravity="center_vertical"
           android:fontFamily="@font/sofiapro_medium"
           android:textColor="@color/white"
           />

       <TextView
           android:id="@+id/tv_updated"
           android:layout_width="wrap_content"
           android:layout_height="match_parent"
           android:layout_toEndOf="@+id/episode_list_tv"
           android:text="@string/play_episode_updated"
           android:gravity="center_vertical"
           android:textColor="@color/white"
           android:textSize="15sp"
           android:fontFamily="@font/sofiapro_medium"
           android:layout_marginStart="5dp"
           />
       <RelativeLayout
           android:id="@+id/close_iv"
           android:layout_width="50dp"
           android:layout_height="50dp"
           android:layout_alignParentEnd="true"
           >

           <ImageView
               android:layout_width="12dp"
               android:layout_height="12dp"
               android:layout_centerHorizontal="true"
               android:layout_centerVertical="true"
               android:src="@drawable/episode_close_logo"
               />

       </RelativeLayout>

   </RelativeLayout>

       <TextView
           android:id="@+id/update_content"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginEnd="100dp"
           android:textSize="13sp"
           android:maxLines="3"
           android:ellipsize="end"
           android:layout_marginStart="18dp"
           android:fontFamily="@font/sofiapro_medium"
           android:textColor="@color/white_ff_99"
           android:visibility="gone"
           />



   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_marginTop="10dp"
       android:layout_height="30dp">

       <com.google.android.material.tabs.TabLayout
           android:id="@+id/tab_layout"
           android:layout_width="wrap_content"
           android:layout_height="match_parent"
           android:layout_alignParentStart="true"
           app:tabIndicatorColor="@color/red_056"
           app:tabSelectedTextColor="@color/white"
           app:tabTextColor="@color/white_ff_99"
           app:tabIndicatorHeight="4dp"
           app:tabIndicatorFullWidth="false"
           app:tabMinWidth="100dp"
           app:tabMaxWidth="100dp"
           app:tabMode="fixed"
           />


       <TextView
           android:id="@+id/episode"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignParentEnd="true"
           android:layout_marginEnd="18dp"
           android:text="@string/play_episode_"
           android:gravity="center"
           android:visibility="gone"
           android:textColor="@color/white_ff_99"
           android:layout_marginStart="10dp"
           />

   </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/white_ff_1a"
        android:layout_marginTop="5dp"
        />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/episode_vp"
        android:layout_width="match_parent"
        android:layout_margin="18dp"
        android:layout_height="270dp"
        android:orientation="horizontal"/>

   </com.ruffian.library.widget.RLinearLayout>
</RelativeLayout>