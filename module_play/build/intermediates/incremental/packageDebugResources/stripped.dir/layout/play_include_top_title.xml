<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:orientation="horizontal"
    android:id="@+id/include_top"
    tools:ignore="MissingDefaultResource">


   <RelativeLayout
       android:id="@+id/play_top_return_rl"
       android:layout_width="wrap_content"
       android:layout_height="match_parent"
       android:visibility="invisible">

       <ImageView
           android:id="@+id/play_top_return"
           android:layout_width="28dp"
           android:layout_height="28dp"
           android:layout_marginTop="2dp"
           android:src="@drawable/return_logo"
           android:layout_marginStart="18dp"/>

   </RelativeLayout>


    <TextView
        android:id="@+id/play_top_title"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:layout_toEndOf="@+id/play_top_return_rl"
        android:visibility="invisible"
        android:fontFamily="@font/sofiapro_bold"
        android:gravity="center_vertical"

        />

    <TextView
        android:id="@+id/play_top_num"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:layout_toEndOf="@+id/play_top_title"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="5dp"
        android:ellipsize="end"
        android:lines="1"
        android:fontFamily="@font/sofiapro_bold"
        android:visibility="invisible"
        android:gravity="center_vertical"
        />


    <ImageView
        android:id="@+id/play_iv_cc"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:src="@drawable/play_no_cc"
        android:layout_marginEnd="60dp"
        android:visibility="gone"
        android:layout_alignParentEnd="true"
        />


    <ImageView
        android:id="@+id/play_setting"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:src="@drawable/play_setting"
        android:layout_alignParentEnd="true"
        android:visibility="gone"
        android:layout_marginEnd="20dp"
        />


</RelativeLayout>