<?xml version="1.0" encoding="utf-8"?>
<com.ruffian.library.widget.RRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/episode_rr"
    android:layout_width="match_parent"
    android:layout_height="88dp"
    app:corner_radius="6dp"
    android:layout_marginEnd="12dp"
    app:border_width_normal="1.33dp"
    app:border_color_normal="@color/orange_a6"
    app:background_normal="@color/white"
    android:layout_marginBottom="10dp"
    >

        <com.ruffian.library.widget.RTextView
            android:id="@+id/recharge_flag"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_below="@+id/recharge_title"
            app:gradient_orientation="LEFT_RIGHT"
            app:gradient_type="linear"
            app:corner_radius_top_right="6dp"
            app:corner_radius_bottom_left="6dp"
            android:layout_alignParentEnd="true"
            app:background_normal="@color/orange_f3"
            android:textSize="13sp"
            android:fontFamily="@font/sofiapro_medium"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:paddingBottom="2.33dp"
            android:textColor="@color/white"
            android:gravity="center"
            tools:ignore="SmallSp" />


        <ImageView
            android:id="@+id/episode_iv"
            android:layout_width="53dp"
            android:layout_height="37dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="14dp"
            android:src="@drawable/play_episode"/>

        <TextView
            android:id="@+id/recharge_episode_num"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_toEndOf="@id/episode_iv"
            android:layout_marginStart="12dp"
            android:textSize="25sp"
            android:fontFamily="@font/sofiapro_bold"
            android:textColor="@color/black_a1"
            android:layout_marginTop="14dp"/>
        <TextView
            android:id="@+id/recharge_episode_original"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/episode_iv"
            android:layout_marginStart="12dp"
            android:textSize="15sp"
            android:fontFamily="@font/sofiapro_medium"
            android:layout_below="@+id/recharge_episode_num"
            android:textColor="@color/orange_f3"
            />

        <TextView
            android:id="@+id/recharge_episode_coins"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="25dp"
            android:layout_toEndOf="@id/recharge_episode_num"
            android:fontFamily="@font/sofiapro_medium"
            android:text="@string/play_coins"
            android:textColor="@color/color_999999"
            android:textSize="15sp"
            tools:ignore="SmallSp" />


        <com.ruffian.library.widget.RTextView
            android:id="@+id/discounted_price_show"
            android:layout_width="100dp"
            android:layout_height="35dp"
            app:corner_radius="20dp"
            app:background_normal="@color/red_056"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="27dp"
            android:textSize="17sp"
            android:fontFamily="@font/sofiapro_medium"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_marginEnd="14dp"/>



</com.ruffian.library.widget.RRelativeLayout>