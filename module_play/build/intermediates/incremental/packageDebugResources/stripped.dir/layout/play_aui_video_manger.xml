<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:ignore="MissingDefaultResource">


    <ImageView
        android:id="@+id/thumbImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        />


    <androidx.appcompat.widget.AppCompatSeekBar
        android:id="@+id/seekbar"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:max="100"
        android:maxHeight="@dimen/dp_2"
        android:minHeight="@dimen/dp_2"
        android:paddingStart="0dp"
        android:paddingEnd="0dp"
        android:progressDrawable="@drawable/play_video_progress"
        android:thumb="@drawable/play_seek_thumb"
        android:layout_marginBottom="50dp"
        android:visibility="invisible"
        android:layout_alignParentBottom="true" />


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginBottom="30dp"
        android:layout_above="@+id/seekbar"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/current"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:gravity="right"
            android:layout_marginEnd="15dp"
            android:visibility="invisible"
            android:textSize="24sp"
            android:textColor="#ffffff"
            tools:ignore="RtlHardcoded" />
        <TextView
            android:id="@+id/tv_line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="/"
            android:textSize="24sp"
            android:visibility="gone"
            android:textColor="#ffffff"
            />

        <TextView
            android:id="@+id/total"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:textSize="24sp"
            android:visibility="invisible"
            android:layout_marginStart="15dp"
            android:textColor="#99FFFFFF" />
    </LinearLayout>






    <RelativeLayout
        android:id="@+id/button_episode_rl"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/black_00"
        android:layout_alignParentBottom="true">

        <ImageView
            android:id="@+id/album_iv"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/play_album"
            android:layout_marginTop="19dp"
            android:layout_marginStart="18dp"
            />

        <TextView
            android:id="@+id/episode_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/album_iv"
            android:layout_marginStart="8dp"
            android:textSize="18sp"
            android:maxLines="1"
            android:fontFamily="@font/sofiapro_medium"
            android:ellipsize="end"
            android:layout_marginEnd="90dp"
            android:textColor="@color/white_ff_80"
            />

        <TextView
            android:id="@+id/eps_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:layout_marginTop="17dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="35dp"
            android:textColor="@color/white_ff_99"
            android:fontFamily="@font/sofiapro_medium"
            />

        <ImageView
            android:id="@+id/right_logo"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:src="@drawable/play_right_white_new"
            android:layout_marginTop="22dp"
            android:layout_marginStart="18dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="15dp" />

    </RelativeLayout>


    <ImageView
        android:id="@+id/loading_iv"
        android:layout_width="@dimen/loading_width"
        android:layout_height="@dimen/loading_height"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:visibility="invisible"
        android:background="@drawable/loading"/>


    <ImageView
        android:id="@+id/start"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:src="@mipmap/play_stop"
        android:visibility="invisible"
        android:layout_gravity="center_vertical" />



    <!--top设置-->
    <include
        android:layout_width="match_parent"
        android:layout_height="28dp"
        android:layout_marginTop="10dp"
        layout="@layout/play_include_top_title"/>

    <!--点赞/收藏/分享/礼物-->
    <include
        android:layout_width="66.67dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="125dp"
        layout="@layout/play_include_right"/>

    <ViewStub
        android:id="@+id/view_stub_subtitles"
        android:layout_width="match_parent"
        android:layout_height="227dp"
        android:layout_alignParentBottom="true"
        android:visibility="gone"
        android:layout="@layout/play_view_stub_subtitles"
        />

</RelativeLayout>
