<?xml version="1.0" encoding="utf-8"?>
<com.ruffian.library.widget.RRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/rrll"
    android:layout_height="227dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="bottom"
    app:corner_radius_top_left="15dp"
    app:corner_radius_top_right="15dp"
    app:background_normal="@color/black_00"
    android:orientation="vertical">


    <com.ruffian.library.widget.RView
        android:id="@+id/view"
        android:layout_width="40dp"
        android:layout_height="5dp"
        app:background_normal="@color/white_ff_30"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="17dp"
        app:corner_radius="2dp"/>


    <include
        android:id="@+id/include_cc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="18dp"
        android:layout_below="@+id/view"
        layout="@layout/play_include_definition"/>



    <include layout="@layout/play_include_subtiles"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="18dp"
        android:layout_marginTop="24dp"
        android:layout_below="@+id/include_cc"
        />


