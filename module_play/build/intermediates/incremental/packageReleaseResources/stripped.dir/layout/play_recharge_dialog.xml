<?xml version="1.0" encoding="utf-8"?>
<com.ruffian.library.widget.RRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="283dp"
    android:layout_height="184dp"
    android:layout_gravity="center"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:ignore="MissingDefaultResource">

        <com.ruffian.library.widget.RRelativeLayout
            android:layout_width="283dp"
            app:background_normal="@color/black_22"
            android:layout_height="135dp">


        <TextView
            android:id="@+id/content_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="24dp"
            android:textSize="15sp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:textColor="@color/white"
            android:gravity="center"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/white_10"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="48dp"
            />

        <View
            android:id="@+id/view"
            android:layout_width="1dp"
            android:layout_height="48dp"
            android:background="@color/white_10"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />
        <TextView
            android:id="@+id/cancel"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="@string/play_cancel"
            android:gravity="center"
            android:layout_alignParentBottom="true"
            android:layout_toStartOf="@+id/view"
            android:textSize="12sp"
            android:textColor="@color/white_ff_99"
            />
        <TextView
            android:id="@+id/remove"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="@string/play_unlock"
            android:gravity="center"
            android:layout_alignParentBottom="true"
            android:textColor="@color/red_ff"
            android:layout_toEndOf="@+id/view"
            android:textSize="12sp" />

        </com.ruffian.library.widget.RRelativeLayout>

        <TextView
            android:id="@+id/rcharge_auto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="54dp"
            android:layout_marginTop="5dp"
            android:textSize="12sp"
            android:layout_marginBottom="16dp"
            android:textColor="@color/white"
            android:text="@string/play_auto_unlock"
            android:gravity="center" />
        <ImageView
            android:id="@+id/check_isBox_dialog"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginEnd="4dp"
            android:layout_alignParentBottom="true"
            android:layout_toStartOf="@+id/rcharge_auto"
            android:layout_marginBottom="10dp"
            android:src="@drawable/play_icon_select"
            />

</com.ruffian.library.widget.RRelativeLayout>