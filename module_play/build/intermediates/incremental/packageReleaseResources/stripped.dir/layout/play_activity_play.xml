<?xml version="1.0" encoding="utf-8"?>

                                                               

    

           

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" android:tag="layout/play_activity_play_0" xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">



        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/play_vp"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />


        <ImageView
            android:id="@+id/main_loading_iv"
            android:layout_width="@dimen/loading_width"
            android:layout_height="@dimen/loading_height"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:visibility="gone"
            android:background="@drawable/loading" />

        <ImageView
            android:id="@+id/play_top_return"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/return_logo"
            android:visibility="gone"
            android:layout_marginTop="20dp"
            android:layout_marginStart="18dp"/>

        <ViewStub
            android:id="@+id/no_network_view_stub"
            android:layout_width="match_parent"
            android:layout_height="196dp"
            android:layout_marginTop="13dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout="@layout/play_no_network"
            />

    </RelativeLayout>
         