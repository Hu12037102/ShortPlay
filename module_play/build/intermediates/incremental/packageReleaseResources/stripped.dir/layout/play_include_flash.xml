<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_flash"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">



        <ImageView
            android:id="@+id/flash_iv"
            android:layout_width="45dp"
            android:layout_height="48dp"
            android:layout_marginStart="2dp"
            android:layout_marginTop="50dp"
            android:src="@drawable/home_flash_logo" />


        <RelativeLayout
            android:id="@+id/rl_flash_close"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="30dp"
            android:visibility="gone">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:src="@drawable/main_flash_close" />

        </RelativeLayout>

        <TextView
            android:id="@+id/flash_discount_tv"
            android:layout_width="51dp"
            android:layout_height="16dp"
            android:layout_below="@+id/flash_iv"
            android:background="@drawable/main_flash_bg"
            android:gravity="center"
            android:text="99%OFF"
            android:textColor="@color/color_3f00"
            android:textSize="9sp"
            android:textStyle="bold"
            tools:ignore="SmallSp" />

</RelativeLayout>