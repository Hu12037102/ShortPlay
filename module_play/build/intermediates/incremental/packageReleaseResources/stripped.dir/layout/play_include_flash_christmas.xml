<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:ignore="MissingDefaultResource">

    <ImageView
        android:id="@+id/flash_iv"
        android:layout_width="50.33dp"
        android:layout_height="63dp"
        android:layout_marginStart="2dp"

        android:src="@drawable/home_flash_christmas_sale_player_logo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />
    <TextView
        android:id="@+id/proportion_discount_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:fontFamily="@font/sofiapro_bold"
        android:textColor="@color/orange_b8"
        android:textSize="18dp"
        android:visibility="gone"
        tools:visibility="visible"
        app:layout_constraintEnd_toEndOf="@+id/flash_iv"
        app:layout_constraintStart_toStartOf="@+id/flash_iv"
        app:layout_constraintTop_toTopOf="@+id/flash_iv"
        tools:text="99%" />

    <TextView
        android:id="@+id/tv_off"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16.67dp"
        android:fontFamily="@font/sofiapro_bold"
        android:textColor="@color/orange_b8"
        android:textSize="10dp"
        android:visibility="gone"
        tools:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/flash_iv"
        app:layout_constraintEnd_toEndOf="@+id/flash_iv"
        app:layout_constraintStart_toStartOf="@+id/flash_iv"
        android:text="@string/play_subtitle_off" />
</androidx.constraintlayout.widget.ConstraintLayout>