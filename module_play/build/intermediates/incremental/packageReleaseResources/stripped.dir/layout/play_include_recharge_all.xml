<?xml version="1.0" encoding="utf-8"?>
<com.ruffian.library.widget.RRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="296dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:corner_radius_top_left="15dp"
    app:corner_radius_top_right="15dp"
    app:background_normal="@array/array_recharge"
    app:gradient_type="linear"
    android:layout_gravity="bottom"
    app:gradient_orientation="TOP_BOTTOM">

    <TextView
        android:id="@+id/recharge_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/play_recharge_unlock"
        android:textSize="16sp"
        android:textColor="@color/white_ff_99"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        />
    <ImageView
        android:id="@+id/recharge_close"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:src="@drawable/episode_close_logo"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="19dp" />


    <View
        android:id="@+id/recharge_view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/white_ff_1a"
        android:layout_below="@+id/recharge_title"
        android:layout_marginTop="10dp" />

    <com.ruffian.library.widget.RTextView
        android:id="@+id/recharge_discount_flag"
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:layout_below="@+id/recharge_view"
        app:corner_radius_bottom_right="6dp"
        app:gradient_orientation="LEFT_RIGHT"
        app:gradient_type="linear"
        app:background_normal="@array/array_l_r"
        android:textSize="10sp"
        android:textColor="@color/white"
        android:gravity="center"/>


    <TextView
        android:id="@+id/recharge_only"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/recharge_discount_flag"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:textSize="22sp"
        android:gravity="center"
        android:textColor="@color/white"
        />

    <TextView
        android:id="@+id/recharge_instantly"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/recharge_only"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp"
        android:textColor="@color/white"
        android:gravity="center"
        />

    <com.ruffian.library.widget.RTextView
        android:id="@+id/recharge_play_now"
        android:layout_width="140dp"
        android:layout_height="40dp"
        android:layout_below="@+id/recharge_instantly"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="@string/play_recharge_pay_now"
        android:textColor="@color/black_00"
        android:textSize="16sp"
        app:corner_radius="20dp"
        app:background_normal="@color/orange_25"
        android:gravity="center"/>


    <TextView
        android:id="@+id/recharge_discount_money"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/recharge_play_now"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:textSize="12sp"
        android:textColor="@color/white_40"/>

</com.ruffian.library.widget.RRelativeLayout>