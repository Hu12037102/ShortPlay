<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/aiv_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/atv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/size_18dp"
        android:layout_marginEnd="@dimen/size_60dp"
        android:layout_marginBottom="@dimen/size_14dp"
        android:textColor="@color/color_White"
        android:textSize="@dimen/size_16sp"
        app:fontFamily="@font/sofia_pro_medium"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:ignore="SpUsage" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/atv_flag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/color_White"
        android:textSize="11sp"
        app:fontFamily="@font/sofia_pro_bold"
        app:layout_constrainedWidth="true"
        app:layout_constraintBottom_toTopOf="@id/atv_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_min="@dimen/size_18dp"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="@id/atv_content"
        app:layout_constraintWidth_min="@dimen/size_40dp" />

</androidx.constraintlayout.widget.ConstraintLayout>