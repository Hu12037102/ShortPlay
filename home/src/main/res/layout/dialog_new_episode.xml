<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_400dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@mipmap/icon_new_episode_background" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/aiv_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_8dp"
            android:layout_marginEnd="@dimen/size_8dp"
            android:padding="@dimen/size_10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@mipmap/icon_new_episode_close" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_content"
            android:layout_width="@dimen/size_95dp"
            android:layout_height="@dimen/size_127dp"
            android:layout_marginStart="@dimen/size_18dp"
            android:layout_marginTop="@dimen/size_32dp"
            app:cardBackgroundColor="@color/color_White"
            app:cardCornerRadius="@dimen/size_6dp"
            app:cardElevation="@dimen/size_0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/aiv_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </androidx.cardview.widget.CardView>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/atv_title"
            android:layout_width="@dimen/size_0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/size_16dp"
            android:layout_marginEnd="@dimen/size_50dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@color/color_Black"
            android:textSize="@dimen/size_19sp"
            app:fontFamily="@font/sofia_pro_bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/cv_content"
            app:layout_constraintTop_toTopOf="@id/cv_content"
            tools:ignore="SpUsage"
            tools:text="OMG" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/atv_desc"
            android:layout_width="@dimen/size_0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_20dp"
            android:layout_marginEnd="@dimen/size_18dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/color_FF999999"
            android:textSize="@dimen/size_13sp"
            app:fontFamily="@font/sofia_pro_medium"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/atv_title"
            app:layout_constraintTop_toBottomOf="@id/atv_title"
            tools:ignore="SpUsage"
            tools:text="Fake/Love" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/atv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/size_8dp"
            android:paddingTop="@dimen/size_2dp"
            android:paddingEnd="@dimen/size_8dp"
            android:paddingBottom="@dimen/size_2dp"
            android:singleLine="true"
            android:textColor="@color/color_White"
            android:textSize="@dimen/size_13sp"
            app:fontFamily="@font/sofia_pro_medium"
            app:layout_constrainedWidth="true"
            app:layout_constraintBottom_toBottomOf="@id/cv_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toStartOf="@id/atv_title"
            tools:ignore="SpUsage" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/atv_content"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_0dp"
            android:layout_marginStart="@dimen/size_18dp"
            android:layout_marginTop="@dimen/size_20dp"
            android:layout_marginEnd="@dimen/size_18dp"
            android:layout_marginBottom="@dimen/size_20dp"
            android:lineSpacingExtra="@dimen/size_2dp"
            android:textColor="@color/color_FF2E2E2E"
            android:textSize="@dimen/size_14sp"
            app:fontFamily="@font/sofia_pro_medium"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cv_content"
            tools:ignore="SpUsage" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>