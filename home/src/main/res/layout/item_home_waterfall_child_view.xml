<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/size_4dp"
    android:layout_marginBottom="@dimen/size_20dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_content"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_141dp"
        app:cardBackgroundColor="@color/color_White"
        app:cardCornerRadius="@dimen/size_6dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/aiv_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/atv_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|top"
            android:minWidth="@dimen/size_40dp"
            android:minHeight="@dimen/size_18dp"
            tools:background="@color/color_FF2E2E2E" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/atv_update"
            android:layout_width="84dp"
            android:layout_height="18dp"
            android:layout_gravity="bottom|end"
            android:fontFamily="@font/sofia_pro_medium"
            android:gravity="center"
            android:textColor="@color/color_White"
            android:textSize="11sp" />
    </androidx.cardview.widget.CardView>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/atv_title"
        android:layout_width="@dimen/size_0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_7dp"
        android:textColor="@color/color_FF2E2E2E"
        android:textSize="@dimen/size_14sp"
        app:fontFamily="@font/sofia_pro_medium"
        app:layout_constraintEnd_toEndOf="@id/cv_content"
        app:layout_constraintStart_toStartOf="@id/cv_content"
        app:layout_constraintTop_toBottomOf="@id/cv_content"
        android:maxLines="2"
        android:ellipsize="end"
        tools:ignore="SpUsage" />


</androidx.constraintlayout.widget.ConstraintLayout>